<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.Photos.Headline5"/>
    <TextView
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/TextAppearance.Photos.Body2"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/splash_card"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="24dp"
        support:cardBackgroundColor="@android:color/transparent"
        support:cardCornerRadius="8dp"
        support:layout_constraintBottom_toTopOf="@+id/footer"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/subtitle"
        support:strokeWidth="0dp">
        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/photos_printingskus_common_ui_education_splash_background"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/photosTextColorPrimaryVariant"
                android:gravity="center"
                android:id="@+id/splash_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                support:layout_constraintEnd_toEndOf="parent"
                support:layout_constraintStart_toStartOf="parent"
                support:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.Photos.Subtitle1"/>
            <TextView
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:id="@+id/splash_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                support:layout_constraintEnd_toEndOf="parent"
                support:layout_constraintStart_toStartOf="parent"
                support:layout_constraintTop_toBottomOf="@+id/title"
                style="@style/TextAppearance.Photos.Caption"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <FrameLayout
        android:id="@+id/footer"
        android:background="?attr/colorSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_printingskus_common_ui_education_next_button"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/Widget.Photos.BoldButton"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
