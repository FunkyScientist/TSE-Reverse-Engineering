<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="@dimen/photos_location_edits_ui_recycler_view_row_spacing"
    android:paddingBottom="@dimen/photos_location_edits_ui_recycler_view_row_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/photos_daynight_grey900"
        android:id="@+id/photo_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/photos_daynight_grey600"
        android:id="@+id/photo_location_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"/>
</LinearLayout>
