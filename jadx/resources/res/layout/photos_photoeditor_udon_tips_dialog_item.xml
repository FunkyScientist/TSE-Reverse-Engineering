<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/photos_photoeditor_udon_tips_dialog_item_background"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <ImageView
        android:id="@+id/photos_photoeditor_udon_tips_dialog_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="@color/photos_photoeditor_udon_tips_dialog_secondary_color"
        android:contentDescription="@null"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/photos_photoeditor_udon_tips_dialog_secondary_color"
            android:id="@+id/photos_photoeditor_udon_tips_dialog_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/photos_photoeditor_udon_tips_dialog_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
