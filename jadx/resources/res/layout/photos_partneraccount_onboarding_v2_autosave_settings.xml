<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginHorizontal="24dp"
    app:cardBackgroundColor="?attr/colorPrimaryContainer"
    app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
    app:strokeWidth="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp">
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="?attr/colorOnPrimaryContainer"
            android:contentDescription="@null"
            app:srcCompat="@drawable/quantum_gm_ic_add_photo_alternate_vd_theme_24"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
            <TextView
                android:textAppearance="@style/PartnerSharing.TitleMedium.Active"
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_partneraccount_onboarding_v2_autosave_settings_title"/>
            <RadioButton
                android:textAppearance="@style/PartnerSharing.BodyLarge.Active"
                android:textColor="@null"
                android:id="@+id/settings_option_all"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:button="@null"
                android:text="@string/photos_partneraccount_onboarding_v2_autosave_settings_all"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                android:buttonTint="?attr/photosPrimary"
                android:paddingVertical="12dp"/>
            <RadioButton
                android:textAppearance="@style/PartnerSharing.BodyLarge.Active"
                android:textColor="@null"
                android:id="@+id/settings_option_some_people"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/photos_partneraccount_onboarding_v2_autosave_settings_some_people"
                android:drawableEnd="@drawable/abc_btn_radio_material"
                android:buttonTint="?attr/photosPrimary"
                android:paddingVertical="12dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/faces"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/PartnerSharing.BodyMedium.Active"
                android:id="@+id/face_grouping_off_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photos_partneraccount_onboarding_v2_face_grouping_off_warning"/>
            <RadioButton
                android:textAppearance="@style/PartnerSharing.BodyLarge.Active"
                android:textColor="@null"
                android:id="@+id/settings_option_none"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/photos_partneraccount_onboarding_v2_autosave_settings_none"
                android:drawableEnd="@drawable/abc_btn_radio_material"
                android:buttonTint="?attr/photosPrimary"
                android:paddingVertical="12dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
