<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/tool_tray_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/photos_printingskus_photobook_preview_tool_tray_min_height"
        style="@style/photos_printingskus_photobook_preview_tool_tray">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tool_tray_recycler_view"
            android:paddingTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tool_tray_tab_layout"
            android:background="@color/photos_printingskus_photobook_preview_tool_tray_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="?attr/photosPrimary"
            app:tabPaddingTop="10dp"
            app:tabSelectedTextColor="?attr/photosPrimary"
            style="@style/Widget.Photos.TabLayout.Secondary">
            <com.google.android.material.tabs.TabItem
                android:icon="@null"
                android:text="@string/photos_printingskus_photobook_preview_page_layout_tab"/>
            <com.google.android.material.tabs.TabItem
                android:icon="@null"
                android:text="@string/photos_printingskus_photobook_preview_page_edit_tab"/>
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_printingskus_photobook_preview_tool_tray_min_height"
        layout="@layout/photos_printingskus_photobook_preview_tool_tray_selection_layout"/>
</FrameLayout>
