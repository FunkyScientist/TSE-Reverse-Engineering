<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/photos_stories_actions_menu_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_gravity="center"
        android:id="@+id/photos_stories_actions_menu_loading_spinner"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:visibility="invisible"
        android:layout_width="@dimen/mtrl_progress_circular_size"
        android:layout_height="@dimen/mtrl_progress_circular_size"
        android:indeterminate="true"
        android:paddingVertical="24dp"/>
</LinearLayout>
