<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:textSize="16sp"
        android:textColor="@color/photos_daynight_grey800"
        android:ellipsize="end"
        android:id="@+id/photos_settings_dialog_list_item_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="@color/photos_daynight_grey700"
        android:id="@+id/photos_settings_dialog_list_item_subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
