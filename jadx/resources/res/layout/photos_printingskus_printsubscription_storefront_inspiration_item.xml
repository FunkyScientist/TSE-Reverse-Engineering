<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/photos_printingskus_printsubscription_storefront_inspiration_card_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginHorizontal="10dp">
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingVertical="16dp">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:textColor="?attr/colorOnBackground"
            android:id="@+id/inspiration_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            support:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:id="@+id/inspiration_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            support:layout_constraintTop_toBottomOf="@+id/inspiration_title"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_started_button"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/photos_printingskus_printsubscription_storefront_get_started"
            android:layout_marginHorizontal="8dp"
            support:layout_constraintBottom_toBottomOf="parent"
            support:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.Photos.Button.Borderless"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
