<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/suggested_action_alert_chip"
    android:background="@drawable/photos_suggestedactions_ui_circle_background_light"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/photos_suggestedactions_ui_chip_height"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <ImageView
        android:id="@+id/action_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:tint="@color/gm3_ref_palette_error40"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="end"
        android:padding="2dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/quantum_gm_ic_arrow_forward_vd_24"
        android:scaleType="center"
        android:tint="@color/gm3_sys_color_dark_surface"
        android:contentDescription="@null"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/action_text"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.apps.photos.view.AlternateTextView
        android:textColor="@color/gm3_sys_color_dark_surface_variant"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/action_image"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.Photos.LabelLarge"/>
</android.support.constraint.ConstraintLayout>
