<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">
        <com.google.android.apps.photos.view.RoundedCornerImageView
            android:id="@+id/thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:radius="@dimen/photos_theme_rounded_corner_radius_small"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/spinner"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminateTint="?android:attr/colorBackground"
            style="@style/Widget.AppCompat.ProgressBar"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="?attr/colorOnBackground"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textDirection="locale"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:ellipsize="none"
            android:gravity="start|center_vertical"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textDirection="locale"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:gravity="end|center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textDirection="locale"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:layout_gravity="center_vertical"
        android:id="@+id/status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:maxWidth="160dp"
        android:text="@string/photos_sharedlinks_adapteritems_status_waiting"
        android:maxLines="3"
        android:textDirection="locale"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/erroricon"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:srcCompat="@drawable/quantum_gm_ic_error_vd_theme_24"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/overflow"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:contentDescription="@string/photos_sharedlinks_adapteritems_overflow_desc"
        app:srcCompat="@drawable/quantum_gm_ic_more_vert_vd_theme_24"/>
</LinearLayout>
