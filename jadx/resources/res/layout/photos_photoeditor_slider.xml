<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:id="@+id/photos_photoeditor_slider_container"
    android:background="@color/google_black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photos_photoeditor_slider_auto_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:maxWidth="96dp"
        android:text="@string/photos_photoeditor_fragments_editor3_auto_button"
        android:singleLine="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        style="@style/photos_photoeditor_commonui_auto_toggle"/>
    <Space
        android:id="@+id/photos_photoeditor_slider_left_spacer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.google.android.apps.photos.photoeditor.slider.FlatSliderView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/photos_photoeditor_slider"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="4"
        android:translationY="-10dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:flingFriction="4"
        app:tickMarkCount="40"
        app:tickMarkDisabledAlpha="97"
        app:tickMarkSpacingFromParentDims="true"/>
    <Space
        android:id="@+id/photos_photoeditor_slider_right_spacer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photos_photoeditor_slider_placeholder"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:maxWidth="96dp"
        android:text="@string/photos_photoeditor_fragments_editor3_auto_button"
        android:singleLine="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        style="@style/photos_photoeditor_commonui_auto_toggle"/>
</LinearLayout>
