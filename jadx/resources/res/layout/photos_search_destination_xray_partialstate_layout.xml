<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/xray_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/photos_search_destination_partialstate_xray_top_margin"
    android:layout_marginStart="@dimen/photos_search_destination_partialstate_xray_start_margin"
    android:layout_marginEnd="@dimen/photos_search_destination_partialstate_xray_start_margin">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:gravity="center"
        android:id="@+id/xray_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/photos_search_destination_partialstate_xray_text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:id="@+id/xray_buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="?attr/colorError"/>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:id="@+id/xray_manage_storage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="?attr/colorError"/>
</LinearLayout>
