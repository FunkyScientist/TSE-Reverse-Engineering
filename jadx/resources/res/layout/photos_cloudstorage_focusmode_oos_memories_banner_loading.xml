<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginRight="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginHorizontal="@dimen/photos_cloudstorage_focusmode_banner_margin"
    style="@style/FocusModeLoadingShimmer">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/photos_cloudstorage_focusmode_corner_radius"
        app:strokeWidth="0dp"
        style="@style/Widget.Material3.CardView.Filled">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/oos_memories_banner_image_container_loading"
                android:visibility="invisible"
                android:layout_width="87dp"
                android:layout_height="112dp"
                android:contentDescription="@null"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/oos_memories_banner_title_loading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quantum_gm_ic_cloud_upload_vd_theme_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleSmall"
                android:id="@+id/oos_memories_banner_title_loading"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_cloudstorage_focusmode_oos_memories_banner_title"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/oos_memories_banner_image_container_loading"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/photos_cloudstorage_focusmode_smart_cleanup_blurry"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="@+id/oos_memories_banner_title_loading"
                app:layout_constraintTop_toBottomOf="@+id/oos_memories_banner_title_loading"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</com.facebook.shimmer.ShimmerFrameLayout>
