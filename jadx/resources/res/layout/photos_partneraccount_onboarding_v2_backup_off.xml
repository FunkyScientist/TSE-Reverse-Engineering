<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/backup_off_divide"
        android:background="?attr/colorOnPrimaryContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.25"/>
    <TextView
        android:textAppearance="@style/PartnerSharing.BodyMedium.Active"
        android:gravity="center_vertical"
        android:id="@+id/backup_off_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/photos_partneraccount_onboarding_v2_backup_off_warning"
        android:drawablePadding="16dp"
        app:drawableStartCompat="@drawable/quantum_gm_ic_cloud_upload_vd_theme_24"/>
</LinearLayout>
