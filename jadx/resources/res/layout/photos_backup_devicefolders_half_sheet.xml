<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_folder_backup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ViewStub
            android:id="@+id/unbackup_photos_stub"
            android:layout="@layout/photos_autobackuppromos_halfsheet_photos_group"
            android:inflatedId="@+id/unbackup_photos_inflated_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:gravity="center"
            android:id="@+id/device_folder_backup_promo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/photos_backup_devicefolders_half_sheet_subtitle"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/device_folder_backup_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/photos_backup_devicefolders_half_sheet_action_button_label"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/colorPrimary"
            android:id="@+id/device_folder_backup_dismiss_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/photos_backup_devicefolders_half_sheet_dismissal_button_label"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/transparent_bg"/>
    </LinearLayout>
</ScrollView>
