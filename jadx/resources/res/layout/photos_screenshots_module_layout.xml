<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <com.google.android.apps.photos.theme.SurfaceMaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <android.support.constraint.ConstraintLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/screenshot_thumbnail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                android:textColor="?attr/photosPrimary"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/subtitle"
                app:layout_constraintStart_toEndOf="@+id/screenshot_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="?attr/photosPrimary"
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/screenshot_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/title"/>
            <ImageButton
                android:id="@+id/close_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="?attr/colorPrimary"
                android:contentDescription="@string/photos_strings_dismiss_button"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
        </android.support.constraint.ConstraintLayout>
    </com.google.android.apps.photos.theme.SurfaceMaterialCardView>
</LinearLayout>
