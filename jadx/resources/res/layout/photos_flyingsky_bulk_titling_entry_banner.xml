<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flyingsky_bulk_titling_entry_banner"
    android:background="@drawable/photos_flyingsky_bulk_banner"
    android:padding="@dimen/photos_flyingsky_bulk_banner_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/photos_flyingsky_bulk_banner_horizontal_margin"
    android:layout_marginTop="@dimen/photos_flyingsky_bulk_banner_top_margin"
    android:layout_marginRight="@dimen/photos_flyingsky_bulk_banner_horizontal_margin"
    android:layout_marginBottom="@dimen/photos_flyingsky_bulk_banner_bottom_margin"
    android:layout_marginHorizontal="@dimen/photos_flyingsky_bulk_banner_horizontal_margin">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleSmall"
        android:textSize="16sp"
        android:id="@+id/banner_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/photos_flyingsky_bulk_banner_start_margin"
        android:layout_marginRight="@dimen/photos_flyingsky_bulk_banner_start_margin"
        android:text="@string/photos_flyingsky_fragment_bulk_titling_banner_title"
        android:layout_marginHorizontal="@dimen/photos_flyingsky_bulk_banner_start_margin"
        app:layout_constraintEnd_toStartOf="@+id/secondary_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:id="@+id/banner_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/photos_flyingsky_bulk_banner_start_margin"
        android:layout_marginRight="@dimen/photos_flyingsky_bulk_banner_start_margin"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="@dimen/photos_flyingsky_bulk_banner_start_margin"
        app:layout_constraintEnd_toStartOf="@+id/secondary_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_header"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/banner_buttons_flexbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_flyingsky_bulk_banner_buttons_top_margin"
        android:layout_marginBottom="@dimen/photos_flyingsky_bulk_banner_buttons_bottom_margin"
        android:layout_marginStart="@dimen/photos_flyingsky_bulk_banner_start_margin"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toStartOf="@+id/secondary_image"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_subtitle">
        <Button
            android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
            android:textColor="?attr/colorOnPrimary"
            android:id="@+id/review_button"
            android:paddingLeft="24dp"
            android:paddingTop="10dp"
            android:paddingRight="24dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/photos_flyingsky_miniminum_gar_dimension"
            android:text="@string/photos_flyingsky_fragment_bulk_confirmation_banner_review_button_text"
            android:layout_marginEnd="8dp"
            android:backgroundTint="?attr/photosPrimary"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            style="@style/Widget.Photos.Button.TonalButton"/>
        <Button
            android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
            android:textColor="?attr/photosPrimary"
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/photos_flyingsky_miniminum_gar_dimension"
            android:text="@string/photos_flyingsky_fragment_bulk_confirmation_banner_skip_button_text"
            style="@style/Widget.Photos.Button.Borderless"/>
    </com.google.android.flexbox.FlexboxLayout>
    <ImageView
        android:id="@+id/secondary_image"
        android:background="@drawable/photos_flyingsky_bulk_confirmation_banner_image_no_border"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/primary_image_container"
        android:background="@drawable/photos_flyingsky_bulk_confirmation_banner_image_with_border_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/photos_flyingsky_bulk_confirmation_banner_image_with_border"
        android:layout_marginStart="@dimen/photos_flyingsky_bulk_banner_image_start_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/secondary_image">
        <ImageView
            android:id="@+id/primary_image"
            android:padding="@dimen/photos_flyingsky_bulk_banner_cover_image_border_width"
            android:layout_width="44dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/pencil_image"
        android:background="@drawable/photos_flyingsky_bulk_titling_banner_pencil_image"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/primary_image_container"
        app:layout_constraintStart_toStartOf="@+id/secondary_image"
        app:layout_constraintTop_toBottomOf="@+id/secondary_image"/>
</android.support.constraint.ConstraintLayout>
