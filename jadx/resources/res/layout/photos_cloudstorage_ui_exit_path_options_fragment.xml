<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_image_top_margin"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.HeadlineMedium"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_title_top_margin"
                android:text="@string/photos_cloudstorage_ui_exitpathoptions_ls_header"
                android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin"
                android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buy_storage_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buy_storage_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_top_margin"
                    android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                        android:id="@+id/buy_storage_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        android:text="@string/photos_cloudstorage_ui_getstoragebutton_simplified"
                        android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_body_text"
                        app:layout_constraintEnd_toStartOf="@+id/buy_storage_icon"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/buy_storage_icon"
                        android:layout_width="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_size"
                        android:layout_height="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_size"
                        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                        android:layout_marginBottom="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                        android:src="@drawable/photos_googleoneassets_logo_ring_36"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_body_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toEndOf="@+id/buy_storage_title"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body2"
                        android:textColor="?attr/photosOnSurfaceVariant"
                        android:id="@+id/buy_storage_body_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_above_body_text_margin"
                        android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_title"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buy_storage_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_button_vertical_margin"
                        android:layout_marginBottom="@dimen/photos_cloudstorage_ui_exitpathoptions_card_button_vertical_margin"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_tos"
                        app:layout_constraintStart_toStartOf="@+id/buy_storage_body_text"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_body_text"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body2"
                        android:textColor="?attr/photosOnSurfaceVariant"
                        android:id="@+id/buy_storage_tos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_button"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.LabelMedium"
                    android:textColor="@color/gm3_ref_palette_tertiary30"
                    android:id="@+id/buy_storage_offer_tag"
                    android:background="@color/gm3_ref_palette_tertiary90"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="-12dp"
                    android:layout_marginEnd="18dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/buy_storage_card"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/buy_storage_card"
                    app:layout_constraintTop_toTopOf="@+id/buy_storage_card"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/manage_storage_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_above_manage_storage_card_margin"
                android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin"
                android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_side_margin">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                    android:id="@+id/manage_storage_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    android:text="@string/photos_cloudstorage_ui_exitpathoptions_managestorage_header"
                    android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    app:layout_constraintBottom_toTopOf="@+id/manage_storage_body_text"
                    app:layout_constraintEnd_toStartOf="@+id/manage_storage_icon"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/manage_storage_icon"
                    android:background="@drawable/photos_cloudstorage_ui_exitpathoptions_manage_storage_icon_background"
                    android:padding="@dimen/photos_cloudstorage_ui_exitpathoptions_managestorage_icon_padding"
                    android:layout_width="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_size"
                    android:layout_height="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_size"
                    android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                    android:layout_marginBottom="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                    android:tint="@color/google_grey700"
                    android:contentDescription="@null"
                    android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_icon_margin"
                    app:layout_constraintBottom_toTopOf="@+id/manage_storage_body_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/manage_storage_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/quantum_gm_ic_delete_vd_theme_24"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="?attr/photosOnSurfaceVariant"
                    android:id="@+id/manage_storage_body_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_above_body_text_margin"
                    android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    app:layout_constraintBottom_toTopOf="@+id/manage_storage_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/manage_storage_title"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_storage_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_card_button_vertical_margin"
                    android:layout_marginBottom="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_ui_exitpathoptions_card_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/manage_storage_body_text"
                    app:layout_constraintTop_toBottomOf="@+id/manage_storage_body_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:textAppearance="@style/TextAppearance.Photos.Button"
        android:id="@+id/back_button"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_cloudstorage_ui_exitpathoptions_back_button_top_margin"
        android:contentDescription="@string/photos_strings_back_button"
        android:layout_marginStart="@dimen/photos_cloudstorage_ui_exitpathoptions_back_button_start_margin"
        android:backgroundTint="@color/photos_cloudstorage_ui_exitpathoptions_back_button_background_color"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_arrow_back_vd_theme_24"
        app:tint="?attr/colorOnSurfaceVariant"/>
</androidx.constraintlayout.widget.ConstraintLayout>
