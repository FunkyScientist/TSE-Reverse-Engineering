<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bulk_date_time_edit_mode_selection_sheet"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/shift_dates_option"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:srcCompat="@drawable/quantum_gm_ic_date_range_vd_theme_24"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_datetimeedit_select_shift_dates_title"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_datetimeedit_select_shift_dates_subtitle"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/photos_list_divider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/one_date_option"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:srcCompat="@drawable/quantum_gm_ic_event_vd_theme_24"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_datetimeedit_select_one_date_title"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_datetimeedit_select_one_date_subtitle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
