<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.stories.input.StoryPlayerContainer xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_view_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/story_player_scrim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_chainStyle="spread_inside">
        <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.apps.photos.stories.TransparencyControlLayout
        android:id="@+id/photos_stories_ui_elements"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.apps.photos.stories.StoriesViewportLayout
            android:id="@+id/photos_stories_viewport"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <FrameLayout
                android:id="@+id/photos_stories_pages_view_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/photos_stories_pages_view_holder_full_top_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.apps.photos.stories.video.StoryVideoLayout
                    android:id="@+id/story_player_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include
                        android:id="@+id/photos_videoplayer_view_video_view_container"
                        layout="@layout/photos_videoplayer_view_video_view_container"/>
                </com.google.android.apps.photos.stories.video.StoryVideoLayout>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/snapped_loading_animation"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="snapped_loading_animation.json"
                    app:lottie_imageAssetsFolder="images/"
                    app:lottie_loop="true"/>
            </FrameLayout>
            <View
                android:id="@+id/photos_stories_preview_top_scrim"
                android:background="@drawable/photos_stories_preview_top_scrim"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="@+id/photos_stories_pages_view_holder"/>
            <View
                android:id="@+id/story_player_story_title_scrim_view"
                android:background="@drawable/photos_stories_bottom_gradient_v3"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:alpha="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/photos_stories_pages_view_holder"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/story_player_loading_spinner"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintTop_toBottomOf="@+id/photos_stories_storyview_progress_bar"
                style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
            <ImageView
                android:id="@+id/photos_stories_corner_cover_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/photos_stories_transition_negative_max_corner_radius"
                android:layout_marginTop="@dimen/photos_stories_transition_negative_max_corner_radius"
                android:layout_marginRight="@dimen/photos_stories_transition_negative_max_corner_radius"
                android:layout_marginBottom="@dimen/photos_stories_transition_negative_max_corner_radius"
                android:src="@drawable/photos_stories_round_corner_foreground"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintTop_toBottomOf="@+id/photos_stories_storyview_progress_bar"/>
            <com.google.android.apps.photos.stories.StoryProgressBarView
                android:id="@+id/photos_stories_storyview_progress_bar"
                android:paddingLeft="@dimen/photos_stories_progress_bar_horizontal_padding"
                android:paddingRight="@dimen/photos_stories_progress_bar_horizontal_padding"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="@dimen/photos_stories_progress_bar_layout_margin_top"
                android:layout_marginBottom="@dimen/photos_stories_progress_bar_layout_margin_top"
                android:paddingHorizontal="@dimen/photos_stories_progress_bar_horizontal_padding"
                app:layout_constraintBottom_toTopOf="@+id/photos_stories_pages_view_holder"/>
            <com.google.android.apps.photos.view.TouchPassThroughToolbar
                android:theme="@style/photos_stories_actionBarTheme"
                android:id="@+id/touch_pass_through_toolbar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/photos_stories_storyview_progress_bar"
                style="?attr/actionBarStyle"/>
            <include
                android:id="@+id/photos_stories_promo_skip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/touch_pass_through_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/touch_pass_through_toolbar"
                layout="@layout/photos_stories_promo_skip_button"/>
            <include
                android:id="@+id/photos_stories_promo_info_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/touch_pass_through_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/touch_pass_through_toolbar"
                layout="@layout/photos_stories_promo_info_badge"/>
            <include
                android:id="@+id/photos_stories_autoplay_badge_layout"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/touch_pass_through_toolbar"
                app:layout_constraintEnd_toStartOf="@+id/photos_stories_promo_info_badge"
                app:layout_constraintTop_toTopOf="@+id/touch_pass_through_toolbar"
                layout="@layout/photos_stories_autoplay_badge_layout"/>
            <include
                android:id="@+id/photos_stories_contributor_presenter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="64dp"
                android:layout_marginHorizontal="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/photos_stories_pages_view_holder"
                layout="@layout/photos_stories_contributor_presenter_layout"/>
            <include
                android:id="@+id/photos_stories_add_caption_layout"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintEnd_toStartOf="@+id/photos_stories_actions_feedback_link"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                layout="@layout/photos_stories_add_caption_layout"/>
            <include
                android:id="@+id/photos_stories_actions_feedback_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintEnd_toStartOf="@+id/photos_stories_audio_toggle_layout"
                layout="@layout/photos_stories_actions_feedback_layout"/>
            <include
                android:id="@+id/photos_stories_audio_toggle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintEnd_toEndOf="parent"
                layout="@layout/photos_stories_audio_toggle_layout"/>
            <FrameLayout
                android:id="@+id/photos_stories_preview_output_video_label_layout"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:layout_constraintEnd_toEndOf="@+id/photos_stories_pages_view_holder"
                app:layout_constraintTop_toTopOf="@+id/photos_stories_pages_view_holder"/>
            <ViewStub
                android:id="@+id/photos_stories_story_title_container_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/photos_stories_story_title_bottom_margin_with_featured_button"
                app:layout_constraintBottom_toTopOf="@+id/primary_featured_action_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_goneMarginBottom="@dimen/photos_stories_story_title_bottom_margin_without_featured_button"/>
            <include
                android:id="@+id/reactions_bubbles_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/primary_featured_action_layout"
                layout="@layout/photos_stories_reactions_bubbles_container"/>
            <ViewStub
                android:id="@+id/banners_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/photos_stories_story_title_container"/>
            <FrameLayout
                android:id="@+id/photos_stories_preview_label_layout"
                android:focusable="false"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toTopOf="@+id/primary_featured_action_layout"
                app:layout_constraintStart_toStartOf="parent"/>
            <FrameLayout
                android:id="@+id/primary_featured_action_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintStart_toStartOf="parent"/>
            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/photos_stories_caption_view_textview_wrapper"
                android:paddingLeft="52dp"
                android:paddingRight="52dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="52dp"
                app:layout_constraintBottom_toTopOf="@+id/photos_stories_actions_feedback_link"
                app:layout_goneMarginBottom="8dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
                    android:textColor="@color/google_white"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/photos_stories_caption_view_textview"
                    android:background="@drawable/photos_stories_ellmann_captions_rectangle"
                    android:padding="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:textAlignment="center"
                    android:paddingHorizontal="16dp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/secondary_featured_action_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper"
                app:layout_constraintStart_toEndOf="@+id/primary_featured_action_layout"/>
            <include
                android:id="@+id/photos_memories_actions_compare_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/photos_stories_pages_view_holder"
                layout="@layout/photos_memories_actions_compare_chip"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bottom_layout_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/photos_stories_pages_view_holder">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:id="@+id/comments_layout_wrapper"
                    android:background="@color/google_black"
                    android:paddingTop="16dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/bottom_layout_wrapper">
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/story_commenter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/photos_stories_page_subtitle"/>
                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/story_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/story_commenter_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/story_commenter_name"
                        app:layout_constraintTop_toTopOf="@+id/story_commenter_name"
                        style="@style/photos_stories_page_title"/>
                    <TextView
                        android:id="@+id/view_comments_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/story_commenter_name"
                        style="@style/photos_stories_page_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/photos_stories_page_metadata_container_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/photos_stories_page_metadata_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">
                        <FrameLayout
                            android:id="@+id/photos_stories_album_cover_chip_parent_view"
                            android:background="@drawable/photos_stories_cover_photo_chip_drawable"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp">
                            <com.google.android.apps.photos.view.RoundedCornerImageView
                                android:id="@+id/photos_stories_album_cover_chip_view"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:foreground="@drawable/carousel_press"
                                android:contentDescription="@string/photos_stories_go_to_album_button"
                                app:radius="8dp"/>
                        </FrameLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/photos_stories_page_title_view_wrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/photos_stories_page_title_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="2dp"
                                style="@style/photos_stories_page_title"/>
                            <TextView
                                android:ellipsize="none"
                                android:gravity="center_vertical"
                                android:id="@+id/photos_stories_page_subtitle_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:requiresFadingEdge="horizontal"
                                android:accessibilityLiveRegion="polite"
                                style="@style/photos_stories_page_subtitle"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/bottom_actions_layout"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:minHeight="72dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.apps.photos.stories.StoriesViewportLayout>
    </com.google.android.apps.photos.stories.TransparencyControlLayout>
    <ViewStub
        android:id="@+id/photos_stories_usereducation_layout_stub"
        android:layout="@layout/photos_stories_usereducation_layout_v2"
        android:inflatedId="@+id/photos_stories_usereducation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/photos_stories_mediadetails_scrim_stub"
        android:layout="@layout/photos_stories_mediadetails_scrim"
        android:inflatedId="@+id/photos_stories_mediadetails_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/photos_stories_activity_scrim_stub"
        android:layout="@layout/photos_stories_activity_scrim"
        android:inflatedId="@+id/photos_stories_activity_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/photos_stories_mediadetails_close_button_stub"
        android:layout="@layout/photos_stories_mediadetails_close_button"
        android:inflatedId="@+id/photos_stories_mediadetails_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/photos_stories_mediadetails_close_button_margin"/>
</com.google.android.apps.photos.stories.input.StoryPlayerContainer>
