<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    style="@style/PrintingSkuAisleInfoCard">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/photos_printingskus_storefront_config_herocarousel_sku_info_card_margin_bottom"
            android:minHeight="124dp">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Headline3"
                android:textColor="?attr/photosTextColorPrimaryVariant"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
            <com.google.android.apps.photos.view.AccessibleClickSpanTextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:textColor="?attr/photosTextColorPrimaryVariant"
                android:textColorLink="?attr/photosTextColorPrimaryVariant"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="?android:attr/textColorSecondary"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/fab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="placeholderText"
            style="@style/Widget.Photos.ExtendedFloatingActionButton"/>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
