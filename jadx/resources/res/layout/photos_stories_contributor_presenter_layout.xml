<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photos_stories_contributor_presenter_layout"
    android:focusable="false"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/contributor_chip"
        android:background="@drawable/photos_stories_contributor_presenter_background"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:importantForAccessibility="yes">
        <ImageView
            android:id="@+id/contributor_avatar"
            android:layout_width="@dimen/photos_stories_contributor_avatar_size"
            android:layout_height="@dimen/photos_stories_contributor_avatar_size"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:importantForAccessibility="no"
            android:layout_marginStart="2dp"
            android:layout_marginVertical="2dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.LabelSmall"
            android:textColor="@color/google_white"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:importantForAccessibility="no"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
</FrameLayout>
