<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/photos_daynight_grey900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_facegaia_optin_impl_desc"
        android:textAlignment="center"
        style="@style/TextAppearance.Photos.Subhead1"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="@color/photos_daynight_grey600"
        android:id="@+id/user_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/photos_facegaia_optin_impl_opt_in_sheet_margin"
        android:textAlignment="center"/>
    <include
        android:id="@+id/avatars"
        layout="@layout/photos_facegaia_optin_impl_opt_in_avatars"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:textColor="@color/photos_facegaia_optin_impl_more_faces_button"
        android:gravity="center"
        android:id="@+id/more_faces_button"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/photos_facegaia_optin_impl_opt_in_sheet_margin"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_facegaia_optin_impl_more_faces_button"
        android:textAllCaps="true"
        android:textAlignment="center"/>
</LinearLayout>
