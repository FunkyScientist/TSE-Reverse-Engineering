<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:id="@+id/local_photos_error_bar"
    android:background="?android:attr/colorBackground"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photos_localmedia_ui_rename_error_layout_height">
    <View
        android:layout_gravity="top"
        android:background="?attr/colorSurfaceVariant"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="@dimen/photos_localmedia_ui_rename_error_text_text_size"
        android:textColor="?attr/colorError"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/local_photos_butter_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/photos_localmedia_ui_rename_error_text_margin_start"/>
</FrameLayout>
