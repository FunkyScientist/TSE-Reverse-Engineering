<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.theme.SurfaceMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
    app:strokeWidth="0dp">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/autosave_icon"
            android:padding="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.TitleLarge.Inactive"
            android:gravity="center_horizontal"
            android:id="@+id/autosave_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_partneraccount_onboarding_v2_autosave_title_generic_v2"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.BodyMedium.Inactive"
            android:gravity="center_horizontal"
            android:id="@+id/autosave_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.apps.photos.theme.SurfaceMaterialCardView>
