<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">
    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/photos_stories_activity_viewbinder_avatar_diameter"
        android:layout_height="@dimen/photos_stories_activity_viewbinder_avatar_diameter"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comment_text_container"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="@color/photos_hearts_viewbinder_caption_text_color"
        android:ellipsize="none"
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/photos_stories_activity_viewbinder_avatar_margin_to_text"
        android:layout_marginEnd="@dimen/photos_stories_activity_viewbinder_avatar_margin_to_text"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/comment_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/photos_stories_activity_viewbinder_comment_text_margin"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toBottomOf="@+id/caption">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:id="@+id/comment_text"
            android:background="@drawable/photos_stories_activity_viewbinder_comment_rounded_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/photos_stories_activity_viewbinder_name_margin_to_text"
            android:minWidth="40dp"
            android:textAlignment="viewStart"
            android:layout_marginStart="@dimen/photos_stories_activity_viewbinder_avatar_margin_to_text"/>
    </FrameLayout>
    <View
        android:id="@+id/comment_popup_locator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/caption"
        app:layout_constraintTop_toTopOf="@+id/avatar_view"/>
</android.support.constraint.ConstraintLayout>
