<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gallery_connection_consent_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/photos_app_icon"
                android:background="@drawable/photos_sdk_appconnecting_photos_icon_background"
                android:padding="8dp"
                android:layout_width="@dimen/photos_sdk_appconnecting_gallery_connection_consent_dialog_photos_icon_size"
                android:layout_height="@dimen/photos_sdk_appconnecting_gallery_connection_consent_dialog_photos_icon_size"
                android:src="@drawable/product_logo_photos_color_144"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/oem_app_icon"
                android:background="@drawable/photos_sdk_appconnecting_consent_dialog_oem_app_icon_background"
                android:padding="4dp"
                android:layout_width="@dimen/photos_sdk_appconnecting_gallery_connection_consent_dialog_oem_icon_size"
                android:layout_height="@dimen/photos_sdk_appconnecting_gallery_connection_consent_dialog_oem_icon_size"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:layout_marginStart="40dp"
                android:layout_alignStart="@+id/photos_app_icon"/>
        </RelativeLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:layout_marginVertical="24dp"/>
        <com.google.android.apps.photos.sdk.appconnecting.GalleryConnectionConsentDialogAccountHeaderView
            android:layout_gravity="center_horizontal"
            android:id="@+id/consent_account_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/content_detail_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawablePadding="16dp"
            android:layout_marginStart="16dp"
            app:drawableStartCompat="@drawable/quantum_gm_ic_photo_library_vd_theme_24"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/content_detail_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:layout_marginStart="16dp"
            app:drawableStartCompat="@drawable/quantum_gm_ic_settings_vd_theme_24"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/do_not_connect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:id="@+id/disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:layout_marginVertical="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
