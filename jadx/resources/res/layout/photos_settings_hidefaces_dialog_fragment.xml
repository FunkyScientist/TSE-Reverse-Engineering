<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hidefaces_dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/photos_settings_hidefaces_dialog_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:tint="@color/photos_settings_hidefaces_dialog_fragment_icon"
            android:contentDescription="@null"
            app:srcCompat="@drawable/gs_familiar_face_and_zone_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.HeadlineSmall"
            android:textColor="@color/photos_settings_hidefaces_dialog_fragment_title"
            android:layout_gravity="center_vertical"
            android:id="@+id/hide_faces_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/photos_settings_hidefaces_dialog_title"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="@color/photos_settings_hidefaces_dialog_fragment_subtitle"
            android:id="@+id/hide_faces_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/photos_settings_hidefaces_dialog_subtitle"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hidefaces_show_less_card"
            style="@style/photos_settings_hidefaces_card">
            <ImageView
                android:id="@+id/show_less_card_image"
                android:tint="@color/photos_settings_hidefaces_dialog_fragment_showless_icon"
                android:contentDescription="@null"
                android:backgroundTint="@color/photos_settings_hidefaces_dialog_fragment_showless_icon_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gs_person_remove_vd_theme_24"
                style="@style/photos_settings_hidefaces_card_image"/>
            <TextView
                android:id="@+id/show_less_card_title"
                android:text="@string/photos_settings_hidefaces_show_less_card_title"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/show_less_card_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/show_less_card_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/photos_settings_hidefaces_card_title"/>
            <TextView
                android:id="@+id/show_less_card_description"
                android:text="@string/photos_settings_hidefaces_show_less_card_description"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/show_less_card_image"
                app:layout_constraintTop_toBottomOf="@+id/show_less_card_title"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/photos_settings_hidefaces_card_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hidefaces_block_card"
            android:layout_marginTop="8dp"
            style="@style/photos_settings_hidefaces_card">
            <ImageView
                android:id="@+id/block_card_image"
                android:tint="@color/photos_settings_hidefaces_dialog_fragment_block_icon"
                android:contentDescription="@null"
                android:backgroundTint="@color/photos_settings_hidefaces_dialog_fragment_block_icon_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gs_block_vd_theme_24"
                style="@style/photos_settings_hidefaces_card_image"/>
            <TextView
                android:id="@+id/block_card_title"
                android:text="@string/photos_settings_hidefaces_block_card_title"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/block_card_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/block_card_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/photos_settings_hidefaces_card_title"/>
            <TextView
                android:id="@+id/block_card_description"
                android:text="@string/photos_settings_hidefaces_block_card_description"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/block_card_image"
                app:layout_constraintTop_toBottomOf="@+id/block_card_title"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/photos_settings_hidefaces_card_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
            android:textColor="@color/photos_settings_hidefaces_dialog_fragment_cancel_button"
            android:gravity="end"
            android:id="@+id/hide_faces_cancel_button"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/photos_settings_hidefaces_cancel_button"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"/>
    </LinearLayout>
</ScrollView>
