<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/order_details_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp">
    <LinearLayout
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/order_thumbnail_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">
                <ImageView
                    android:id="@+id/order_details_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"/>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/order_details_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:id="@+id/order_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:id="@+id/order_details_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:id="@+id/order_details_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:id="@+id/order_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_wallart_ui_order_details_order_again"
            android:layout_weight="1"
            style="@style/Widget.Photos.BoldButton"/>
        <Button
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:layout_gravity="center"
            android:id="@+id/cancel_order"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_wallart_ui_order_details_cancel_order"
            android:layout_weight="1"
            style="@style/Widget.Photos.Button.Borderless"/>
    </LinearLayout>
</LinearLayout>
