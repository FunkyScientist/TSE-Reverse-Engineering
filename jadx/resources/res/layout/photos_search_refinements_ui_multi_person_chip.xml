<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/multi_person_layout"
    android:background="@drawable/photos_search_refinements_ui_custom_border"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">
    <com.google.android.apps.photos.avatar.collage.CircularCollageView
        android:id="@+id/multi_person"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:gravity="end|center_vertical"
        android:id="@+id/multi_person_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/close_button"
        android:visibility="gone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="centerInside"
        android:tint="?attr/photosPrimary"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
</LinearLayout>
