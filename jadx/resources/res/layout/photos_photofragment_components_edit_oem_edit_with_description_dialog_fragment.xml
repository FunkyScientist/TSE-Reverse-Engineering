<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/photos_photofragment_components_edit_oem_dialog_background"
        android:background="@color/photos_photofragment_components_edit_oem_edit_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/photos_photofragment_components_edit_oem_dialog_content"
        android:background="@color/photos_daynight_white"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="@color/photos_daynight_grey800"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="48dp"
            android:text="@string/photos_photofragment_components_edit_oem_dialog_title"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/photos_photofragment_components_edit_oem_dialog_oem_editor_row"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp">
            <ImageView
                android:id="@+id/photos_photofragment_components_editor_oem_dialog_oem_editor_icon"
                android:background="@drawable/photos_photofragment_components_edit_icon_background"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body1"
                    android:textColor="@color/photos_daynight_grey800"
                    android:id="@+id/photos_photofragment_components_edit_oem_dialog_oem_editor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="@color/photos_daynight_grey700"
                    android:id="@+id/photos_photofragment_components_edit_oem_dialog_oem_editor_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/photos_photofragment_components_edit_oem_dialog_photos_editor_row"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp">
            <ImageView
                android:background="@drawable/photos_photofragment_components_edit_icon_background"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/product_logo_photos_color_24"
                android:contentDescription="@null"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body1"
                    android:textColor="@color/photos_daynight_grey800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos_photofragment_components_edit_use_photos_editor"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="@color/photos_daynight_grey700"
                    android:id="@+id/photos_photofragment_components_edit_oem_dialog_photos_editor_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos_photofragment_components_edit_use_photos_editor_subtitle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
