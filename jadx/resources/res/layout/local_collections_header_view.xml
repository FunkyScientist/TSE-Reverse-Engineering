<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.localmedia.p015ui.LocalFoldersHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:layout_alignParentTop="true"
    android:paddingStart="16dp">
    <TextView
        android:textColor="?attr/colorOnBackground"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/collection_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:textIsSelectable="false"
        android:textDirection="locale"
        style="@style/TextAppearance.Photos.Subtitle2"/>
    <TextView
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:layout_gravity="center"
        android:id="@+id/auto_backup_folder_toggle_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/autobackup_folder_toggle_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="center"
        android:contentDescription="@string/autobackup_folder"/>
    <ImageView
        android:id="@+id/sd_card_folder_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/photo_localmedia_ui_sd_card_horizontal_icon"
        android:scaleType="center"
        android:contentDescription="@string/photos_localmedia_ui_sd_folder_desc"/>
</com.google.android.apps.photos.localmedia.p015ui.LocalFoldersHeaderView>
