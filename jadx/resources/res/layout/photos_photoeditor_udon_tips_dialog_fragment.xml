<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/photos_photoeditor_udon_prompt_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/photos_photoeditor_udon_tips_dialog_tips_container"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="24dp"/>
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/photos_photoeditor_udon_tips_dialog_got_it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:text="@string/photos_strings_got_it"
        android:layout_marginHorizontal="24dp"
        style="@style/Widget.Photos.Button"/>
</FrameLayout>
