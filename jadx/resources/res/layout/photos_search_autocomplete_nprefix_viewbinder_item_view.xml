<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/autocomplete_suggestion_icon"
            android:padding="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@null"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/autocomplete_suggestion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textSize="@dimen/text_size_12"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/debug_text"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/colorSurfaceVariant"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
