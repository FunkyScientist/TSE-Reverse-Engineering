<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:id="@+id/photos_backup_settings_buy_storage_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="@string/photos_cloudstorage_ui_buystoragebutton_default"/>
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:id="@+id/photos_backup_settings_plan_settings_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="@string/photos_backup_settings_g1_plan_settings"/>
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:id="@+id/photos_backup_settings_manage_storage_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        style="@style/Widget.Photos.Button.StrokedButton"/>
</LinearLayout>
