<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/photos_printingskus_photobook_storefront_order_details_title"
        android:id="@+id/title"
        android:paddingLeft="24dp"
        android:paddingTop="@dimen/photos_printingskus_photobook_storefront_order_details_title_paddingTop"
        android:paddingRight="24dp"
        android:paddingBottom="@dimen/photos_printingskus_photobook_storefront_order_details_title_paddingBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
    <TextView
        android:textColor="?attr/colorOnSurface"
        android:gravity="start"
        android:id="@+id/content"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="@dimen/photos_printingskus_photobook_storefront_order_details_content_lineSpacingMultiplier"
        android:textDirection="locale"
        android:textAlignment="gravity"
        style="@style/TextAppearance.Photos.Body2"/>
    <TextView
        android:gravity="start"
        android:id="@+id/notice"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textDirection="locale"
        android:textAlignment="gravity"
        style="@style/photos_printingskus_photobook_storefront_order_details_notice"/>
</LinearLayout>
