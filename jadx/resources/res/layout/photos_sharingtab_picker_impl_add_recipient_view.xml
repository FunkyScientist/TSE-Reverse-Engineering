<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="4dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/photos_sharing_tab_face_chip_in_to_field_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="center"
            android:contentDescription="@null"
            app:srcCompat="@drawable/photos_quantum_gm_ic_add_vd_theme_18"
            style="@style/suggestions_card_recipient_image"/>
        <TextView
            android:id="@+id/add_recipients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_sharingtab_picker_impl_add_recipients"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
</FrameLayout>
