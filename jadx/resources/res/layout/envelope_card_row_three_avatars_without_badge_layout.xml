<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:id="@+id/envelope_card_row_avatar_2"
    android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_total_image_size"
    android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_total_image_size">
    <ImageView
        android:id="@+id/avatar_1"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/avatar_2"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:layout_marginStart="2dp"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/avatar_3"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:layout_marginEnd="2dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
