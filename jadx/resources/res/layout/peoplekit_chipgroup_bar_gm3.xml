<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/peoplekit_chipgroup_bar"
    android:background="?attr/colorSurface"
    android:paddingTop="@dimen/peoplekit_ui_autocomplete_chip_end_spacing"
    android:paddingBottom="@dimen/peoplekit_ui_autocomplete_chip_end_spacing"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/peoplekit_autocomplete_search_bar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:id="@+id/peoplekit_autocomplete_to_prefix"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/peoplekit_ui_autocomplete_chip_bar_height"
            android:text="@string/peoplekit_autocomplete_to_text"
            android:paddingStart="@dimen/peoplekit_ui_autocomplete_to_padding"
            android:labelFor="@+id/peoplekit_autocomplete_edit_text"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/peoplekit_autocomplete_searchicon_prefix"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/peoplekit_ui_autocomplete_chip_bar_height"
            android:src="@drawable/abc_ic_search_api_material"
            android:contentDescription="@string/peoplekit_autocomplete_search_icon_prefix"
            android:paddingStart="@dimen/peoplekit_ui_autocomplete_to_padding"/>
        <com.google.android.libraries.social.peoplekit.autocomplete.viewcontrollers.MaxHeightScrollView
            android:id="@+id/peoplekit_autocomplete_scroll_view_for_chips"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/peoplekit_autocomplete_to_prefix"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/peoplekit_autocomplete_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/peoplekit_ui_autocomplete_padding"
            android:paddingEnd="@dimen/peoplekit_ui_autocomplete_padding"
            android:layout_toStartOf="@+id/peoplekit_autocomplete_keyboard_icon"
            android:layout_toEndOf="@+id/peoplekit_autocomplete_to_prefix"/>
        <ImageView
            android:id="@+id/peoplekit_autocomplete_clear_button"
            android:paddingLeft="@dimen/peoplekit_ui_autocomplete_icon_padding"
            android:paddingRight="@dimen/peoplekit_ui_autocomplete_icon_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/peoplekit_ui_autocomplete_chip_bar_height"
            android:src="@drawable/gs_close_vd_theme_24"
            android:contentDescription="@string/peoplekit_autocomplete_clear_button"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/peoplekit_ui_autocomplete_icon_padding"/>
        <ImageView
            android:id="@+id/peoplekit_autocomplete_keyboard_icon"
            android:paddingLeft="@dimen/peoplekit_ui_autocomplete_icon_padding"
            android:paddingRight="@dimen/peoplekit_ui_autocomplete_icon_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/peoplekit_ui_autocomplete_chip_bar_height"
            android:contentDescription="@string/peoplekit_autocomplete_dialpad_icon"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/peoplekit_ui_autocomplete_icon_padding"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/colorSurfaceVariant"
        android:paddingTop="@dimen/peoplekit_ui_autocomplete_recipients_spacing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/peoplekit_autocomplete_search_bar_wrapper"
        android:paddingStart="@dimen/peoplekit_ui_autocomplete_divider_padding"
        android:paddingEnd="@dimen/peoplekit_ui_autocomplete_divider_padding"/>
    <RelativeLayout
        android:id="@+id/search_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"/>
</RelativeLayout>
