<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.album.enrichment.p004ui.MapEnrichmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/photos_album_enrichment_ui_enrichment_content"
        android:background="@drawable/enrichment_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/photos_album_enrichment_ui_map_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.apps.photos.album.enrichment.p004ui.MapView
                android:id="@+id/map_view"
                android:background="@color/photos_album_enrichment_ui_map_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.apps.photos.album.enrichment.p004ui.MapImageView
                    android:id="@+id/map_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="@dimen/photos_album_enrichment_ui_map_primary_text_size"
                    android:textColor="@color/photos_album_enrichment_ui_map_primary_text"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/map_destination_name_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:shadowColor="@color/photos_album_enrichment_ui_map_text_shadow"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:textIsSelectable="true"
                    android:breakStrategy="balanced"/>
                <TextView
                    android:textSize="@dimen/photos_album_enrichment_ui_map_secondary_text_size"
                    android:textColor="@color/photos_album_enrichment_ui_map_secondary_text"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/map_destination_name_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/photos_album_enrichment_ui_map_enrichment_destination_secondary_text_max_width"
                    android:maxLines="2"
                    android:shadowColor="@color/photos_album_enrichment_ui_map_text_shadow"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:textIsSelectable="true"
                    android:breakStrategy="balanced"/>
                <ImageView
                    android:id="@+id/map_destination_marker_image"
                    android:background="@drawable/map_destination_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/quantum_gm_ic_place_gm_grey_18"
                    android:tint="?attr/colorError"/>
                <ImageView
                    android:id="@+id/map_origin_marker_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map_origin_circle"/>
                <TextView
                    android:textSize="@dimen/photos_album_enrichment_ui_map_secondary_text_size"
                    android:textColor="@color/photos_album_enrichment_ui_map_secondary_text"
                    android:ellipsize="end"
                    android:id="@+id/map_origin_name_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:shadowColor="@color/photos_album_enrichment_ui_map_text_shadow"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:textIsSelectable="true"/>
            </com.google.android.apps.photos.album.enrichment.p004ui.MapView>
        </FrameLayout>
        <include layout="@layout/enrichment_adornments_layout"/>
    </FrameLayout>
    <include layout="@layout/photos_list_remove_button_white"/>
</com.google.android.apps.photos.album.enrichment.p004ui.MapEnrichmentLayout>
