<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        support:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/hero_asset_glow"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintDimensionRatio="W,1:1"
        support:layout_constraintEnd_toEndOf="@+id/hero_asset"
        support:layout_constraintStart_toStartOf="@+id/hero_asset"
        support:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/hero_asset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintStart_toEndOf="@+id/guideline"
        support:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/hero_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        support:layout_constraintBottom_toTopOf="@+id/hero_text"
        support:layout_constraintEnd_toStartOf="@+id/guideline"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        support:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/hero_text"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        support:layout_constraintBottom_toTopOf="@+id/hero_action"
        support:layout_constraintEnd_toStartOf="@+id/guideline"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/hero_title"/>
    <Button
        android:id="@+id/hero_action"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toStartOf="@+id/guideline"
        support:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
