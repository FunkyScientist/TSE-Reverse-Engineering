<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/burst_primary_label_container"
        android:background="@drawable/photos_photofragment_burst_primary_label_background"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/burst_primary_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:tint="@color/google_white"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/gs_stack_star_vd_theme_24"/>
        <com.google.android.material.textview.MaterialTextView
            android:textColor="@color/google_white"
            android:id="@+id/burst_primary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/TextAppearance.Photos.LabelSmall"/>
    </android.support.v7.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
