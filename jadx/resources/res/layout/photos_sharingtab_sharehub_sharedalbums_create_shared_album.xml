<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.apps.photos.theme.SquareImageView
        android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
        android:id="@+id/create_shared_album_button"
        android:background="@drawable/photos_sharingtab_sharehub_sharedalbums_create_shared_album_button"
        android:layout_width="@dimen/photos_sharingtab_sharehub_sharedalbums_carousel_item_size"
        android:layout_height="@dimen/photos_sharingtab_sharehub_sharedalbums_carousel_item_size"
        android:foreground="@drawable/carousel_press"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/create_shared_album_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/create_shared_album_button"
        app:layout_constraintStart_toStartOf="@+id/create_shared_album_button"
        app:layout_constraintTop_toBottomOf="@+id/create_shared_album_button"
        style="@style/TextAppearance.Photos.Subhead2"/>
</android.support.constraint.ConstraintLayout>
