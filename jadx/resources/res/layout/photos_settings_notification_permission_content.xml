<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/colorOnBackground"
        android:gravity="center_horizontal"
        android:id="@+id/photos_notification_permission_title"
        android:paddingLeft="@dimen/photos_settings_notification_permission_subtitle_side_padding"
        android:paddingRight="@dimen/photos_settings_notification_permission_subtitle_side_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_settings_notification_permission_title"
        support:layout_constraintBottom_toTopOf="@+id/photos_notification_permission_subtitle"
        support:layout_constraintLeft_toLeftOf="parent"
        support:layout_constraintRight_toRightOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        support:layout_constraintVertical_chainStyle="spread"
        style="@style/TextAppearance.Photos.Headline5"/>
    <TextView
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center_horizontal"
        android:id="@+id/photos_notification_permission_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_settings_notification_permission_subtitle"
        support:layout_constraintBottom_toTopOf="@+id/photos_notification_permission_start_button"
        support:layout_constraintLeft_toLeftOf="parent"
        support:layout_constraintRight_toRightOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/photos_notification_permission_title"
        support:layout_constraintVertical_chainStyle="packed"
        style="@style/TextAppearance.Photos.Body2"/>
    <Button
        android:id="@+id/photos_notification_permission_start_button"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/photos_settings_notification_permission_button"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintLeft_toLeftOf="parent"
        support:layout_constraintRight_toRightOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/photos_notification_permission_subtitle"
        support:layout_constraintVertical_chainStyle="packed"
        style="@style/Widget.Photos.BoldButton"/>
</android.support.constraint.ConstraintLayout>
