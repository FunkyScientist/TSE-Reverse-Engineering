<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_filter_settings_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_title_margin"
            android:text="@string/photos_allphotos_gridcontrols_customized_app_filter_settings_dialog_title"
            style="@style/TextAppearance.Photos.HeadlineSmall"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/not_customized"
            android:paddingTop="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingBottom="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingEnd="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding_end"
            android:paddingVertical="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding">
            <RadioButton
                android:id="@+id/not_customized_button"
                android:padding="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/not_customized_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/photos_allphotos_gridcontrols_customized_app_filter_settings_dialog_not_customized_title"
                app:layout_constraintBottom_toTopOf="@+id/not_customized_subtitle"
                app:layout_constraintStart_toEndOf="@+id/not_customized_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.Text"/>
            <TextView
                android:id="@+id/not_customized_subtitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/not_customized_title"
                app:layout_constraintTop_toBottomOf="@+id/not_customized_title"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.SubText"/>
        </android.support.constraint.ConstraintLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/photos_allphotos_bottomsheet_gridcontrols_divider_margin"
            android:layout_marginTop="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_divider_margin_vertical"
            android:layout_marginRight="@dimen/photos_allphotos_bottomsheet_gridcontrols_divider_margin"
            android:layout_marginBottom="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_divider_margin_vertical"
            android:layout_marginHorizontal="@dimen/photos_allphotos_bottomsheet_gridcontrols_divider_margin"
            android:layout_marginVertical="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_divider_margin_vertical"
            app:dividerColor="?attr/colorOutlineVariant"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/show_all"
            android:paddingTop="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingBottom="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingEnd="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding_end"
            android:paddingVertical="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding">
            <RadioButton
                android:id="@+id/show_all_button"
                android:padding="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_allphotos_gridcontrols_show_all_base_filter_setting_title"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.Text"/>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/hide_clutter"
            android:paddingTop="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingBottom="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingEnd="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding_end"
            android:paddingVertical="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding">
            <RadioButton
                android:id="@+id/hide_clutter_button"
                android:padding="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/hide_clutter_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/photos_allphotos_gridcontrols_hide_clutter_base_filter_setting_title"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/hide_clutter_subtitle"
                app:layout_constraintStart_toEndOf="@+id/hide_clutter_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.Text"/>
            <TextView
                android:id="@+id/hide_clutter_subtitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/photos_allphotos_gridcontrols_hide_clutter_base_filter_setting_subtitle_v3"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/hide_clutter_title"
                app:layout_constraintTop_toBottomOf="@+id/hide_clutter_title"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.SubText"/>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/show_none"
            android:paddingTop="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingBottom="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
            android:paddingEnd="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding_end"
            android:paddingVertical="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding">
            <RadioButton
                android:id="@+id/show_none_button"
                android:padding="@dimen/photos_allphotos_gridcontrols_customized_app_dialog_padding"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_allphotos_gridcontrols_show_none_base_filter_setting_title_v2"
                style="@style/Photos.AllPhotos.GridControls.AppFilter.Dialog.Text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
