<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/album_cover"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_title_image_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_title_image_size"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/photos_assistant_cardui_icon_padding"/>
    <RelativeLayout
        android:id="@+id/title_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/assistant_card_text_layout"/>
        <include layout="@layout/assistant_card_overflow_button"/>
    </RelativeLayout>
</LinearLayout>
