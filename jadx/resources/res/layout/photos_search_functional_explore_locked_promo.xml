<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/photosSurface2"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_search_functional_explore_locked_promo_title"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_search_functional_explore_locked_promo_description"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/functional_explore_locked_promo_button"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:text="@string/photos_search_functional_explore_locked_promo_button_text"
        app:icon="@drawable/photos_googleoneassets_logo_ring_whitebg_24"
        app:iconGravity="textStart"
        app:iconTint="@null"/>
</LinearLayout>
