<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/action_buttons_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/cancel_button"
        android:background="@color/google_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_alignParentStart="true"/>
    <Space
        android:id="@+id/action_buttons_spacer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/add_button"
        android:layout_toEndOf="@+id/cancel_button"/>
    <Button
        android:textColor="?attr/photosPrimary"
        android:id="@+id/add_button"
        android:background="@color/google_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_search_functional_reminders_creation_add_button"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
