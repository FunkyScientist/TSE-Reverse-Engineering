<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        style="@style/GridContainer">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/grid_header"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <TextView
                    android:id="@+id/grid_count_header"
                    style="@style/GridCountHeader"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/grid_under_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/grid_estimated_location_header"
                        android:text="@string/photos_mapexplore_ui_estimated_locations"
                        style="@style/GridEstimatedLocationHeader"/>
                    <TextView
                        android:id="@+id/grid_all_photos_header"
                        android:text="@string/photos_mapexplore_ui_all_photos"
                        style="@style/GridAllPhotosHeader"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:textColor="?attr/photosPrimary"
                android:id="@+id/select_all_button"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone"
                android:text="@string/photos_mapexplore_ui_select_all"
                style="@style/SelectAllStyle"/>
        </RelativeLayout>
        <View
            android:id="@+id/photo_grid_header_divider"
            android:background="?attr/colorSurfaceVariant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photos_mapexplore_ui_grid_header_shadow_height"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/photo_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/grid_date_range_text"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photos_mapexplore_ui_grid_date_range_header_height"
                android:maxLines="1"/>
            <include
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_mapexplore_ui_grid_date_range_header_height"
                layout="@layout/photos_emptystate_container"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
