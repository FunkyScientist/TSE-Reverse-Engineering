<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="end"
    android:id="@+id/expansion_pivot"
    android:focusable="true"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="@dimen/photos_list_date_header_pivot_margin_end_edge_aligned">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/expansion_pivot_icon"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="center"
        android:contentDescription="@null"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/expansion_pivot_spinner"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="@style/Widget.Photos.ProgressBar.Indeterminate"/>
</FrameLayout>
