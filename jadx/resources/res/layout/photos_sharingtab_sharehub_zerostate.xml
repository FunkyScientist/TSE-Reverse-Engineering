<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/photos_sharingtab_sharehub_zerostate_title"
            android:layout_marginStart="94dp"
            android:layout_marginEnd="94dp"/>
        <com.google.android.apps.photos.theme.SurfaceMaterialCardView
            android:id="@+id/partner_promo"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="?android:attr/colorBackground"
            app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
            app:strokeColor="?attr/colorSurfaceVariant">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingEnd="40dp">
                <ImageView
                    android:id="@+id/partner_promo_icon"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/photos_sharingtab_sharehub_zerostate_partner_promo_icon"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                    android:gravity="center_horizontal"
                    android:id="@+id/partner_promo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/photos_sharingtab_sharehub_partner_promo_title"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Button"
                    android:textColor="?attr/photosPrimary"
                    android:id="@+id/partner_promo_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/photos_sharingtab_sharehub_partner_promo_subtitle"/>
            </LinearLayout>
        </com.google.android.apps.photos.theme.SurfaceMaterialCardView>
        <com.google.android.apps.photos.theme.SurfaceMaterialCardView
            android:id="@+id/shared_albums_promo"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="?android:attr/colorBackground"
            app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
            app:strokeColor="?attr/colorSurfaceVariant">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingEnd="40dp">
                <ImageView
                    android:id="@+id/sharedalbum_promo_icon"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/photos_sharingtab_sharehub_zerostate_sharedalbum_promo_icon"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                    android:gravity="center_horizontal"
                    android:id="@+id/sharedalbum_promo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/photos_sharingtab_sharehub_zerostate_sharedalbumpromo_title"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Button"
                    android:textColor="?attr/photosPrimary"
                    android:id="@+id/sharedalbum_promo_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/photos_sharingtab_sharehub_zerostate_sharedalbumpromo_subtitle"/>
            </LinearLayout>
        </com.google.android.apps.photos.theme.SurfaceMaterialCardView>
    </LinearLayout>
</ScrollView>
