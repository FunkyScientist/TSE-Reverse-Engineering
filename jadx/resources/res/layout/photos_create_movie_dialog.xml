<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/photos_create_movie_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="top"
        android:id="@+id/photos_create_v3_guided_movies_toolbar_and_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale">
        <android.support.v7.widget.Toolbar
            android:id="@+id/photos_create_v3_guided_movies_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <Button
            android:id="@+id/photos_create_v3_start_from_scratch_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_create_movie_theme_picker_manual_creation_title"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="22dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            app:drawableTint="?attr/colorOnPrimary"
            app:icon="@drawable/quantum_gm_ic_add_vd_theme_24"
            app:iconGravity="textStart"
            app:iconSize="18dp"
            style="@style/photos_create_start_from_scratch_button"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:textSize="36sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center_horizontal"
                android:id="@+id/photos_create_theme_title"
                android:paddingTop="16dp"
                android:paddingBottom="48dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photos_create_start_from_a_theme"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/photos_create_movie_dialog_recycler_view"
                android:paddingTop="8dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
