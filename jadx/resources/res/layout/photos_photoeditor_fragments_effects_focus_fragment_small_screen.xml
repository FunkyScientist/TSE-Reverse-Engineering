<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/google_black"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/photos_photoeditor_fragments_effects_focus_placeholder"
        android:background="@color/google_black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="26dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_gravity="center"
        android:id="@+id/photos_photoeditor_fragments_effects_focus_recyclerview"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="128dp"/>
    <include layout="@layout/photos_photoeditor_slider"/>
    <include layout="@layout/photos_photoeditor_fragments_effects_exit_bar"/>
</LinearLayout>
