<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="@style/Theme.Photos.StoryShare.ToolbarSubtitle"
        app:titleTextAppearance="@style/Theme.Photos.StoryShare.ToolbarTitle"
        style="?attr/actionBarStyle">
        <Button
            android:layout_gravity="end"
            android:id="@+id/select_all_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="@string/photos_stories_share_select_all_media"
            style="@style/Widget.Photos.Button.Borderless"/>
    </android.support.v7.widget.Toolbar>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginHorizontal="30dp"
        app:checkedButton="@+id/video_toggle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:selectionRequired="true"
        app:singleSelection="true">
        <com.google.android.material.button.MaterialButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/video_toggle_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photos_stories_share_next_gen_switch_video_label"
            android:layout_weight="1"
            app:icon="@drawable/gs_check_vd_theme_24"
            app:iconGravity="textStart"
            style="?attr/materialButtonOutlinedStyle"/>
        <com.google.android.material.button.MaterialButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/photos_toggle_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconGravity="textStart"
            style="?attr/materialButtonOutlinedStyle"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/preview_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="sharousel_fragment_container, video_preview_container"
        app:layout_constraintTop_toBottomOf="@+id/toggle_group"/>
    <android.support.v4.app.FragmentContainerView
        android:id="@+id/sharousel_fragment_container"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggle_group"/>
    <android.support.v4.app.FragmentContainerView
        android:id="@+id/video_preview_container"
        android:paddingBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggle_group"/>
    <View
        android:id="@+id/link_created_scrim"
        android:background="@color/photos_daynight_grey900_alpha50"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_barrier">
        <com.google.android.libraries.social.p043ui.views.expandingscrollview.ExpandingScrollView
            android:layout_gravity="center_horizontal"
            android:id="@+id/share_expander"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.apps.photos.view.BoundedFrameLayout
                android:id="@+id/fragment_container"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"/>
        </com.google.android.libraries.social.p043ui.views.expandingscrollview.ExpandingScrollView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/people_view_container"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.v4.app.FragmentContainerView
        android:id="@+id/edit_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <Button
        android:id="@+id/edit_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_stories_share_edit"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Photos.Button.StrokedButton"/>
    <Button
        android:id="@+id/share_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_strings_share_action"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/quantum_gm_ic_share_vd_theme_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.Photos.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
