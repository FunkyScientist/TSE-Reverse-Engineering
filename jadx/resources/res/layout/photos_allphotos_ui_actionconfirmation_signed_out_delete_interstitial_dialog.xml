<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photos_allphotos_ui_actionconfirmation_signed_out_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:textColor="?attr/colorOnBackground"
            android:gravity="start"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="@string/delete_interstitial_positive_text"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textSize="14sp"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:gravity="start"
            android:id="@+id/photos_allphotos_ui_actionconfirmation_signed_out_dialog_info"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photos_allphotos_ui_actionconfirmation_signed_out_delete_interstitial_body"/>
    </LinearLayout>
</ScrollView>
