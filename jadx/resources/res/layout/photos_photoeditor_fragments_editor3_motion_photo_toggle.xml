<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/google_white"
        android:gravity="center_vertical"
        android:id="@+id/photos_photoeditor_commonui_motion_photo_disabled_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_photoeditor_commonui_a11y_motion_disabled"
        android:layout_marginStart="12dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:gravity="end|top"
        android:id="@+id/photos_photoeditor_fragments_editor3_motion_photo_toggle_view"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        app:lottie_fileName="motion_still_play_pause_gm.json"
        app:lottie_loop="false"/>
</LinearLayout>
