<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/photos_photoeditor_udon_opening_disclaimer"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photos_photoeditor_udon_opening_disclaimer_magic_editor_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/photos_photoeditor_udon_opt_in_flask_icon"/>
        <TextView
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/photos_photoeditor_udon_disclaimer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/photos_photoeditor_fragments_editor3_udon_confirm_entry_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_udon_opening_disclaimer_magic_editor_icon"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textColorLink="?attr/colorOnSurfaceVariant"
            android:linksClickable="true"
            android:id="@+id/photos_photoeditor_udon_disclaimer_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_udon_disclaimer_title"/>
        <Button
            android:textColor="?attr/colorPrimary"
            android:id="@+id/photos_photoeditor_udon_disclaimer_reject_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/photos_photoeditor_fragments_editor3_udon_reject"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/photos_photoeditor_udon_disclaimer_accept_button"
            app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_udon_disclaimer_body_text"
            style="@style/Widget.Material3.Button.TextButton"/>
        <Button
            android:textColor="?attr/colorPrimary"
            android:id="@+id/photos_photoeditor_udon_disclaimer_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/photos_photoeditor_fragments_editor3_udon_accept"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_udon_disclaimer_body_text"
            style="@style/Widget.Material3.Button.TextButton"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
