<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_videoplayer_videoplayer_processing_v2"
    android:background="@color/google_scrim"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/photos_videoplayer_processing_icon"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/quantum_gm_ic_cloud_sync_vd_theme_24"
            app:tint="@color/google_grey50"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/photos_videoplayer_processing_progress_bar"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/google_grey500"/>
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="@style/quantum_text_subhead_white"
            android:textColor="@color/google_grey50"
            android:layout_gravity="center"
            android:id="@+id/photos_videoplayer_videoplayer_processing_v2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_videoplayer_video_not_ready"/>
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
            android:textColor="@color/google_grey50"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/photos_videoplayer_movie_processing_text"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="@string/photos_videoplayer_movie_not_ready_message"/>
    </LinearLayout>
</FrameLayout>
