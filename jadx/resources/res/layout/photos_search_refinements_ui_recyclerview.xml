<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:textColor="?attr/colorOnBackground"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/photos_search_refinements_ui_filter_button"
            android:layout_marginStart="16dp"/>
        <com.google.android.apps.photos.orthogonalscroll.NestedCarouselRecyclerView
            android:id="@+id/dialog_overflow_carousel"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <com.google.android.apps.photos.orthogonalscroll.NestedCarouselRecyclerView
            android:id="@+id/dialog_overflow_chips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"/>
        <com.google.android.apps.photos.orthogonalscroll.NestedCarouselRecyclerView
            android:id="@+id/dialog_overflow_things_activities_events_chips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"/>
        <com.google.android.apps.photos.orthogonalscroll.NestedCarouselRecyclerView
            android:id="@+id/dialog_overflow_places_chips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
