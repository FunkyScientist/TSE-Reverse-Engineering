<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/continue_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/kirby_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/top_container"
                android:background="@drawable/photos_cloudstorage_kirby_gradient_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_gravity="center"
                        android:id="@+id/account_particle"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="92dp"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
                    <ImageView
                        android:id="@+id/avatar_error_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:contentDescription="@null"
                        android:layout_marginStart="28dp"
                        app:layout_constraintStart_toStartOf="@+id/account_particle"
                        app:layout_constraintTop_toTopOf="@+id/account_particle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:justifyContent="space_between"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
                            android:id="@+id/get_storage_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photos_cloudstorage_kirby_get_storage_instantly"
                            app:layout_flexBasisPercent="67%"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.Photos.LabelSmall"
                            android:textColor="@color/photos_cloudstorage_kirby_recommended_text_color"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:id="@+id/recommended_pill"
                            android:background="@drawable/photos_cloudstorage_kirby_recommended_pill_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photos_microvideo_stillexporter_beta_hint_high_quality"
                            android:maxLines="1"
                            android:textAlignment="gravity"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            app:layout_flexBasisPercent="33%"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buy_button_wrapper"
                    android:background="@drawable/photos_cloudstorage_kirby_container_outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:justifyContent="space_between"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/buy_storage_text_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="24dp"
                            android:layout_marginStart="16dp"
                            app:layout_flexBasisPercent="75%">
                            <TextView
                                android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
                                android:id="@+id/buy_storage_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
                                android:id="@+id/buy_storage_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_flexBasisPercent="15%">
                            <com.google.android.material.button.MaterialButton
                                android:layout_gravity="center"
                                android:id="@+id/buy_button"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="?attr/colorPrimary"
                                app:icon="@drawable/quantum_gm_ic_arrow_forward_vd_theme_24"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconSize="24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
                    android:id="@+id/cleanup_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="16dp"/>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/cleanup_target_shimmer"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    style="@style/FocusModeLoadingShimmer">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorOutlineVariant"
                        app:cardCornerRadius="8dp"
                        app:strokeWidth="0dp">
                        <TextView
                            android:layout_width="232dp"
                            android:layout_height="24dp"
                            android:textAlignment="center"/>
                    </com.google.android.material.card.MaterialCardView>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="160dp"
                    android:fillViewport="true"
                    android:layout_marginStart="16dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/smart_cleanup_suggestions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/continue_button_container"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp">
        <com.google.android.material.button.MaterialButton
            android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_cloudstorage_kirby_continue_button_text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="8dp"
            style="@style/Widget.Photos.Button.Borderless"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
