<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/avatar_frame"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/photos_search_peoplelabeling_avatar_content_description"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/avatar_loading_spinner"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline5"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:id="@+id/photos_search_peoplelabeling_header_title"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_frame"
        app:layout_constraintTop_toTopOf="@+id/avatar_frame"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:ellipsize="end"
        android:id="@+id/photos_search_peoplelabeling_header_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/photos_search_peoplelabeling_header_title"
        app:layout_constraintStart_toStartOf="@+id/photos_search_peoplelabeling_header_title"
        app:layout_constraintTop_toBottomOf="@+id/photos_search_peoplelabeling_header_title"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/banner_buttons_flexbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/photos_search_peoplelabeling_header_title"
        app:layout_constraintTop_toBottomOf="@+id/photos_search_peoplelabeling_header_subtitle">
        <Button
            android:textColor="?attr/photosPrimary"
            android:ellipsize="end"
            android:id="@+id/live_album_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_search_peoplelabeling_createlivealbum_button_text"
            android:maxLines="1"
            android:fontFamily="@font/google_sans_medium"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="24dp"
            style="@style/Photos.Search.PeopleLabeling.Header.Cta"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:ellipsize="end"
            android:id="@+id/print_photo_book_button"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_search_peoplelabeling_order_photos_chip"
            android:maxLines="1"
            android:fontFamily="@font/google_sans_medium"
            android:paddingHorizontal="0dp"
            style="@style/Photos.Search.PeopleLabeling.Header.Cta"/>
    </com.google.android.flexbox.FlexboxLayout>
    <View
        android:id="@+id/people_labeling_disable_header"
        android:background="?android:attr/colorBackground"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
