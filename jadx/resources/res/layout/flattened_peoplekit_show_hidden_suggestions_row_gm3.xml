<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="@dimen/peoplekit_listview_row_height">
    <RelativeLayout
        android:id="@+id/peoplekit_listview_flattened_show_hidden_suggestions_icon"
        android:background="@drawable/peoplekit_listview_light_neutral_circle_gm3"
        android:layout_width="@dimen/peoplekit_listview_row_avatar_size"
        android:layout_height="@dimen/peoplekit_listview_row_avatar_size"
        android:layout_marginLeft="@dimen/peoplekit_listview_row_padding"
        android:layout_marginTop="@dimen/peoplekit_listview_row_top_padding"
        android:layout_marginBottom="@dimen/peoplekit_listview_row_top_padding"
        android:layout_marginStart="@dimen/peoplekit_listview_row_padding">
        <android.support.v7.widget.AppCompatImageView
            android:theme="@style/peoplekit_listview_neutral_tint_gm3"
            android:layout_width="@dimen/peoplekit_listview_inner_avatar_size"
            android:layout_height="@dimen/peoplekit_listview_inner_avatar_size"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/quantum_gm_ic_visibility_vd_theme_24"/>
    </RelativeLayout>
    <TextView
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:id="@+id/peoplekit_listview_flattened_show_hidden_suggestions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/peoplekit_listview_row_padding"
        android:layout_marginRight="@dimen/peoplekit_listview_row_padding"
        android:text="@string/peoplekit_listview_show_hidden_suggestions"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/peoplekit_listview_row_padding"
        android:layout_marginEnd="@dimen/peoplekit_listview_row_padding"
        android:layout_toEndOf="@+id/peoplekit_listview_flattened_show_hidden_suggestions_icon"/>
</RelativeLayout>
