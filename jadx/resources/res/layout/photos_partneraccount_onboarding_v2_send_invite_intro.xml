<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
    app:strokeWidth="0dp">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/photos_partneraccount_onboarding_v2_send_intro_illustration"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.TitleLarge.Active"
            android:gravity="center_horizontal"
            android:id="@+id/title_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photos_partneraccount_onboarding_v2_send_intro_title"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.BodyMedium.Active"
            android:gravity="center_horizontal"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <include
            android:id="@+id/backup_off_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            layout="@layout/photos_partneraccount_onboarding_v2_backup_off"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
