<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:layout_marginStart="@dimen/photos_photoframes_devices_startMargin"
    android:layout_marginEnd="@dimen/photos_photoframes_devices_endMargin">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/device_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@null"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:id="@+id/device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"/>
        <TextView
            android:textAppearance="@style/photos_photoframes_devices_subtitle"
            android:id="@+id/device_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2sp"
            android:textAlignment="viewStart"/>
        <TextView
            android:textAppearance="@style/photos_photoframes_devices_link"
            android:id="@+id/empty_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:text="@string/photos_photoframes_devices_add_your_photos_subtitle"
            android:textAlignment="viewStart"/>
    </LinearLayout>
</LinearLayout>
