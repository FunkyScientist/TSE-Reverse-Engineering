<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <com.google.android.apps.photos.theme.SurfaceMaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/unlock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?attr/colorPrimary"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quantum_gm_ic_document_scanner_vd_theme_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center_vertical"
                android:id="@+id/unlock_banner_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_search_functional_explore_welcome_banner_title"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/unlock_banner_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/unlock_icon"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center_vertical"
                android:id="@+id/unlock_banner_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_search_functional_explore_welcome_banner_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/unlock_banner_title"
                app:layout_constraintTop_toBottomOf="@+id/unlock_banner_title"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorPrimary"
                android:id="@+id/unlock_dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/photos_strings_dismiss_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/unlock_action_button"
                app:layout_constraintTop_toBottomOf="@+id/unlock_banner_text"
                style="@style/Widget.Photos.Button.Borderless"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlock_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/photos_strings_learn_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unlock_banner_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.apps.photos.theme.SurfaceMaterialCardView>
</FrameLayout>
