<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/photos_printingskus_common_promotion_banner_text"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/preview_section"
        android:background="?attr/wallartBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.apps.photos.printingskus.wallart.p029ui.Canvas2DPreviewView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/wallart_2d_preview_with_wrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:showWraps="true"/>
        <include
            android:id="@+id/low_res_warning_icon"
            layout="@layout/photos_printingskus_common_ui_low_res_icon"/>
        <View
            android:id="@+id/tooltip"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:id="@+id/wrap_selection_header"
        android:text="@string/photos_printingskus_wallart_ui_wrap_selection_section_header"
        style="@style/photos_printingskus_wallart_ui_section_header"/>
    <HorizontalScrollView
        android:gravity="center"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/wrap_photo"
                layout="@layout/photos_printingskus_wallart_ui_wrap_selection_switching_button"/>
            <include
                android:id="@+id/wrap_white"
                layout="@layout/photos_printingskus_wallart_ui_wrap_selection_switching_button"/>
            <include
                android:id="@+id/wrap_black"
                layout="@layout/photos_printingskus_wallart_ui_wrap_selection_switching_button"/>
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/back"
            android:text="@string/photos_printingskus_wallart_ui_bottom_buttons_back"
            style="@style/wall_art_bottom_left_button"/>
        <Button
            android:id="@+id/preview"
            android:text="@string/photos_printingskus_wallart_ui_bottom_buttons_preview"
            style="@style/wall_art_bottom_right_button"/>
    </FrameLayout>
</LinearLayout>
