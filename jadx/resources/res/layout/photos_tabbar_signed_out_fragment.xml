<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/ThemeOverlay.Photos.TabBar"
    android:orientation="vertical"
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/photos_tabbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tab_photos"
            android:layout_width="0dp"
            android:text="@string/photos_tabbar_photos_label"
            android:layout_weight="1"
            style="@style/TabButton"/>
        <Button
            android:id="@+id/search_destination"
            android:layout_width="0dp"
            android:text="@string/photos_tabbar_search_label"
            android:layout_weight="1"
            style="@style/TabButton"/>
    </LinearLayout>
    <View
        android:id="@+id/fill_under_navigation_bar"
        android:background="@color/quantum_black_100"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
