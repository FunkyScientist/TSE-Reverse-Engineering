<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="start"
        android:id="@+id/lh_exit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_settings_location_delete_location_history_title"
        style="@style/TextAppearance.Photos.Body1"/>
    <TextView
        android:gravity="start"
        android:id="@+id/lh_exit_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_settings_location_delete_location_history_summary"
        style="@style/TextAppearance.Photos.Body2"/>
    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_settings_location_delete_location_history_delete"
        style="@style/Widget.Photos.Button.StrokedButton"/>
</LinearLayout>
