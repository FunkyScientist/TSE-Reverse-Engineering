<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/quantum_gm_ic_close_vd_theme_24"
        style="?attr/actionBarStyle">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/action_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_memories_tallac_create_invite_skip"
                android:textAlignment="viewEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Photos.Button.Borderless"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <include
        android:id="@+id/dialog_layout"
        android:visibility="visible"
        layout="@layout/photos_memories_tallac_create_dialog_layout"/>
    <include
        android:id="@+id/photos_layout"
        android:visibility="gone"
        layout="@layout/photos_memories_tallac_create_photos_layout"/>
    <include
        android:id="@+id/invite_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        layout="@layout/photos_memories_tallac_create_invite_layout"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/loading_spinner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        style="@style/Widget.Photos.ProgressBar.IndeterminateBlue"/>
</android.support.constraint.ConstraintLayout>
