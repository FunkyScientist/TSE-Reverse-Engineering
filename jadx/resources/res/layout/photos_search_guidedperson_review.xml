<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="14sp"
            android:textColor="@color/google_white"
            android:layout_gravity="end|top"
            android:id="@+id/send_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/photos_strings_send_feedback"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/quantum_gm_ic_feedback_vd_theme_24"
            app:drawableTint="@color/google_white"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline5"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="@string/photos_search_guidedperson_question"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/cluster_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/photos_search_guidedperson_review_person_icon_unnamed"/>
        <ImageView
            android:id="@+id/face_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/photos_search_guidedperson_review_face_icon"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.apps.photos.search.guidedconfirmation.GenericButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/yes"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/photos_search_guidedperson_yes"
            android:drawablePadding="12dp"
            android:textAllCaps="false"/>
        <com.google.android.apps.photos.search.guidedconfirmation.GenericButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/no"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/photos_search_guidedperson_no"
            android:drawablePadding="12dp"
            android:textAllCaps="false"/>
        <com.google.android.apps.photos.search.guidedconfirmation.GenericButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/not_sure"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/photos_search_guidedperson_not_sure"
            android:drawablePadding="12dp"
            android:textAllCaps="false"/>
    </LinearLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:max="10000"
        android:indeterminate="false"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.google.android.material.button.MaterialButton
            android:textAppearance="@style/TextAppearance.GoogleMaterial.Subhead1"
            android:textColor="?attr/photosPrimary"
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/photos_search_guidedconfirmation_cancel"
            app:rippleColor="?attr/photosPrimary"
            style="@style/Widget.Photos.Button.Borderless"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <com.google.android.material.button.MaterialButton
            android:textAppearance="@style/TextAppearance.GoogleMaterial.Subhead1"
            android:textColor="?attr/photosPrimary"
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/photos_search_guidedconfirmation_review_done"
            app:rippleColor="?attr/photosPrimary"
            style="@style/Widget.Photos.Button.Borderless"/>
    </LinearLayout>
</LinearLayout>
