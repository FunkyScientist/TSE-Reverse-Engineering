<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:layout_centerVertical="true">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/movie_editor_v3_change_aspect_ratio_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorOnSurface"
        app:cardCornerRadius="@dimen/photos_movies_v3_popup_cardview_radius"
        app:strokeWidth="0dp">
        <GridLayout
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:columnCount="2">
            <android.support.v7.widget.AppCompatTextView
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceInverse"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_button_display"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_movies_activity_aspect_ratio_menu"
                android:layout_columnSpan="2"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_16_9_landscape_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_16_9"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/quantum_gm_ic_crop_16_9_vd_theme_24"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_9_16_portrait_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_9_16"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/photos_movies_v3_activity_aspect_9_16"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_5_4_landscape_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_5_4"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/quantum_gm_ic_crop_5_4_vd_theme_24"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_4_5_portrait_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_4_5"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/photos_movies_v3_activity_aspect_4_5"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_4_3_landscape_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_4_3"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/quantum_gm_ic_crop_5_4_vd_theme_24"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_3_4_portrait_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_3_4"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/photos_movies_v3_activity_aspect_4_5"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_3_2_landscape_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_3_2"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/quantum_gm_ic_crop_3_2_vd_theme_24"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_2_3_portrait_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_2_3"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/photos_movies_v3_activity_aspect_2_3"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
            <android.support.v7.widget.AppCompatTextView
                android:textColor="?attr/colorOnSurfaceInverse"
                android:layout_gravity="center_vertical"
                android:id="@+id/movie_editor_v3_change_aspect_ratio_square_button"
                android:layout_width="0dp"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@string/photos_photoeditor_ui_aspect_ratio_square"
                android:layout_columnWeight="1"
                android:drawableTint="?attr/colorOnSurfaceInverse"
                app:drawableStartCompat="@drawable/quantum_gm_ic_crop_square_vd_theme_24"
                style="@style/photos_theme_bottom_sheet_menu_item"/>
        </GridLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
