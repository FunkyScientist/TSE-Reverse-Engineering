<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.list.DateHeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sticky_header_layout"
    android:background="@drawable/photos_theme_top_gradient"
    android:visibility="gone"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical"
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subtitle1"
            android:textColor="@color/photos_photogrid_stickyheaders_text_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textIsSelectable="false"/>
        <TextView
            android:textColor="@color/photos_photogrid_stickyheaders_text_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/location"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"/>
    </LinearLayout>
</com.google.android.apps.photos.list.DateHeaderLayout>
