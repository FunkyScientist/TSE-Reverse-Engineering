<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@android:id/widget_frame"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/photos_daydream_viewbinders_list_item_horizontal_spacing"
    android:paddingTop="@dimen/photos_daydream_viewbinders_list_item_vertical_spacing"
    android:paddingRight="@dimen/photos_daydream_viewbinders_list_item_horizontal_spacing"
    android:paddingBottom="@dimen/photos_daydream_viewbinders_list_item_vertical_spacing"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:paddingHorizontal="@dimen/photos_daydream_viewbinders_list_item_horizontal_spacing"
    android:paddingVertical="@dimen/photos_daydream_viewbinders_list_item_vertical_spacing">
    <TextView
        android:ellipsize="end"
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_marginEnd="6dp"
        style="@style/photos_daydream_viewbinders_list_item"/>
    <CheckBox
        android:id="@+id/toggle"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>
</LinearLayout>
