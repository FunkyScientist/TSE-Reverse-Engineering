<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/photos_album_sorting_ui_action_sheet_background"
        android:background="@color/photos_bottomsheet_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/photos_album_sorting_ui_action_sheet_content"
        android:background="?android:attr/colorBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Overline"
            android:textColor="?attr/photosTextColorSecondaryVariant"
            android:gravity="center_vertical"
            android:id="@+id/photos_album_sorting_ui_action_sheet_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="56dp"
            android:text="@string/photos_album_sorting_ui_popup_title"/>
        <include
            android:id="@+id/oldest_first"
            android:contentDescription="@string/photos_album_sorting_ui_oldest_first_popup_item_description"
            layout="@layout/photos_album_sorting_ui_sorting_option_choice"/>
        <include
            android:id="@+id/newest_first"
            android:contentDescription="@string/photos_album_sorting_ui_newest_first_popup_item_description"
            layout="@layout/photos_album_sorting_ui_sorting_option_choice"/>
        <include
            android:id="@+id/recently_added"
            android:contentDescription="@string/photos_album_sorting_ui_recently_added_popup_item_description"
            layout="@layout/photos_album_sorting_ui_sorting_option_choice"/>
        <include
            android:id="@+id/custom"
            android:visibility="gone"
            android:clickable="false"
            android:contentDescription="@string/photos_album_sorting_ui_custom_popup_item_description"
            layout="@layout/photos_album_sorting_ui_sorting_option_choice"/>
    </LinearLayout>
</merge>
