<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="8dp"
    android:paddingTop="16dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/image_layout"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/avatar"
            android:background="@drawable/photos_memories_tallac_avatar_add"
            android:padding="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"/>
        <ImageView
            android:layout_gravity="end|bottom"
            android:id="@+id/plus"
            android:background="@drawable/photos_memories_tallac_avatar_add"
            android:padding="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            android:tint="@color/google_white"
            android:cropToPadding="true"
            app:srcCompat="@drawable/quantum_gm_ic_add_vd_theme_24"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/photos_memories_myweek_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_layout"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="start"
        android:orientation="horizontal"
        android:id="@+id/album_subtitle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/image_layout"
        android:layout_alignParentEnd="true">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="@color/photos_daynight_blue600"
            android:ellipsize="end"
            android:id="@+id/my_week_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_memories_myweek_photo_journal"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:id="@+id/subtitle_divider"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_create_viewbinder_subtitle_divider"
            android:contentDescription="@null"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:ellipsize="end"
            android:id="@+id/my_week_last_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
