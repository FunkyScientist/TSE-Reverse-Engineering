<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_create_viewbinder_heading_albums"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Photos.Albums.View.AlbumHeading"/>
    <Button
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/albums_sort_dropdown_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:icon="@drawable/photos_quantum_gm_ic_swap_vert_vd_theme_18"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Photos.Button.Borderless.Icon"/>
</android.support.constraint.ConstraintLayout>
