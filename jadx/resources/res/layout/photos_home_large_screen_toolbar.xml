<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/toolbar_container"
    android:background="?attr/colorSurface"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/notification_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/large_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.libraries.material.productlockup.ProductLockupView
            android:id="@+id/toolbar_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="@string/photos_theme_product_name"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="32dp"/>
        <com.google.android.apps.photos.view.BoundedFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:maxWidth="560dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toolbar_upload_button"
            android:layout_toEndOf="@+id/toolbar_logo"
            android:layout_marginHorizontal="32dp">
            <android.support.v7.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:textColor="@color/photos_daynight_grey500"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/toolbar_search_box"
                android:background="@drawable/photos_home_large_screen_toolbar_search_box_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/photos_search_searchbox_text"
                android:singleLine="true"
                android:drawablePadding="16dp"
                android:paddingHorizontal="16dp"
                app:drawableStartCompat="@drawable/quantum_gm_ic_search_vd_theme_24"
                app:drawableTint="@color/photos_daynight_grey700"/>
        </com.google.android.apps.photos.view.BoundedFrameLayout>
        <android.support.v7.widget.AppCompatButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textColor="@color/photos_daynight_grey700"
            android:id="@+id/toolbar_search_icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/photos_tabbar_search_label"
            android:drawablePadding="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toolbar_upload_button"
            android:layout_marginHorizontal="20dp"
            app:drawableStartCompat="@drawable/quantum_gm_ic_search_vd_theme_24"
            style="@style/Widget.Photos.Button.Borderless"/>
        <android.support.v7.widget.AppCompatButton
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textColor="@color/photos_daynight_grey700"
            android:id="@+id/toolbar_upload_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_home_upload_label"
            android:drawablePadding="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toolbar"
            app:drawableStartCompat="@drawable/quantum_gm_ic_file_upload_vd_theme_24"
            style="@style/Widget.Photos.Button.Borderless"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@null"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:touchscreenBlocksFocus="false"/>
    </RelativeLayout>
    <View
        android:id="@+id/toolbar_line"
        android:background="@color/photos_daynight_grey300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
