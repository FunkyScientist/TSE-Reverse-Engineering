<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/photos_photoeditor_slider_start_end_padding"
    android:paddingEnd="@dimen/photos_photoeditor_slider_start_end_padding">
    <TextView
        android:id="@+id/photos_photoeditor_slider_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/photos_photoeditor_slider_text_label_height"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/photos_photoeditor_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.apps.photos.photoeditor.slider.ThumbSliderView
        android:id="@+id/photos_photoeditor_slider"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:maxHeight="@dimen/photos_photoeditor_slider_slider_progressbar_height_width"
        android:progressDrawable="@drawable/cpe_slider_progressbar"
        android:minHeight="@dimen/photos_photoeditor_slider_slider_progressbar_height_width"
        android:thumb="@drawable/photos_photoeditor_slider_state_changeable_thumb_large_screen_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_slider_label"/>
</android.support.constraint.ConstraintLayout>
