<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tallac_invite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:foreground="@drawable/photos_album_titlecard_facepile_tallac_outline"
    android:layout_marginHorizontal="16dp">
    <ImageView
        android:id="@+id/tallac_empty_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/photos_album_titlecard_facepile_tallac_background"
        android:cropToPadding="true"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/tallac_invite_only_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="@string/photos_album_titlecard_facepile_tallac_invite_only_title"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.Photos.Subtitle1"/>
    <TextView
        android:textColor="@color/photos_daynight_grey600"
        android:id="@+id/tallac_invite_only_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/photos_album_titlecard_facepile_tallac_invite_only_subtitle"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tallac_invite_only_title"
        style="@style/TextAppearance.Photos.BodyMedium"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tallac_faces"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tallac_invite_only_subtitle"/>
</android.support.constraint.ConstraintLayout>
