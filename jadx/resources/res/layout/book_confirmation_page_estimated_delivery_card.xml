<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/estimated_delivery_card"
    android:paddingLeft="@dimen/photos_printingskus_photobook_confirmation_card_internal_padding"
    android:paddingRight="@dimen/photos_printingskus_photobook_confirmation_card_internal_padding"
    android:paddingBottom="@dimen/photos_printingskus_photobook_confirmation_card_internal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/quantum_black_secondary_text"
        android:id="@+id/estimated_delivery_title"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_photobook_confirmation_estimated_delivery"
        android:textDirection="locale"
        android:textAlignment="gravity"
        style="@style/quantum_text_menu_black"/>
    <TextView
        android:textSize="16sp"
        android:orientation="vertical"
        android:id="@+id/estimated_delivery_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
</LinearLayout>
