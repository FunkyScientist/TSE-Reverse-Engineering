<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/people_hiding_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/photos_daynight_grey700"
        android:id="@+id/people_hiding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_memories_settings_hide_show_faces_description"
        android:lineSpacingExtra="6sp"
        android:layout_marginHorizontal="16dp"
        style="@style/TextAppearance.Photos.Body2"/>
    <FrameLayout
        android:id="@+id/explore_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
