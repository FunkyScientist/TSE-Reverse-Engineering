<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.touchcapture.TouchCaptureView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touch_capture_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photos_theme_actionbar_size_with_subtitle"
            style="@style/Widget.Photos.ActionMode.ActionBar.WithHome"/>
        <android.support.v4.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:layout_gravity="bottom"
            android:id="@+id/photos_partneraccount_onboarding_backup_off_banner"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/photos_partneraccount_people_activity_backup_off_banner_margin_top"
            android:layout_marginBottom="@dimen/photos_partneraccount_people_activity_backup_off_banner_margin_bottom"
            android:layout_marginStart="@dimen/photos_partneraccount_people_activity_backup_off_banner_margin_start"
            android:layout_marginEnd="@dimen/photos_partneraccount_people_activity_backup_off_banner_margin_end"/>
    </LinearLayout>
</com.google.android.apps.photos.touchcapture.TouchCaptureView>
