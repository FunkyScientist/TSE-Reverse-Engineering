<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="84dp"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline6"
        android:textColor="?attr/colorOnBackground"
        android:gravity="start|center_vertical"
        android:id="@+id/subscription_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/photos_printingskus_printsubscription_storefront_subscription_settings"/>
    <include
        android:id="@+id/front_settings"
        layout="@layout/photos_printingskus_printsubscription_storefront_settings_item"/>
    <include layout="@layout/photos_list_divider"/>
    <include
        android:id="@+id/back_settings"
        layout="@layout/photos_printingskus_printsubscription_storefront_settings_item"/>
    <include layout="@layout/photos_list_divider"/>
    <TextView
        android:id="@+id/featured_people_settings"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_printsubscription_storefront_people_settings"
        style="@style/photos_printingskus_printsubscription_storefront_settings_one_line_title"/>
    <include
        android:id="@+id/people_settings_divider"
        android:visibility="gone"
        layout="@layout/photos_list_divider"/>
    <TextView
        android:id="@+id/shipping_payment_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_printsubscription_storefront_shipping_payment_settings"
        style="@style/photos_printingskus_printsubscription_storefront_settings_one_line_title"/>
    <include layout="@layout/photos_list_divider"/>
    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_printsubscription_storefront_help"
        style="@style/photos_printingskus_printsubscription_storefront_settings_one_line_title"/>
    <include layout="@layout/photos_list_divider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp">
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:gravity="center"
            android:id="@+id/skip_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/photos_printingskus_printsubscription_storefront_skip_settings"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            style="@style/Widget.Photos.Button.StrokedButton"/>
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/photos_printingskus_printsubscription_storefront_cancel_settings"
            android:layout_weight="1"
            style="@style/Widget.Photos.Button.StrokedButton"/>
    </LinearLayout>
</LinearLayout>
