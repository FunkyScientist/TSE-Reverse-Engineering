<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.insetview.WindowInsetsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.opengl.GLSurfaceView
        android:id="@+id/photos_vrviewer_v2_gl_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/toolbar"
        android:layout="@layout/photos_vrviewer_v2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/photos_vrviewer_v2_controller_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/photos_vrviewer_v2_loading_spinner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.54"
        style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
    <RelativeLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/photos_vrviewer_v2_extra_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/photos_vrviewer_v2_magicwindow_button"
            android:background="@android:color/transparent"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/quantum_gm_ic_explore_white_24"
            android:contentDescription="@string/photos_vrviewer_v2_shared_compass_on_description"
            android:layout_alignParentStart="true"/>
        <ImageButton
            android:id="@+id/photos_vrviewer_v2_cardboard_button"
            android:background="@android:color/transparent"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/quantum_ic_cardboard_white_24"
            android:contentDescription="@string/photos_vrviewer_v2_shared_cardboard_description"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</com.google.android.apps.photos.insetview.WindowInsetsView>
