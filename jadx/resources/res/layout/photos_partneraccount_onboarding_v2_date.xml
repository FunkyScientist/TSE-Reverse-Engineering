<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_partneraccount_onboarding_v2_date_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
    app:strokeWidth="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">
        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/quantum_gm_ic_calendar_today_vd_theme_24"/>
        <ImageView
            android:id="@+id/expand_icon"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/quantum_gm_ic_expand_more_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.TitleMedium.Active"
            android:id="@+id/date_title_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintEnd_toStartOf="@+id/expand_icon"
            app:layout_constraintStart_toEndOf="@+id/date_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/PartnerSharing.TitleMedium.Inactive"
            android:id="@+id/date_title_singular_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintEnd_toStartOf="@+id/expand_icon"
            app:layout_constraintStart_toEndOf="@+id/date_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/date_title_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="date_title_default,date_title_singular_day"/>
        <RadioButton
            android:textAppearance="@style/PartnerSharing.BodyLarge.Active"
            android:textColor="@null"
            android:id="@+id/date_option_all_time"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            android:paddingBottom="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:button="@null"
            android:text="@string/photos_partneraccount_onboarding_v2_date_option_all_time"
            android:drawableEnd="@drawable/abc_btn_radio_material"
            android:textAlignment="textStart"
            android:layout_marginStart="12dp"
            android:buttonTint="?attr/photosPrimary"
            android:paddingVertical="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_title_barrier"/>
        <RadioButton
            android:textAppearance="@style/PartnerSharing.BodyLarge.Active"
            android:textColor="@null"
            android:id="@+id/date_option_from_day"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            android:paddingBottom="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/photos_partneraccount_onboarding_v2_date_option_from_day"
            android:drawableEnd="@drawable/abc_btn_radio_material"
            android:textAlignment="textStart"
            android:layout_marginStart="12dp"
            android:buttonTint="?attr/photosPrimary"
            android:paddingVertical="@dimen/photos_partneraccount_onboarding_v2_date_option_padding_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_option_all_time"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/date_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="date_title_barrier,date_option_all_time,date_option_from_day"/>
        <com.google.android.material.chip.Chip
            android:textColor="?attr/colorOnSecondaryContainer"
            android:id="@+id/date_chip"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/photos_partneraccount_onboarding_v2_date_option_all_time"
            android:layout_marginStart="12dp"
            app:chipBackgroundColor="?attr/colorSecondaryContainer"
            app:chipStrokeWidth="0dp"
            app:layout_constraintStart_toEndOf="@+id/date_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_barrier"/>
        <Button
            android:textAppearance="@style/PartnerSharing.LabelLarge.Primary"
            android:textColor="@null"
            android:id="@+id/date_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="8dp"
            android:text="@string/photos_strings_next_button"
            android:layout_marginHorizontal="8dp"
            app:backgroundTint="?attr/colorSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_chip"
            style="@style/Widget.Photos.Button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
