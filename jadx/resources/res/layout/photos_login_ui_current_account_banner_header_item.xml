<?xml version="1.0" encoding="utf-8"?>
<com.google.android.libraries.social.login.ui.CurrentAccountBannerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/quantum_ic_tooltip_grey600_48"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="64dp"
    android:layout_marginRight="24dp"
    android:minWidth="184dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/photos_daynight_white"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/photos_daynight_white"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</com.google.android.libraries.social.login.ui.CurrentAccountBannerView>
