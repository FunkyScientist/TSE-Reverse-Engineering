<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/photos_mediadetails_location_section_header_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/photos_mediadetails_header_item_height"
        android:text="@string/photos_mediadetails_location_location_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/photos_mediadetails_subhead"/>
    <Button
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:id="@+id/photos_mediadetails_open_in_maps_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:text="@string/photos_mediadetails_location_open_in_maps"
        android:maxLines="1"
        android:fontFamily="@font/google_sans_medium"
        android:paddingStart="@dimen/photos_mediadetails_item_margin_horizontal"
        android:paddingEnd="@dimen/photos_mediadetails_item_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/photos_mediadetails_location_section_header_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        style="@style/Widget.Photos.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>
