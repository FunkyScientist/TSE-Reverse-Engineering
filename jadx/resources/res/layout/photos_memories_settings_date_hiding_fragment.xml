<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/date_hiding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/people_hiding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_memories_settings_hide_dates_new_memories_description"
        android:lineSpacingExtra="6sp"
        android:layout_marginHorizontal="16dp"
        style="@style/TextAppearance.Photos.Body2"/>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="start"
        android:id="@+id/add_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/photos_memories_settings_add_dates"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.Photos.Button.StrokedButton"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/date_range_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
