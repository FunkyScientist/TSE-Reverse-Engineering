<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">
        <include
            android:id="@+id/summary"
            layout="@layout/photos_printingskus_common_orderdetails_summary"/>
        <include
            android:id="@+id/tracking"
            layout="@layout/photos_printingskus_common_orderdetails_tracking"/>
        <include
            android:id="@+id/shipping"
            layout="@layout/photos_printingskus_common_orderdetails_shipping"/>
        <TableLayout
            android:id="@+id/cost"
            android:paddingTop="32dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"/>
        <TextView
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:gravity="center"
            android:id="@+id/help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textDirection="locale"
            android:textAlignment="gravity"
            style="@style/TextAppearance.Photos.Body2"/>
    </LinearLayout>
</ScrollView>
