<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:background="@color/photos_daynight_white"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetStart="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/close_button"
            android:background="@null"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/cancel"
            app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp">
                <ViewStub
                    android:id="@+id/thumbnail_preview_stub"
                    android:visibility="gone"
                    android:layout="@layout/photos_picker_impl_thumnail_preview"
                    android:inflatedId="@+id/thumbnail_preview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Headline6"
                    android:textColor="@color/photos_daynight_grey800"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
                <Button
                    android:id="@+id/action_button"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    style="@style/Widget.Photos.Button.Borderless.PickerToolbarButton"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="@color/photos_daynight_grey700"
                android:id="@+id/subtitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>
