<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.floatingsearchbar.SearchBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/notification_bar_spacer"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/top_margin_spacer"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photos_floatingsearchbar_top_margin"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/floating_toolbar_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                contentPadding="0dp"
                style="@style/FloatingSearchBarCardView">
                <android.support.v7.widget.Toolbar
                    android:theme="@style/ThemeOverlay.Photos.ActionBar.FloatingToolbar"
                    android:id="@+id/floating_toolbar"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/photos_floatingsearchbar_height"
                    android:touchscreenBlocksFocus="false"
                    app:buttonGravity=""/>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/bottom_margin_spacer"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photos_floatingsearchbar_bottom_margin"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.apps.photos.floatingsearchbar.SearchBarLayout>
