<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/promo_container"
    android:background="?android:attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/photos_search_peoplegroupingonboarding_opt_in_promo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            support:layout_constraintGuide_percent="0.5"/>
        <ImageView
            android:id="@+id/submit_feedback_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="10dp"
            support:layout_constraintBottom_toBottomOf="@+id/submit_feedback"
            support:layout_constraintEnd_toStartOf="@+id/submit_feedback"
            support:layout_constraintTop_toTopOf="@+id/submit_feedback"
            support:srcCompat="@drawable/quantum_gm_ic_feedback_vd_theme_24"/>
        <TextView
            android:id="@+id/submit_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/photos_search_peoplegroupingonboarding_promo_fg_send_feedback"
            android:layout_marginEnd="24dp"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selection_sheet_image_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            support:layout_constraintBottom_toTopOf="@+id/selection_sheet_title"
            support:layout_constraintDimensionRatio="W,1:1"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toTopOf="parent"
            support:layout_constraintVertical_chainStyle="packed">
            <ImageView
                android:id="@+id/selection_sheet_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                support:layout_constraintBottom_toBottomOf="parent"
                support:layout_constraintDimensionRatio="1:1"
                support:layout_constraintEnd_toEndOf="parent"
                support:layout_constraintHeight_max="224dp"
                support:layout_constraintStart_toStartOf="parent"
                support:layout_constraintTop_toTopOf="parent"
                support:layout_constraintWidth_max="224dp"
                support:srcCompat="@drawable/photos_search_peoplegroupingonboarding_global_promo"/>
            <ImageView
                android:id="@+id/face1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                support:layout_constraintBottom_toBottomOf="@+id/selection_sheet_image"
                support:layout_constraintDimensionRatio="H,1:1"
                support:layout_constraintEnd_toEndOf="@+id/selection_sheet_image"
                support:layout_constraintHorizontal_bias="0.971"
                support:layout_constraintStart_toStartOf="@+id/selection_sheet_image"
                support:layout_constraintTop_toTopOf="@+id/selection_sheet_image"
                support:layout_constraintWidth_default="percent"
                support:layout_constraintWidth_percent="0.323"/>
            <ImageView
                android:id="@+id/face2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                support:layout_constraintBottom_toBottomOf="@+id/selection_sheet_image"
                support:layout_constraintDimensionRatio="H,1:1"
                support:layout_constraintEnd_toEndOf="@+id/selection_sheet_image"
                support:layout_constraintHorizontal_bias="0.471"
                support:layout_constraintStart_toStartOf="@+id/selection_sheet_image"
                support:layout_constraintTop_toTopOf="@+id/selection_sheet_image"
                support:layout_constraintVertical_bias="0.854"
                support:layout_constraintWidth_default="percent"
                support:layout_constraintWidth_percent="0.264"/>
            <ImageView
                android:id="@+id/face3"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                support:layout_constraintBottom_toBottomOf="@+id/selection_sheet_image"
                support:layout_constraintDimensionRatio="H,1:1"
                support:layout_constraintEnd_toEndOf="@+id/selection_sheet_image"
                support:layout_constraintHorizontal_bias="0.375"
                support:layout_constraintStart_toStartOf="@+id/selection_sheet_image"
                support:layout_constraintTop_toTopOf="@+id/selection_sheet_image"
                support:layout_constraintVertical_bias="0.176"
                support:layout_constraintWidth_default="percent"
                support:layout_constraintWidth_percent="0.234"/>
            <ImageView
                android:id="@+id/face4"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                support:layout_constraintBottom_toBottomOf="@+id/selection_sheet_image"
                support:layout_constraintDimensionRatio="H,1:1"
                support:layout_constraintEnd_toEndOf="@+id/selection_sheet_image"
                support:layout_constraintHorizontal_bias="0.029"
                support:layout_constraintStart_toStartOf="@+id/selection_sheet_image"
                support:layout_constraintTop_toTopOf="@+id/selection_sheet_image"
                support:layout_constraintWidth_default="percent"
                support:layout_constraintWidth_percent="0.191"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline4"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:id="@+id/selection_sheet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:breakStrategy="balanced"
            support:layout_constraintBottom_toTopOf="@+id/selection_sheet_desc"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toBottomOf="@+id/selection_sheet_image_container"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:textColorLink="?android:attr/textColorSecondary"
            android:gravity="top|center_horizontal"
            android:id="@+id/selection_sheet_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="4sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:breakStrategy="balanced"
            support:layout_constraintBottom_toTopOf="@+id/selection_sheet_additional_desc"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toBottomOf="@+id/selection_sheet_title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:textColorLink="?android:attr/textColorSecondary"
            android:gravity="top|center_horizontal"
            android:id="@+id/selection_sheet_additional_desc"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="4sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            support:layout_constraintBottom_toTopOf="@+id/button_bar_layout"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toBottomOf="@+id/selection_sheet_desc"/>
        <android.support.v7.widget.ButtonBarLayout
            android:gravity="center_vertical"
            android:id="@+id/button_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="22dp"
            support:layout_constraintBottom_toBottomOf="parent"
            support:layout_constraintEnd_toEndOf="parent"
            support:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnPrimary"
                android:ellipsize="end"
                android:id="@+id/no_thanks_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/photos_search_peoplegroupingonboarding_promo_selection_sheet_dont_allow_button"
                android:maxLines="2"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.Photos.Button"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnPrimary"
                android:ellipsize="end"
                android:id="@+id/ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/photos_search_peoplegroupingonboarding_promo_selection_sheet_allow_button"
                android:maxLines="2"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.Photos.Button"/>
        </android.support.v7.widget.ButtonBarLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
