<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/layout_minHeight">
    <LinearLayout
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:orientation="horizontal"
        android:id="@+id/notification_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_marginEnd"
        android:layout_toStartOf="@+id/image"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/notification_header_small_icon"
            android:layout_width="@dimen/image_iconSideLength"
            android:layout_height="@dimen/image_iconSideLength"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/image_marginEnd"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:ellipsize="end"
            android:id="@+id/notification_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/header_title_marginEnd"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
            android:ellipsize="end"
            android:id="@+id/notification_header_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/header_timestamp_marginEnd"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:ellipsize="end"
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/notification_header"
        android:layout_marginEnd="@dimen/content_marginEnd"
        android:layout_toStartOf="@+id/image"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Compat.Notification"
        android:ellipsize="end"
        android:id="@+id/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/notification_title"
        android:layout_marginEnd="@dimen/content_marginEnd"
        android:layout_toStartOf="@+id/image"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:id="@+id/notification_image_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/image"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignEnd="@+id/image">
        <ImageView
            android:id="@+id/notification_image_badge_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/notification_image_thumbnail_background_rectangle"
            android:layout_alignTop="@+id/notification_image_badge_text"
            android:layout_alignBottom="@+id/notification_image_badge_text"
            android:contentDescription="@null"
            android:layout_alignEnd="@+id/notification_image_badge_text"/>
        <TextView
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/notification_image_badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    </RelativeLayout>
</RelativeLayout>
