<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AAG.Theme.AppWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/photos_widget_loading_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tint="?android:attr/colorBackground"
        android:contentDescription="@string/photos_widget_loading"/>
    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:foregroundTint="@color/aag_color_on_surface"
        style="@style/Widget.Photos.ProgressBar.Indeterminate"/>
</FrameLayout>
