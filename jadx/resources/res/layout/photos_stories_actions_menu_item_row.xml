<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp">
        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/photos_daynight_grey700"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/photos_stories_actions_menu_item_row_title"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawablePadding="16dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:paddingStart="16dp"
            android:layout_marginEnd="16dp"
            support:drawableTint="@color/photos_daynight_grey700"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/photosPrimary"
            android:gravity="center_vertical"
            android:id="@+id/photos_stories_actions_menu_item_row_badge_label"
            android:background="@drawable/photos_stories_action_share_memory_badge_label_drawable"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="google"
            android:textAlignment="viewStart"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"/>
    </LinearLayout>
</FrameLayout>
