<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/photos_album_sorting_ui_vertical_padding_large"
    android:paddingBottom="@dimen/photos_album_sorting_ui_vertical_padding_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/photos_album_sorting_ui_group_horizontal_padding">
    <ImageView
        android:id="@+id/checkmark"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingEnd="@dimen/photos_album_sorting_ui_item_horizontal_padding"
        app:srcCompat="@drawable/quantum_gm_ic_check_vd_theme_24"
        app:tint="?attr/photosPrimary"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:id="@+id/sorting_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/photos_album_sorting_ui_item_horizontal_padding"/>
</LinearLayout>
