<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.photoeditor.commonui.ActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cpe_cancel_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/photos_photoeditor_commonui_action_panel_horizontal_padding"
        android:paddingRight="@dimen/photos_photoeditor_commonui_action_panel_horizontal_padding"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/quantum_gm_ic_close_white_24"
        android:contentDescription="@string/photos_photoeditor_commonui_a11y_close_editor"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:textSize="@dimen/photos_photoeditor_commonui_editor_save_button_font_size"
        android:textColor="@color/photos_photoeditor_commonui_action_panel_text"
        android:gravity="center_vertical"
        android:id="@+id/cpe_save_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/photos_photoeditor_commonui_action_panel_horizontal_padding"
        android:paddingRight="@dimen/photos_photoeditor_commonui_action_panel_horizontal_padding"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/photos_photoeditor_commonui_editor_action_save"
        android:contentDescription="@string/photos_photoeditor_commonui_a11y_save_edits"
        style="@style/TextAppearance.Photos.Button"/>
    <ViewStub
        android:layout_gravity="end|top"
        android:id="@+id/photos_photoeditor_commonui_motion_photo_stub"
        android:layout="@layout/photos_photoeditor_commonui_motion_photo_toggle"
        android:inflatedId="@+id/photos_photoeditor_commonui_motion_photo_toggle_inflated"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</com.google.android.apps.photos.photoeditor.commonui.ActionBarView>
