<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatTextView
        android:textAppearance="@style/TextAppearance.Photos.Headline4"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/photos_search_explore_suggestedmerge_question_text_v2"
        android:layout_marginStart="18dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/source_avatar"
            layout="@layout/photos_search_explore_suggestedmerge_avatar"/>
        <include
            android:id="@+id/destination_avatar"
            layout="@layout/photos_search_explore_suggestedmerge_avatar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/yes_button"
            android:text="@string/photos_search_explore_suggestedmerge_same_person_button_text"
            app:drawableTopCompat="@drawable/quantum_gm_ic_check_vd_theme_24"
            style="@style/SuggestedMergeButton"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/no_button"
            android:text="@string/photos_search_explore_suggestedmerge_different_person_button_text"
            android:layout_marginStart="@dimen/photos_search_explore_suggestedmerge_button_spacing"
            android:layout_marginEnd="@dimen/photos_search_explore_suggestedmerge_button_spacing"
            app:drawableTopCompat="@drawable/quantum_gm_ic_not_interested_vd_theme_24"
            style="@style/SuggestedMergeButton"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/notsure_button"
            android:text="@string/photos_search_explore_suggestedmerge_notsure_button_text"
            app:drawableTopCompat="@drawable/quantum_gm_ic_help_outline_vd_theme_24"
            style="@style/SuggestedMergeButton"/>
    </LinearLayout>
</LinearLayout>
