<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/photobook_cover"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photos_printingskus_photobook_viewbinder_preview_book_cover"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="100%"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/quantum_black_text"
        android:gravity="center"
        android:id="@+id/photobook_title"
        android:text="@string/photos_printingskus_common_promotion_general_book_cover_title"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="70%"
        app:layout_widthPercent="100%"/>
</androidx.percentlayout.widget.PercentRelativeLayout>
