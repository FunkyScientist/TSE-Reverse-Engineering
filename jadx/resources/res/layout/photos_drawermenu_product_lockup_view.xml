<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.libraries.material.productlockup.ProductLockupView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_drawermenu_logo_lockup_container_margin_top"
        android:text="@string/photos_theme_product_name"
        android:layout_marginStart="@dimen/photos_drawermenu_logo_lockup_padding_start"/>
    <View
        android:background="?attr/colorOutline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_drawermenu_logo_lockup_separator_height"
        android:layout_marginTop="24dp"/>
</LinearLayout>
