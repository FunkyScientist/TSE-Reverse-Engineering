<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/text_layout"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/edit_button"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/photos_mediadetails_people_carousel_header_label"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_mediadetails_header_item_height"
            android:text="@string/photos_mediadetails_people_carousel_header"
            style="@style/photos_mediadetails_subhead"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/photos_mediadetails_people_carousel_unclustered_faces_label"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_mediadetails_header_item_padding_horizontal"
            android:paddingEnd="@dimen/photos_mediadetails_header_item_padding_horizontal"/>
    </LinearLayout>
    <TextView
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:id="@+id/edit_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/photos_mediadetails_item_margin_horizontal"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/photos_mediadetails_item_margin_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:text="@string/photos_mediadetails_people_facetag_edit_faces_title"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/google_sans_medium"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/photos_mediadetails_item_margin_horizontal"
        style="@style/Widget.Photos.Button.Borderless"/>
</RelativeLayout>
