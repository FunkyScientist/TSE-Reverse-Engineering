<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/comment_row"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textColor="@color/photos_envelope_feed_adapteritem_section_header_text_color"
            android:id="@+id/name_and_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/photos_envelope_feed_adapteritem_metadata_section_bottom_margin"
            android:layout_alignParentTop="true"
            android:textDirection="locale"
            android:layout_alignParentStart="true"/>
        <com.google.android.apps.photos.view.RoundedCornerImageView
            android:id="@+id/comment_photo"
            android:visibility="gone"
            android:layout_width="@dimen/photos_envelope_feed_adapteritem_thumbnail_size"
            android:layout_height="@dimen/photos_envelope_feed_adapteritem_thumbnail_size"
            android:layout_below="@+id/name_and_timestamp"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/photos_envelope_feed_adapteritem_thumbnail_left_margin"
            android:layout_alignParentEnd="true"
            app:radius="4dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="@color/photos_envelope_feed_adapteritem_comment_text_color"
            android:gravity="center_vertical"
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_below="@+id/name_and_timestamp"
            android:textDirection="locale"
            android:layout_toStartOf="@+id/comment_photo"
            android:layout_alignParentStart="true"/>
        <View
            android:id="@+id/comment_popup_locator"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:id="@+id/reply_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_envelope_feed_adapteritem_comment_reply_button"
        android:textAllCaps="false"
        app:icon="@drawable/quantum_gm_ic_reply_vd_theme_24"
        app:iconSize="18dp"
        style="@style/Widget.Photos.Button.Borderless"/>
</LinearLayout>
