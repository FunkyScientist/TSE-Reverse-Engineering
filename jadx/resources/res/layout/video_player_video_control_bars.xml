<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:id="@+id/photos_videoplayer_video_control_bars"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ViewStub
        android:orientation="vertical"
        android:id="@+id/photos_videoplayer_video_slomo_control_gradient_stub"
        android:visibility="gone"
        android:layout="@layout/video_player_slomo_controls"
        android:inflatedId="@+id/photos_videoplayer_video_slomo_control_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/video_progress_group"
        android:focusable="false"
        android:visibility="invisible"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp">
        <TextView
            android:textColor="@color/google_white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/video_current_time"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_videoplayer_thumb_halo_size"
            android:text="@string/photos_videoplayer_time_placeholder"
            android:fontFeatureSettings="tnum"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:focusable="false"
            android:clipChildren="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ViewStub
                android:id="@+id/photos_videoplayer_video_slomo_range_bar_stub"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="gone"
                android:layout="@layout/video_player_slomo_range_bar"
                android:inflatedId="@+id/photos_videoplayer_video_slomo_range_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photos_videoplayer_thumb_halo_size"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/photos_videoplayer_thumb_halo_size">
                <com.google.android.apps.photos.videoplayer.seekbar.VideoPlayerSeekBar
                    android:id="@+id/video_player_progress"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="@dimen/photos_videoplayer_thumb_halo_size"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:minHeight="@dimen/photos_videoplayer_thumb_halo_size"
                    android:thumbOffset="8dp"
                    style="@style/VideoPlayerSeekbar"/>
                <com.google.android.apps.photos.videoplayer.seekbar.dots.SeekBarDotsView
                    android:id="@+id/video_player_progress_dots_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:textColor="@color/google_white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/video_total_time"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_videoplayer_thumb_halo_size"
            android:text="@string/photos_videoplayer_time_placeholder"
            android:fontFeatureSettings="tnum"/>
        <ViewStub
            android:layout_gravity="bottom"
            android:id="@+id/photos_mute_button_stub"
            android:layout="@layout/photos_videoplayer_mute_button_holder"
            android:inflatedId="@+id/photos_videoplayer_mute_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
