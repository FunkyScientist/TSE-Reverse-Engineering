<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_container"
    android:padding="8dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:src="@drawable/product_logo_photos_color_144"
            android:contentDescription="@null"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline4"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="32dp"
            android:text="@string/photos_envelope_signedoutpromo_title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="32dp"
            android:text="@string/photos_envelope_signedoutpromo_message"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:gravity="center"
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/photos_envelope_signedoutpromo_sign_in_button"
            style="@style/quantum_text_button_white"/>
        <Button
            android:textAppearance="@style/TextAppearance.Photos.Subhead2"
            android:gravity="center"
            android:id="@+id/not_now_button"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/photos_envelope_signedoutpromo_not_now_button"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?android:attr/textColorSecondary"
        android:textColorLink="?android:attr/textColorSecondary"
        android:gravity="center"
        android:id="@+id/photo_face_grouping_learn_more"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="48dp"
        android:lineSpacingMultiplier="1.25"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?android:attr/textColorSecondary"
        android:textColorLink="?android:attr/textColorSecondary"
        android:gravity="center"
        android:linksClickable="true"
        android:id="@+id/korean_terms_of_service"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="48dp"
        android:lineSpacingMultiplier="1.25"/>
</LinearLayout>
