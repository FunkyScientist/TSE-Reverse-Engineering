<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/photos_sharingtab_sharehub_partner_incoming_invite_title"
            android:maxLines="1"
            android:paddingEnd="4dp"
            android:layout_marginVertical="12dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/colorOnError"
            android:layout_gravity="center_vertical"
            android:id="@+id/notification_number"
            android:background="@drawable/photos_sharingtab_sharehub_partner_notification_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <com.google.android.apps.photos.theme.SurfaceMaterialCardView
        android:id="@+id/card_view"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?android:attr/colorBackground"
        app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius">
        <android.support.constraint.ConstraintLayout
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">
            <com.google.android.apps.photos.avatar.collage.CircularCollageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="no"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/partner_sharing_icon"
                app:layout_constraintTop_toTopOf="@+id/partner_sharing_icon"/>
            <ImageView
                android:id="@+id/partner_sharing_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/photos_partneraccount_res_partner_sharing_icon_with_background_24"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textAlignment="viewStart"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@+id/avatar"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:textColor="?attr/photosPrimary"
                android:ellipsize="end"
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/photos_sharingtab_sharehub_partner_incoming_invite_view"
                android:maxLines="2"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title"/>
        </android.support.constraint.ConstraintLayout>
    </com.google.android.apps.photos.theme.SurfaceMaterialCardView>
</LinearLayout>
