<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    style="@style/PhotoPrintsSizeSelectionDialog">
    <ScrollView style="@style/PhotoPrintsSizeSelectionList">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="@string/photos_printingskus_common_ui_printspreview_change_size_title"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="25dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Overline"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:gravity="start"
                android:id="@+id/shipping_and_pickup_sizes_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="@string/photos_printingskus_retailprints_ui_preview_shipping_and_pickup_subtitle"/>
            <RadioGroup
                android:id="@+id/shipping_and_pickup_sizes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Overline"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:gravity="start"
                android:id="@+id/shipping_sizes_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="@string/photos_printingskus_retailprints_ui_preview_shipping_subtitle"
                android:layout_marginVertical="25dp"/>
            <RadioGroup
                android:id="@+id/shipping_sizes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:background="?attr/colorOutline"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <CheckBox
        android:id="@+id/apply_to_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/photos_printingskus_common_ui_printspreview_apply_to_all"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_common_ui_printspreview_apply"
        style="@style/Widget.Photos.BoldButton"/>
</LinearLayout>
