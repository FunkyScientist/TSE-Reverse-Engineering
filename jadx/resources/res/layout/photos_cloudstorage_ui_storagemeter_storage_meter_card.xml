<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/storage_meter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.GoogleMaterial.Subhead2.AutoBackupParticleTitle"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:max="100"
        app:trackColor="?attr/photosStorageBackground"
        app:trackCornerRadius="2dp"
        app:trackThickness="4dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.GoogleMaterial.Caption.AutoBackupParticleDescription"
        android:id="@+id/progress_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
    <com.google.android.apps.photos.cloudstorage.p010ui.storagemeter.StorageMeterActionChipSection
        android:id="@+id/chip_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
