<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.insetview.WindowInsetsView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/photos_partneraccount_onboarding_v2_accordion_impl_accordion"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp">
            <Button
                android:textAppearance="@style/PartnerSharing.LabelLarge.Primary"
                android:textColor="@null"
                android:id="@+id/skip_button"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:text="@string/photos_partneraccount_onboarding_v2_shareback_skip_button"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Photos.Button.Borderless"/>
            <Button
                android:id="@+id/confirm_invite_button"
                android:paddingLeft="24dp"
                android:paddingTop="10dp"
                android:paddingRight="24dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="12dp"
                style="@style/Widget.Photos.Button"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</com.google.android.apps.photos.insetview.WindowInsetsView>
