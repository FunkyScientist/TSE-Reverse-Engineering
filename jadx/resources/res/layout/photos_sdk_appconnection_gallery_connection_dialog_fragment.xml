<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingRight="24dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="20dp">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale"/>
        <include
            android:id="@+id/content_detail_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/photos_sdk_appconnection_gallery_connection_dialog_content_detail_item"/>
        <include
            android:id="@+id/content_detail_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            layout="@layout/photos_sdk_appconnection_gallery_connection_dialog_content_detail_item"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deny"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/photos_sdk_appconnection_gallery_connection_dialog_deny"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/allow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/photos_sdk_appconnection_gallery_connection_dialog_allow"
                android:layout_weight="1"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:gravity="center"
            android:id="@+id/disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:gravity="center"
            android:id="@+id/disclaimer_help_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
