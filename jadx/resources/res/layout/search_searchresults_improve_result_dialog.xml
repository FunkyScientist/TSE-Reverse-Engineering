<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/googleg_standard_color_40"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Headline6"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_search_searchresults_improve_results_title"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:paddingTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_search_searchresults_improve_results_description"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16sp"
            android:textColor="?android:attr/colorBackground"
            android:id="@+id/positive_button"
            android:background="@drawable/search_searchresults_blue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:minHeight="36dp"
            android:text="@string/photos_search_searchresults_improve_results_positive_button"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/photosPrimary"
            android:gravity="center"
            android:id="@+id/negative_button"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:text="@string/photos_strings_no_thanks"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/positive_button"/>
    </RelativeLayout>
</LinearLayout>
