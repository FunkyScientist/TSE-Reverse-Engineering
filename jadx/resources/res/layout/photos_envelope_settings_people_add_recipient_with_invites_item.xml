<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/add_recipient_with_invites_view"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/photos_envelope_settings_people_member_item_row_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/photos_envelope_settings_people_member_item_avatar_size"
        android:layout_height="@dimen/photos_envelope_settings_people_member_item_avatar_size"
        android:scaleType="center"
        android:contentDescription="@null"
        app:srcCompat="@drawable/quantum_gm_ic_add_vd_theme_24"
        style="@style/photos_envelope_settings_people_invite_plus"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/photos_envelope_settings_people_member_item_name_margin"
        android:layout_marginRight="@dimen/photos_envelope_settings_people_member_item_name_margin"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/photos_envelope_settings_people_invite_people"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_envelope_settings_people_add_recipient_item_title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textSize="14sp"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/num_open_invites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photos_envelope_settings_people_num_open_invites"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/overflow"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:contentDescription="@string/photos_envelope_settings_people_overflow_desc"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/quantum_gm_ic_more_vert_vd_theme_24"/>
</LinearLayout>
