<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="?attr/colorOutlineVariant"
    style="@style/Widget.Photos.CardView">
    <android.support.constraint.ConstraintLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@null"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="@+id/icon"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
            android:textColor="?attr/colorPrimary"
            android:gravity="start|center_vertical"
            android:id="@+id/itemOne"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:paddingStart="56dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
            android:textColor="?attr/colorPrimary"
            android:gravity="start|center_vertical"
            android:id="@+id/itemTwo"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="viewStart"
            android:paddingStart="56dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemOne"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
            android:textColor="?attr/colorPrimary"
            android:gravity="start|center_vertical"
            android:id="@+id/itemThree"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="viewStart"
            android:paddingStart="56dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemTwo"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
