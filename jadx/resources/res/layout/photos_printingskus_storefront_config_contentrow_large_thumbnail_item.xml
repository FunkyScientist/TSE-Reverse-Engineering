<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="0dp"
        style="@style/Widget.Photos.CardView">
        <com.google.android.apps.photos.theme.SquareImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_printingskus_storefront_config_contentrow_content_item_title_icon_height"
            android:paddingEnd="4dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead2"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:textAlignment="gravity"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
</LinearLayout>
