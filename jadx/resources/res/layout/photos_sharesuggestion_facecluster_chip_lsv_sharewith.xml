<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/share_chip_face_three"
        android:background="@drawable/photos_sharesuggestion_facecluster_background"
        android:padding="2dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/photos_sharesuggestion_facecluster_sharewith_three_end_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/share_chip_face_two"
        android:background="@drawable/photos_sharesuggestion_facecluster_background"
        android:padding="2dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/photos_sharesuggestion_facecluster_sharewith_two_end_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/share_chip_face_one"
        android:background="@drawable/photos_sharesuggestion_facecluster_background"
        android:padding="2dp"
        android:visibility="gone"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/photos_sharesuggestion_facecluster_sharewith_one_end_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.chip.Chip
        android:ellipsize="end"
        android:id="@+id/share_chip_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkable="false"
        app:checkedIconVisible="false"
        app:chipBackgroundColor="@android:color/transparent"
        app:chipCornerRadius="30dp"
        app:chipIconSize="24dp"
        app:chipStartPadding="0dp"
        app:chipStrokeColor="?attr/colorOutlineVariant"
        app:chipSurfaceColor="@android:color/transparent"
        app:closeIcon="@drawable/quantum_gm_ic_close_vd_theme_24"
        app:closeIconTint="?attr/photosOnSurfaceVariant"
        app:closeIconVisible="true"
        app:ensureMinTouchTargetSize="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Photos.Chip.Input.Icon"/>
    <TextView
        android:id="@+id/share_chip_touch_target"
        android:background="@android:color/transparent"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/photos_sharesuggestion_facecluster_sharewith_one_end_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
