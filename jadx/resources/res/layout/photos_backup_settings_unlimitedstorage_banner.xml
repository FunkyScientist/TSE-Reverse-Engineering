<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/photos_backup_settings_unlimitedstorage_banner_background"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/unlimitedstorage_banner_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@null"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="9dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:textColor="?attr/colorOnBackground"
        android:gravity="top"
        android:layout_gravity="center_vertical"
        android:id="@+id/unlimitedstorage_banner_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_weight="1"
        android:lineSpacingExtra="4sp"
        android:letterSpacing="0.02"
        android:layout_marginHorizontal="14dp"/>
</LinearLayout>
