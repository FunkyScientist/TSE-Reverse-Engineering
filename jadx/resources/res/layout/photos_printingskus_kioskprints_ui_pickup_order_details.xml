<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/order_thumbnail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="?attr/colorOutline"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/order_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/order_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/photos_printingskus_kioskprints_ui_pickup_order_title"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/order_thumbnail"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/order_reference"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/order_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/order_label"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/order_description"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/order_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/order_reference"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reorder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_kioskprints_ui_pickup_reorder_text"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/order_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/order_description"
        style="@style/Widget.Photos.Button.Borderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>
