<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/zeroprefix_item_container"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/zeroprefix_item"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_search_autocomplete_zeroprefix_icon_size">
        <ImageView
            android:id="@+id/icon"
            android:padding="@dimen/photos_search_autocomplete_zeroprefix_icon_padding"
            android:layout_width="@dimen/photos_search_autocomplete_zeroprefix_icon_size"
            android:layout_height="@dimen/photos_search_autocomplete_zeroprefix_icon_size"
            android:contentDescription="@null"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/photos_search_autocomplete_zeroprefix_text_horiz_padding"
            android:paddingEnd="@dimen/photos_search_autocomplete_zeroprefix_text_horiz_padding"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/colorSurfaceVariant"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
