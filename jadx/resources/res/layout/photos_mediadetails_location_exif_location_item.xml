<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/photos_mediadetails_item_padding"
    android:paddingBottom="@dimen/photos_mediadetails_item_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="@dimen/photos_mediadetails_item_min_height"
    android:layout_marginStart="@dimen/photos_mediadetails_item_margin_horizontal"
    android:layout_marginEnd="@dimen/photos_mediadetails_item_margin_horizontal"
    android:paddingVertical="@dimen/photos_mediadetails_item_padding">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/description"
        android:paddingTop="@dimen/photos_mediadetails_item_padding"
        android:paddingBottom="@dimen/photos_mediadetails_item_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingVertical="@dimen/photos_mediadetails_item_padding">
        <LinearLayout
            android:gravity="start"
            android:orientation="horizontal"
            android:id="@+id/label_layout"
            android:paddingLeft="2dp"
            android:paddingTop="8dp"
            android:paddingRight="2dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp">
            <TextView
                android:layout_gravity="start|center_vertical"
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_mediadetails_location_exif_location_reverse_geocoding_loading"
                style="@style/TextAppearance.Photos.Subhead2.MediaDetailsExifItemText"/>
            <ImageView
                android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
                android:layout_gravity="center_vertical"
                android:id="@+id/alias_location_info_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/photos_mediadetails_location_info_icon_content_description"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/quantum_gm_ic_info_vd_theme_24"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="start"
            android:orientation="horizontal"
            android:id="@+id/value_layout"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Photos.Body2.MediaDetailsExifItemSubtext"/>
            <ImageView
                android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
                android:layout_gravity="center_vertical"
                android:id="@+id/inferred_location_info_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/photos_mediadetails_location_info_icon_content_description"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/quantum_gm_ic_info_vd_theme_24"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/edit_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/photos_mediadetails_location_edit_icon_content_description"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:layout_alignParentEnd="true"
        android:paddingVertical="12dp"
        app:srcCompat="@drawable/quantum_gm_ic_edit_vd_theme_24"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/option_views"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_alignParentEnd="true">
        <View
            android:layout_gravity="end"
            android:id="@+id/anchor"
            android:layout_width="@dimen/photos_mediadetails_item_padding"
            android:layout_height="@dimen/photos_mediadetails_item_padding"/>
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/options"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/photos_mediadetails_item_padding"
            android:paddingRight="@dimen/photos_mediadetails_item_padding"
            android:paddingBottom="@dimen/photos_mediadetails_item_padding"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:contentDescription="@string/photos_mediadetails_accessibility_exif_info_options"
            android:paddingStart="@dimen/photos_mediadetails_item_padding"
            android:paddingEnd="@dimen/photos_mediadetails_item_padding"
            app:srcCompat="@drawable/quantum_gm_ic_more_vert_vd_theme_24"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/remove_location_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
            android:layout_gravity="center_vertical"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/photos_mediadetails_location_exif_inferred_location_remove_dialog_title"
            app:srcCompat="@drawable/quantum_gm_ic_location_off_vd_theme_24"/>
        <Button
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/remove_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:text="@string/photos_mediadetails_location_exif_inferred_location_remove_dialog_confirm_option"
            android:maxLines="1"
            android:fontFamily="@font/google_sans_medium"
            style="@style/Widget.Photos.Button.Borderless"/>
    </LinearLayout>
</RelativeLayout>
