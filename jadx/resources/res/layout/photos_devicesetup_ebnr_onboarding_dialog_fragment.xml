<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ebnr_onboarding"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <include layout="@layout/photos_devicesetup_header_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/ebnr_onboarding_mobile_data_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Switch
                android:layout_gravity="center_vertical"
                android:id="@+id/ebnr_onboarding_mobile_data_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.apps.photos.devicesetup.AccountHeaderView
            android:id="@+id/ebnr_onboarding_account_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ebnr_onboarding_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textColorLink="?android:attr/textColorSecondary"
            android:id="@+id/ebnr_onboarding_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:breakStrategy="balanced"
            android:layout_marginVertical="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
