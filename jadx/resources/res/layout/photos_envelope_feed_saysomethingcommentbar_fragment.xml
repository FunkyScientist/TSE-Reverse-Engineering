<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/photos_envelope_feed_saysomethingcommentbar_root_layout"
    android:background="@drawable/photos_envelope_feed_saysomethingcommentbar_background"
    android:focusable="true"
    android:visibility="invisible"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:elevation="4dp"
    android:layout_marginHorizontal="8dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_envelope_feed_saysomethingcommentbar_imageview"
        android:layout_width="@dimen/photos_comments_ui_commentbar_profile_image_size"
        android:layout_height="@dimen/photos_comments_ui_commentbar_profile_image_size"
        android:scaleType="centerCrop"
        android:layout_weight="0"
        android:foregroundGravity="center_vertical"
        android:contentDescription="@null"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_envelope_feed_saysomethingcommentbar_textview"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_comments_ui_commentbar_comment_bar_height"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:layout_weight="1"
        android:foregroundGravity="center_vertical"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:paddingHorizontal="16dp"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_envelope_feed_saysomethingcommentbar_heart_button"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="@dimen/photos_comments_ui_commentbar_profile_image_size"
        android:layout_height="@dimen/photos_comments_ui_commentbar_profile_image_size"
        android:scaleType="centerInside"
        android:layout_weight="0"
        android:contentDescription="@string/photos_photofragment_components_photobar_action_heart"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/quantum_gm_ic_favorite_border_vd_theme_24"/>
</LinearLayout>
