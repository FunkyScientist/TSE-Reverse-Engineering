<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promo_layout"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photos_premiumuploadpromo_height"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/photos_premiumuploadpromo_hairline_border"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">
        <LinearLayout
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="top"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/photos_premiumuploadpromo_logo"
                android:contentDescription="@string/photos_premiumuploadpromo_logo_description"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                    android:textColor="@color/photos_daynight_grey800"
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/photos_premiumuploadpromo_title"
                    android:maxLines="1"
                    android:lineSpacingExtra="4sp"
                    android:translationY="-1.98sp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="@color/photos_daynight_grey800"
                    android:ellipsize="end"
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos_premiumuploadpromo_description"
                    android:maxLines="3"
                    android:lineSpacingExtra="4sp"
                    android:translationY="-1.8sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/photosPrimary"
                android:id="@+id/dismiss_button"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/photos_premiumuploadpromo_dismiss_button_text"
                android:lineSpacingExtra="2sp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/photosPrimary"
                android:id="@+id/learn_more_button"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/photos_premiumuploadpromo_learnmore_button_text"
                android:lineSpacingExtra="2sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
