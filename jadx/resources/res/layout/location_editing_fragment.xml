<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="top"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/search_edit_text_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_album_enrichment_ui_location_editing_fragment_search_height"
        android:paddingStart="@dimen/photos_album_enrichment_ui_location_editing_fragment_start_padding"
        android:paddingEnd="@dimen/photos_album_enrichment_ui_location_editing_fragment_end_padding">
        <ImageView
            android:id="@+id/magnifying_glass_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/photos_album_enrichment_ui_location_editing_search_image_description"
            android:paddingStart="0dp"
            android:paddingEnd="32dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/quantum_gm_ic_search_vd_theme_24"/>
        <ImageView
            android:id="@+id/delete_text_button"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/photos_album_enrichment_ui_location_editing_delete_text_description"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/quantum_gm_ic_cancel_vd_theme_24"/>
        <EditText
            android:textColorHint="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/location_edit_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photos_album_enrichment_ui_location_editing_hint_text"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:layout_toStartOf="@+id/delete_text_button"
            android:layout_toEndOf="@+id/magnifying_glass_image"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/photosPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <include layout="@layout/place_enrichment_loading_progress_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingStart="@dimen/photos_album_enrichment_ui_location_editing_fragment_start_padding"
        android:paddingEnd="@dimen/photos_album_enrichment_ui_location_editing_fragment_end_padding">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/location_edit_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
