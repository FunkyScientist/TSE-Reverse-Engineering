<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_stories_promo_titling_title_container"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="photos_stories_promo_titling_title, subtitle, edit_cancel_button"/>
    <android.support.constraint.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <FrameLayout
        android:id="@+id/background_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.apps.photos.stories.image.BlurryImageView
            android:id="@+id/photos_stories_promo_titling_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <View
        android:background="@color/photos_stories_promo_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.68"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:textColor="@color/photos_stories_promo_title_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/photos_stories_promo_titling_title"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="88dp"
        android:layout_marginRight="44dp"
        android:maxLines="4"
        android:textAlignment="center"
        android:layout_marginHorizontal="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="0dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subtitle2"
        android:textSize="16sp"
        android:textColor="@color/photos_stories_promo_subtitle_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="44dp"
        android:maxLines="4"
        android:textAlignment="center"
        android:layout_marginHorizontal="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photos_stories_promo_titling_title"
        app:layout_goneMarginTop="0dp"/>
    <Button
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:textColor="@color/photos_stories_promo_title_color"
        android:gravity="center"
        android:id="@+id/edit_cancel_button"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_stories_promo_cancel_edit"
        android:contentDescription="@string/photos_stories_promo_cancel_edit"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Photos.Button.Borderless"/>
    <Button
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:textColor="@color/photos_stories_promo_title_color"
        android:gravity="center"
        android:id="@+id/edit_save_button"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_stories_promo_save_edit"
        android:contentDescription="@string/photos_stories_promo_save_edit"
        android:paddingStart="0dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Photos.Button.Borderless"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cover_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="72dp"
        android:layout_marginVertical="56dp"
        app:layout_constraintBottom_toTopOf="@+id/photos_stories_promo_titling_skip"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier">
        <com.google.android.apps.photos.view.RoundedCornerImageView
            android:id="@+id/photos_stories_promo_titling_cover_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>
        <View
            android:background="@drawable/photos_stories_promo_squircle_label_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintEnd_toEndOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintStart_toStartOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintTop_toTopOf="@+id/center_horizontal"/>
        <EditText
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:textStyle="bold"
            android:textColor="@color/photos_stories_promo_title_color"
            android:textColorHint="@color/photos_stories_promo_edittext_color"
            android:ellipsize="end"
            android:id="@+id/text_edit"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:textCursorDrawable="@drawable/photos_stories_promo_edittext_cursor"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="4dp"
            android:focusedByDefault="false"
            app:layout_constraintBottom_toBottomOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintEnd_toEndOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintStart_toStartOf="@+id/photos_stories_promo_titling_cover_image"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:textStyle="bold"
            android:textColor="@color/photos_stories_promo_title_color"
            android:id="@+id/updated_title_prefix"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@+id/updated_title"
            app:layout_constraintEnd_toEndOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintStart_toStartOf="@+id/photos_stories_promo_titling_cover_image"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:textStyle="bold"
            android:textColor="@color/photos_stories_promo_title_color"
            android:ellipsize="end"
            android:id="@+id/updated_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:maxLines="2"
            android:layout_marginHorizontal="16dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintEnd_toEndOf="@+id/photos_stories_promo_titling_cover_image"
            app:layout_constraintStart_toStartOf="@+id/photos_stories_promo_titling_cover_image"/>
        <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
    </android.support.constraint.ConstraintLayout>
    <Button
        android:textColor="@color/photos_stories_promo_dismiss_color"
        android:gravity="center"
        android:id="@+id/photos_stories_promo_titling_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:maxLines="1"
        android:fontFamily="@font/google_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Photos.Button.Borderless"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/complete_lottie_animation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:scaleType="centerCrop"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cover_image_container"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/photos_stories_promo_titling_autocomplete_rv"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
        android:id="@+id/photos_stories_promo_titling_update_progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
