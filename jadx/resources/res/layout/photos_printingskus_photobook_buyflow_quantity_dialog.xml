<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/photos_printingskus_common_promotion_banner_text"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:stretchColumns="*">
                <TableRow android:paddingBottom="3dp">
                    <TextView
                        android:textAppearance="@style/photos_printingskus_photobook_buyflow_product_name"
                        android:gravity="start"
                        android:id="@+id/photo_book_type"
                        android:textDirection="locale"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:textAppearance="@style/photos_printingskus_photobook_buyflow_base_price"
                        android:gravity="end"
                        android:id="@+id/base_price"
                        android:textDirection="locale"
                        android:textAlignment="gravity"/>
                </TableRow>
                <TableRow android:paddingBottom="3dp">
                    <TextView
                        android:gravity="start"
                        android:id="@+id/extra_pages_item"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        style="@style/photos_printingskus_photobook_buyflow_detailed_price_tag"/>
                    <TextView
                        android:gravity="end"
                        android:id="@+id/additional_page_price"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        style="@style/photos_printingskus_photobook_buyflow_detailed_price_number"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:gravity="start"
                        android:text="@string/photos_printingskus_photobook_buyflow_subtotal"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        style="@style/photos_printingskus_photobook_buyflow_detailed_price_tag"/>
                    <TextView
                        android:gravity="end"
                        android:id="@+id/per_item_subtotal_price"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        style="@style/photos_printingskus_photobook_buyflow_detailed_price_number"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/quantity_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:layout_marginStart="16dp">
                <TableRow>
                    <TextView
                        android:textAppearance="@style/photos_printingskus_photobook_buyflow_quantity_tag"
                        android:gravity="start|center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/photos_printingskus_photobook_buyflow_quantity"
                        android:textDirection="locale"
                        android:textAlignment="gravity"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textAppearance="@style/photos_printingskus_photobook_buyflow_quantity_number"
                            android:gravity="center"
                            android:id="@+id/quantity_selector_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:accessibilityTraversalBefore="@+id/quantity_selector_remove"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/quantity_selector_remove"
                                android:background="@android:color/transparent"
                                android:layout_width="55dp"
                                android:layout_height="51dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/quantum_gm_ic_remove_circle_gm_blue_24"
                                android:contentDescription="@string/photos_printingskus_photobook_buyflow_quantity_picker_remove_content_description"/>
                            <ImageButton
                                android:id="@+id/quantity_selector_add"
                                android:background="@android:color/transparent"
                                android:layout_width="55dp"
                                android:layout_height="51dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/quantum_gm_ic_add_circle_gm_blue_24"
                                android:contentDescription="@string/photos_printingskus_photobook_buyflow_quantity_picker_add_content_description"/>
                        </LinearLayout>
                    </FrameLayout>
                </TableRow>
            </TableLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/gift_message_container"
                android:paddingTop="@dimen/photos_printingskus_photobook_buyflow_gift_message_empty_state_padding"
                android:paddingBottom="@dimen/photos_printingskus_photobook_buyflow_gift_message_empty_state_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:counterEnabled="false"
                app:counterMaxLength="@integer/photos_printingskus_photobook_buyflow_gift_message_char_limit"
                app:counterTextAppearance="@style/photos_printingskus_photobook_buyflow_gift_message_info"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/photos_printingskus_photobook_buyflow_gift_message_info">
                <EditText
                    android:theme="@style/photos_printingskus_photobook_buyflow_gift_message_input_bottom_line"
                    android:textSize="@dimen/photos_printingskus_photobook_buyflow_gift_message_empty_state_text_size"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/photosOnSurfaceVariantFaded"
                    android:id="@+id/gift_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/photos_printingskus_photobook_buyflow_gift_message_empty_state_hint"
                    android:maxLength="@integer/photos_printingskus_photobook_buyflow_gift_message_char_limit"
                    android:inputType="text"
                    android:textDirection="locale"
                    android:textAlignment="gravity"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:gravity="start"
                    android:text="@string/photos_printingskus_photobook_buyflow_subtotal"
                    android:textDirection="locale"
                    android:textAlignment="gravity"
                    style="@style/photos_printingskus_photobook_buyflow_subtotal_tag"/>
                <TextView
                    android:gravity="end"
                    android:id="@+id/subtotal_price"
                    android:textDirection="locale"
                    android:textAlignment="gravity"
                    style="@style/photos_printingskus_photobook_buyflow_subtotal_number"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:textAppearance="@style/photos_printingskus_photobook_buyflow_subtotal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/photos_printingskus_photobook_buyflow_tax_and_shipping"
            android:textDirection="locale"
            android:textAlignment="gravity"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <include layout="@layout/photos_printingskus_photobook_buyflow_checkout_button_layout"/>
        <include layout="@layout/photos_printingskus_photobook_mixins_progress_bar"/>
    </LinearLayout>
</ScrollView>
