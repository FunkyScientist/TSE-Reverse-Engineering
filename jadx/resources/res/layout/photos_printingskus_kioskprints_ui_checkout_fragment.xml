<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        support:layout_constraintBottom_toTopOf="@+id/footer"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_order_header_title"
                style="@style/Photos.KioskPrints.SectionHeader"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:id="@+id/order_details_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    support:layout_constraintBottom_toBottomOf="parent"
                    support:layout_constraintEnd_toStartOf="@+id/order_details_price"
                    support:layout_constraintStart_toStartOf="parent"
                    support:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:id="@+id/order_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    support:layout_constraintEnd_toEndOf="parent"
                    support:layout_constraintTop_toTopOf="@+id/order_details_type"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_pickup_header_title"
                style="@style/Photos.KioskPrints.SectionHeader"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_print_in_store"
                android:drawablePadding="16dp"
                android:layout_marginEnd="20dp"
                support:drawableStartCompat="@drawable/quantum_gm_ic_location_on_vd_theme_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_pay_in_store"
                android:drawablePadding="16dp"
                support:drawableStartCompat="@drawable/quantum_gm_ic_monetization_on_vd_theme_24"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_button_disclaimer_price_estimate"
                android:textAlignment="textStart"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:gravity="start"
                android:id="@+id/checkout_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/photos_printingskus_kioskprints_ui_checkout_button_disclaimer_fujifilm"
                android:textAlignment="textStart"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/footer"
        android:background="?attr/colorSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="@string/photos_printingskus_kioskprints_ui_checkout_button_text"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
