<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="24dp">
    <FrameLayout
        android:id="@+id/photos_photoeditor_fragments_editor3_tools_icon_layout"
        android:layout_width="@dimen/photos_photoeditor_fragments_editor3_tools_item_icon_background"
        android:layout_height="@dimen/photos_photoeditor_fragments_editor3_tools_item_icon_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/photos_photoeditor_fragments_editor3_tools_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:textColor="@color/google_grey200"
        android:id="@+id/photos_photoeditor_fragments_editor3_tools_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/photos_photoeditor_fragments_editor3_tools_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_photoeditor_fragments_editor3_tools_icon_layout"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.apps.photos.photoeditor.slider.ThumbSliderView
        android:id="@+id/photos_photoeditor_fragments_editor3_tools_slider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxHeight="@dimen/photos_photoeditor_slider_slider_progressbar_height_width"
        android:progressDrawable="@drawable/cpe_slider_progressbar"
        android:minHeight="@dimen/photos_photoeditor_slider_slider_progressbar_height_width"
        android:thumb="@drawable/photos_photoeditor_slider_state_changeable_thumb_large_screen_design"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_photoeditor_fragments_editor3_tools_icon_layout"
        app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_fragments_editor3_tools_text"/>
</android.support.constraint.ConstraintLayout>
