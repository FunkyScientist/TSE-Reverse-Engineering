<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirm_link_sharing"
    android:background="?android:attr/colorBackground"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_link_vd_theme_24"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Overline"
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/photos_share_method_acled_link_sharing"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead1"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/photos_share_method_acled_confirm_link_sharing_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/photos_share_method_acled_confirm_link_sharing_description_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/photos_share_method_acled_cancel_link_sharing"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/create_link_button"
        app:layout_constraintTop_toBottomOf="@+id/description"
        style="@style/Widget.Photos.Button.Borderless"/>
    <Button
        android:id="@+id/create_link_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/photos_share_method_acled_create_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"/>
    <Space
        android:id="@+id/buttons_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/create_link_button"/>
</android.support.constraint.ConstraintLayout>
