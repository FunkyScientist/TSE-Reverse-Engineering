<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/photos_trash_ui_button_bar_buttons"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_trash_ui_button_bar_height">
        <Button
            android:textColor="?attr/colorError"
            android:id="@+id/photos_trash_ui_button_bar_delete_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_trash_ui_action_mode_delete_button_label"
            android:layout_weight="1"
            style="@style/ButtonBarButtonTextEnabled"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/photos_trash_ui_button_bar_restore_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_trash_ui_action_mode_restore_button_label"
            android:layout_weight="1"
            style="@style/ButtonBarButtonTextEnabled"/>
        <Button
            android:textColor="?attr/colorError"
            android:id="@+id/photos_trash_ui_button_bar_delete_all_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_trash_ui_action_mode_delete_all_button_label"
            android:layout_weight="1"
            style="@style/ButtonBarButtonTextEnabled"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/photos_trash_ui_button_bar_restore_all_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_trash_ui_action_mode_restore_all_button_label"
            android:layout_weight="1"
            style="@style/ButtonBarButtonTextEnabled"/>
    </LinearLayout>
    <View
        android:id="@+id/trash_button_bar_fill_under_navigation_bar"
        android:background="@color/quantum_black_100"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
