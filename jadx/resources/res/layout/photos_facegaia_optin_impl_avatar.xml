<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="86dp"
    android:layout_height="86dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <ImageView
        android:id="@+id/selected_border"
        android:visibility="invisible"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/photos_facegaia_optin_impl_selection_border_circle"
        android:layout_centerInParent="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foreground="@drawable/photos_facegaia_optin_impl_avatar_press"
        android:layout_centerInParent="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/selected_check"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photos_facegaia_optin_impl_selection_check_circle"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photos_facegaia_optin_impl_selected"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
