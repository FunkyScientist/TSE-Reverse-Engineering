<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/peoplekit_dialog_side_padding"
    android:paddingTop="@dimen/peoplekit_dialog_top_padding"
    android:paddingRight="@dimen/peoplekit_dialog_side_padding"
    android:paddingBottom="@dimen/peoplekit_dialog_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/peoplekit_dialog_side_padding"
    android:paddingEnd="@dimen/peoplekit_dialog_side_padding">
    <TextView
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:gravity="center"
        android:id="@+id/peoplekit_top_suggestions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/peoplekit_about_top_suggestions"/>
    <ScrollView
        android:paddingTop="@dimen/peoplekit_dialog_middle_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peoplekit_top_suggestions_title">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:id="@+id/peoplekit_top_suggestions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/peoplekit_about_suggested_people_info"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:id="@+id/peoplekit_top_suggestions_hide_content"
                android:paddingTop="@dimen/peoplekit_dialog_middle_padding"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/peoplekit_about_suggested_people_hide_info"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
