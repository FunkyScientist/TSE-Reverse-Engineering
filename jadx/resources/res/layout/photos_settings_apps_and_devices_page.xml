<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/photos_settings_header_and_footer_spacing"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/free_up_space_title"
                layout="@layout/photos_settings_button_layout"/>
            <Button
                android:id="@+id/free_up_space_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/photos_settings_device_management_title"
                android:layout_marginHorizontal="16dp"
                style="@style/Widget.Photos.Button.StrokedButton"/>
        </LinearLayout>
        <include
            android:id="@+id/photo_frames_button_divider"
            layout="@layout/photos_settings_divider_layout"/>
        <include
            android:id="@+id/photo_frames_button"
            layout="@layout/photos_settings_button_layout"/>
        <include
            android:id="@+id/sd_cards_button_divider"
            layout="@layout/photos_settings_divider_layout"/>
        <include
            android:id="@+id/sd_cards_button"
            layout="@layout/photos_settings_button_layout"/>
        <include
            android:id="@+id/raw_editor_button_divider"
            android:visibility="gone"
            layout="@layout/photos_settings_divider_layout"/>
        <include
            android:id="@+id/raw_editor_button"
            layout="@layout/photos_settings_button_layout"/>
        <include
            android:id="@+id/google_photos_access_button_divider"
            layout="@layout/photos_settings_divider_layout"/>
        <include
            android:id="@+id/google_photos_access_button"
            layout="@layout/photos_settings_button_layout"/>
        <include layout="@layout/photos_settings_header_and_footer_spacing"/>
    </LinearLayout>
</ScrollView>
