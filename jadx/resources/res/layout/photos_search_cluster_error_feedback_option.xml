<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/photos_search_cluster_error_feedback_option_layout"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">
    <CheckBox
        android:id="@+id/photos_search_cluster_error_feedback_option_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/photos_search_cluster_error_feedback_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        style="@style/Photos.Search.Cluster.Error.Feedback.View.Option.Text"/>
</LinearLayout>
