<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead1"
        android:textSize="16sp"
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/photos_mars_actionhandler_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/photos_mars_actionhandler_move_to_mars_title_v2"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/photos_mars_actionhandler_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/photos_mars_actionhandler_move_to_mars_body_v2_backup_off"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
</LinearLayout>
