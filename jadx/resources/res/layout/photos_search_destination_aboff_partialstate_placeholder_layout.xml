<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ab_off_partial_state_container"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Widget.Photos.CardView">
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ab_off_partial_state"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="16dp">
            <android.support.v7.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:gravity="center_vertical"
                android:id="@+id/ab_off_partial_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_search_destination_partialstate_aboff_link"
                android:drawablePadding="16dp"
                android:layout_toStartOf="@+id/ab_off_partial_state_image"
                android:layout_alignParentStart="true"
                app:drawableStartCompat="@drawable/quantum_gm_ic_cloud_upload_vd_theme_24"
                app:drawableTint="?attr/photosPrimary"/>
            <ImageView
                android:id="@+id/ab_off_partial_state_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?attr/photosOnSurfaceVariant"
                android:contentDescription="@null"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/quantum_gm_ic_navigate_next_vd_theme_24"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
