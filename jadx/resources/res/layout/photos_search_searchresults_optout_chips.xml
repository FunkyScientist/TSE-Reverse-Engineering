<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:id="@+id/photos_search_searchresults_optout_chips_container"
    android:background="?attr/colorSurface"
    android:visibility="gone"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true">
    <com.google.android.material.chip.ChipGroup
        android:gravity="start"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/photos_search_optout_chipgroup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:singleLine="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/photos_search_optout_most_recent_chip_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_search_searchresults_most_recent_chip"
            style="@style/photos_search_optout_chip"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/photos_search_optout_best_match_chip_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_search_searchresults_best_match_chip"
            style="@style/photos_search_optout_chip"/>
    </com.google.android.material.chip.ChipGroup>
</HorizontalScrollView>
