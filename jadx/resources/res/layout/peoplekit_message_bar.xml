<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/peoplekit_messagebar_elevation">
    <View
        android:id="@+id/message_bar_divider"
        android:background="@color/google_grey300"
        android:layout_width="match_parent"
        android:layout_height="@dimen/peoplekit_messagebar_divider_height"/>
    <RelativeLayout
        android:id="@+id/message_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/peoplekit_messagebar_min_height"
        android:layout_below="@+id/message_bar_divider">
        <RelativeLayout
            android:id="@+id/peoplekit_send_button_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/peoplekit_messagebar_side_padding"
            android:layout_marginTop="@dimen/peoplekit_messagebar_top_padding"
            android:layout_marginRight="@dimen/peoplekit_messagebar_side_padding"
            android:layout_marginBottom="@dimen/peoplekit_messagebar_top_padding"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/peoplekit_messagebar_side_padding"
            android:layout_marginVertical="@dimen/peoplekit_messagebar_top_padding">
            <RelativeLayout
                android:id="@+id/peoplekit_message_bar_extra_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/peoplekit_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peoplekit_message_bar_send_button"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/peoplekit_message_bar_extra_view"
                app:materialThemeOverlay="@style/Theme.GoogleMaterial.Light"
                style="@style/Widget.GoogleMaterial.Button"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/peoplekit_custom_send_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/peoplekit_message_bar_send_button"
                android:layout_toEndOf="@+id/peoplekit_message_bar_extra_view"/>
        </RelativeLayout>
        <EditText
            android:textSize="@dimen/peoplekit_messagebar_text_size"
            android:id="@+id/peoplekit_message_bar"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/peoplekit_messagebar_min_height"
            android:hint="@string/peoplekit_message_bar_hint"
            android:layout_centerVertical="true"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
            android:textCursorDrawable="@drawable/peoplekit_messagebar_cursor"
            android:paddingStart="@dimen/peoplekit_messagebar_side_padding"
            android:paddingEnd="@dimen/peoplekit_messagebar_side_padding"
            android:layout_toStartOf="@+id/peoplekit_send_button_wrapper"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/peoplekit_message_bar_sharing_as_container"
        android:background="@color/google_grey100"
        android:layout_width="match_parent"
        android:layout_height="@dimen/peoplekit_messagebar_sharing_as_label"
        android:layout_below="@+id/message_bar_container"
        android:paddingStart="@dimen/peoplekit_messagebar_side_padding">
        <TextView
            android:textSize="@dimen/peoplekit_sharing_as_text_size"
            android:textColor="@color/google_grey700"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/peoplekit_message_bar_sharing_as"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:layout_alignParentStart="true"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"/>
        <TextView
            android:textSize="@dimen/peoplekit_sharing_as_text_size"
            android:textColor="@color/google_grey700"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/peoplekit_message_bar_sharing_as_helper"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/peoplekit_message_bar_sharing_as"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/peoplekit_messagebar_helper_margin"
            android:layout_toEndOf="@+id/peoplekit_message_bar_sharing_as"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"/>
    </RelativeLayout>
</RelativeLayout>
