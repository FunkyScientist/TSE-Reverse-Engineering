<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/photos_photoeditor_udon_result_hint_background"
    android:padding="8dp"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="?attr/colorOnBackground"
        android:ellipsize="end"
        android:id="@+id/photos_photoeditor_udon_result_hint"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:drawablePadding="8dp"
        android:drawableTint="@color/google_default_color_inverse_primary_google"
        app:drawableStartCompat="@drawable/photos_photoeditor_udon_result_hint_icon"/>
    <ImageView
        android:id="@+id/photos_photoeditor_udon_result_hint_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/gs_info_vd_theme_20"/>
</LinearLayout>
