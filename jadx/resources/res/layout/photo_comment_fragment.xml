<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_comments_ui_comment_list_top_offset"/>
    <FrameLayout
        android:id="@+id/comment_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:id="@+id/comment_bar_divider"
        android:background="@color/quantum_grey400"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <FrameLayout
        android:id="@+id/comment_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
