<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/photos_daynight_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/spinner"
            android:layout_width="42dp"
            android:layout_height="26dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:indeterminateTint="?attr/photosPrimary"
            style="@style/Widget.Photos.ProgressBar.IndeterminateBlue"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/photos_daynight_grey900"
            android:layout_gravity="center_vertical"
            android:id="@+id/banner_text"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:lineSpacingExtra="6dp"
            style="@style/TextAppearance.Photos.Subhead2"/>
    </LinearLayout>
    <View
        android:layout_gravity="top"
        android:id="@+id/divider"
        android:background="@color/photos_daynight_grey300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</FrameLayout>
