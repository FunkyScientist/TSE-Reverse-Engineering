<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dropdown_container"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_search_refinements_ui_dropdown_top_margin"
        android:layout_marginBottom="@dimen/photos_search_refinements_ui_dropdown_bottom_margin"
        android:divider="@drawable/photos_search_refinements_ui_dropdown_divider"
        android:showDividers="middle"
        android:elevation="@dimen/photos_search_refinements_ui_dropdown_elevation">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/carousel_items_container"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photos_search_refinements_ui_carousel_height"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>
</FrameLayout>
