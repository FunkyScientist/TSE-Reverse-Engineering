<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <ImageView
        android:id="@+id/select_editor_row_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:textColor="@color/photos_editor_selecteditor_select_editor_dialog_text_color"
        android:gravity="center_vertical"
        android:id="@+id/select_editor_row_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/select_editor_row_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/select_editor_row_checkmark"
        app:layout_constraintStart_toEndOf="@+id/select_editor_row_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="@color/photos_editor_selecteditor_select_editor_dialog_subtitle_text_color"
        android:id="@+id/select_editor_row_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/select_editor_row_checkmark"
        app:layout_constraintStart_toEndOf="@+id/select_editor_row_icon"
        app:layout_constraintTop_toBottomOf="@+id/select_editor_row_title"/>
    <ImageView
        android:id="@+id/select_editor_row_checkmark"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_check_vd_theme_24"
        app:tint="?attr/colorOnSurfaceVariant"/>
</android.support.constraint.ConstraintLayout>
