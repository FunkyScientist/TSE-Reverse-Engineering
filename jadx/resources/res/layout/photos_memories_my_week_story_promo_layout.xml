<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.apps.photos.stories.image.BlurryImageView
        android:id="@+id/blurry_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/blurry_background_scrim"
        android:background="@color/photos_stories_promo_singleentity_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.68"/>
    <View
        android:id="@+id/default_background"
        android:background="@drawable/photos_stories_promo_singleentity_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:textColor="@color/photos_stories_promo_singleentity_title_color"
        android:gravity="center"
        android:id="@+id/title"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/photos_memories_my_week_promo_title"
        android:textAlignment="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="0dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:textColor="@color/photos_stories_promo_singleentity_subtitle_color"
        android:gravity="center"
        android:id="@+id/subtitle"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/photos_memories_my_week_promo_subtitle"
        android:textAlignment="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_goneMarginTop="0dp"/>
    <ImageView
        android:id="@+id/promo_bg"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:paddingHorizontal="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/my_week_card"
        android:background="@color/gm3_sys_color_dark_surface"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:clipChildren="true"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:paddingVertical="24dp"
        android:clipToOutline="true"
        app:layout_constraintBottom_toTopOf="@+id/primary_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle">
        <ImageView
            android:id="@+id/photos_memories_tallac_squircle_avatar"
            android:background="@drawable/photos_memories_my_week_avatar_border"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:importantForAccessibility="no"
            android:elevation="1dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/photos_memories_tallac_squircle_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodySmall"
            android:textColor="@color/google_white"
            android:ellipsize="end"
            android:gravity="bottom"
            android:id="@+id/photos_memories_tallac_squircle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_memories_tallac_placeholder_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <Button
        android:textColor="@color/photos_stories_promo_singleentity_button_text_color"
        android:ellipsize="end"
        android:id="@+id/primary_button"
        android:paddingLeft="@dimen/photos_stories_promo_button_horizontal_padding"
        android:paddingRight="@dimen/photos_stories_promo_button_horizontal_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/photos_stories_promo_button_horizontal_container_horizontal_margin"
        android:layout_marginRight="@dimen/photos_stories_promo_button_horizontal_container_horizontal_margin"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_memories_my_week_promo_get_started"
        android:maxLines="2"
        android:fontFamily="@font/google_sans_medium"
        android:backgroundTint="@color/photos_stories_promo_singleentity_button_background_color"
        android:layout_marginHorizontal="@dimen/photos_stories_promo_button_horizontal_container_horizontal_margin"
        android:paddingHorizontal="@dimen/photos_stories_promo_button_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Photos.Button.TonalButton"/>
    <Button
        android:textColor="@color/photos_stories_promo_singleentity_dismiss_button_color"
        android:gravity="center"
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/photos_stories_promo_singleentity_skip"
        android:maxLines="1"
        android:fontFamily="@font/google_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="0dp"
        style="@style/Widget.Photos.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>
