<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerInside"
        android:contentDescription="@android:string/cancel"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
    <include layout="@layout/shared_collection_not_found_layout"/>
    <ScrollView
        android:id="@+id/invite_primary_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="26dp">
            <ImageView
                android:id="@+id/album_owner_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"/>
            <TextView
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                style="@style/TextAppearance.GoogleMaterial.Headline6"/>
            <ImageView
                android:id="@+id/album_cover_photo"
                android:layout_width="@dimen/photos_share_invite_album_cover_size"
                android:layout_height="@dimen/photos_share_invite_album_cover_size"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:importantForAccessibility="no"/>
            <TextView
                android:gravity="center"
                android:id="@+id/cover_photo_caption"
                android:layout_width="@dimen/photos_share_invite_album_cover_size"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.GoogleMaterial.Caption"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp">
                <RelativeLayout
                    android:id="@+id/current_user_row"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/current_user_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:importantForAccessibility="no"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                        android:ellipsize="end"
                        android:id="@+id/current_user_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/current_user_avatar"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Caption"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:id="@+id/current_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:drawablePadding="8dp"
                        android:layout_below="@+id/current_user_display_name"
                        android:layout_toEndOf="@+id/current_user_avatar"
                        app:drawableEndCompat="@drawable/photos_quantum_gm_ic_keyboard_arrow_down_vd_theme_18"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/overflow_menu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/photos_share_invite_overflow_menu_content_description"
                    android:layout_marginHorizontal="4dp"
                    app:srcCompat="@drawable/quantum_gm_ic_more_vert_vd_theme_24"/>
            </LinearLayout>
            <Button
                android:id="@+id/join_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"/>
            <TextView
                android:id="@+id/join_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginVertical="16dp"
                style="@style/TextAppearance.GoogleMaterial.Caption"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
