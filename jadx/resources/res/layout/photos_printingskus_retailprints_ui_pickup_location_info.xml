<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/photos_printingskus_retailprints_ui_horizontal_margin">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        android:paddingTop="@dimen/photos_printingskus_retailprints_ui_pickup_icon_padding"
        android:paddingBottom="@dimen/photos_printingskus_retailprints_ui_pickup_icon_padding"
        android:layout_width="@dimen/photos_printingskus_retailprints_ui_pickup_icon_layout_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_location_on_vd_theme_24"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_name"
        android:paddingTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_address"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/photos_printingskus_retailprints_ui_pickup_location_name"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_call_store"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/photos_printingskus_retailprints_ui_pickup_location_address"/>
    <TextView
        android:textColor="?attr/photosPrimary"
        android:gravity="center"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_get_directions_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/photos_printingskus_retailprints_ui_pickup_get_directions_text"
        android:fontFamily="@font/google_sans_medium"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/photos_printingskus_retailprints_ui_pickup_location_address"/>
</android.support.constraint.ConstraintLayout>
