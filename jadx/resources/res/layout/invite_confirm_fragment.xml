<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/photos_partneraccount_onboarding_confirm_partner_invite_confirm_partner_label"
                style="@style/photos_partneraccount_onboarding_confirm_menu_title"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/photos_partneraccount_onboarding_confirm_avatar_size"
                    android:layout_height="@dimen/photos_partneraccount_onboarding_confirm_avatar_size"
                    android:contentDescription="@null"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp">
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body1"
                        android:ellipsize="end"
                        android:id="@+id/recipient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body2"
                        android:textColor="?attr/photosOnSurfaceVariant"
                        android:id="@+id/recipient_contact"
                        android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/recipient_access_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/photos_partneraccount_onboarding_confirm_menu_title"/>
                <android.support.v7.widget.AppCompatImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:id="@+id/learn_more_button"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:contentDescription="@string/photos_strings_learn_more"
                    app:srcCompat="@drawable/quantum_gm_ic_help_outline_vd_theme_24"/>
            </LinearLayout>
            <include layout="@layout/invite_recipient_access_details"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:textColorLink="?attr/photosOnSurfaceVariant"
            android:id="@+id/learn_more_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/confirm_button"
            android:text="@string/photos_partneraccount_onboarding_confirm_send_out_partner_invite_text"
            style="@style/Widget.Photos.PartneraccountOnboardingConfirmButton"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:layout_gravity="bottom"
        android:id="@+id/photos_partneraccount_onboarding_backup_off_banner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_partneraccount_onboarding_confirm_backup_off_banner_margin_top"
        android:layout_marginBottom="@dimen/photos_partneraccount_onboarding_confirm_backup_off_banner_margin_bottom"/>
</LinearLayout>
