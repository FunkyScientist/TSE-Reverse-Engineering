<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photos_search_guidedthings_explore_top_promo_outline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:tint="?attr/photosPrimary"
        android:layout_alignBottom="@+id/subtitle"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/quantum_gm_ic_photo_library_vd_theme_24"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead1"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/icon"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/subtitle"
        android:paddingBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/title"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/icon"/>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/photos_search_guidedthings_promo_review"
        android:layout_below="@+id/subtitle"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        style="@style/Widget.Photos.Button"/>
    <com.google.android.material.button.MaterialButton
        android:textColor="?attr/photosPrimary"
        android:layout_gravity="center"
        android:id="@+id/dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/photos_search_guidedthings_promo_dismiss"
        android:layout_below="@+id/subtitle"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/review_button"
        style="@style/Widget.Photos.Button.Borderless"/>
</RelativeLayout>
