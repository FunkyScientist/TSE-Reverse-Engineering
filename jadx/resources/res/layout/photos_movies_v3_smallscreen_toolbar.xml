<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_gravity="bottom"
        android:id="@+id/movie_editor_toolbar"
        android:background="@color/google_black"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:animateLayoutChanges="true"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        style="?attr/actionBarStyle">
        <RelativeLayout
            android:id="@+id/photos_movies_v3_smallscreen_movie_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnBackground"
                android:id="@+id/photos_movies_v3_smallscreen_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentStart="true"
                style="@style/Widget.Photos.Button.Borderless"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photos_movies_v3_smallscreen_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:text="@string/photos_photoeditor_commonui_editor_action_save"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.Photos.Button"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/photos_movies_v3_smallscreen_selected_clip_toolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnBackground"
                android:id="@+id/photos_movies_v3_smallscreen_remove_clip_button"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_movies_v3_ui_clipeditor_impl_remove_button_text"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="?attr/colorSurfaceContainer"
                app:icon="@drawable/quantum_gm_ic_delete_vd_theme_24"
                app:iconGravity="textStart"
                app:iconTint="?attr/colorOnBackground"
                style="@style/Widget.Photos.Button"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnBackground"
                android:id="@+id/photos_movies_v3_smallscreen_motion_button"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_movies_v3_ui_clipeditor_impl_motion_button_text"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="?attr/colorSurfaceContainer"
                app:icon="@drawable/quantum_gm_ic_animation_vd_theme_24"
                app:iconGravity="textStart"
                app:iconTint="?attr/colorOnBackground"
                style="@style/Widget.Photos.Button"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</merge>
