<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/reactions_bubbles_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="14dp">
    <ViewStub
        android:id="@+id/reaction_top_stub"
        android:inflatedId="@+id/reaction_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="50dp"/>
    <ViewStub
        android:id="@+id/reaction_middle_stub"
        android:inflatedId="@+id/reaction_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"/>
    <ViewStub
        android:id="@+id/reaction_bottom_stub"
        android:inflatedId="@+id/reaction_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"/>
</LinearLayout>
