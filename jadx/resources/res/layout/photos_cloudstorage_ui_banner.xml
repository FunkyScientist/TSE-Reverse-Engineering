<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.photos.view.AccessibleClickSpanTextView
        android:textSize="14sp"
        android:textColor="@color/photos_daynight_grey900"
        android:gravity="center_vertical"
        android:id="@+id/banner_text"
        android:background="@color/photos_daynight_white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:lineSpacingExtra="6dp"
        style="@style/TextAppearance.Photos.Subhead2"/>
    <View
        android:layout_gravity="top"
        android:id="@+id/divider"
        android:background="@color/photos_daynight_grey300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</FrameLayout>
