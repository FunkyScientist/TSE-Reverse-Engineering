<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:photos="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:id="@+id/toastbar"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    style="@style/identity_ToastBar">
    <ImageView
        android:layout_gravity="top"
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@null"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.apps.photos.devicesetup.AutoScaleTextView
            android:textSize="16sp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            photos:minTextSize="14sp"
            style="@style/quantum_text_body_1_white"/>
        <TextView
            android:textColor="@color/quantum_white_hint_text"
            android:ellipsize="end"
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/quantum_text_body_1_white"/>
    </LinearLayout>
</LinearLayout>
