<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/order_details_card"
    android:paddingBottom="24dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/photos_printingskus_wallart_ui_order_section_label"
        android:id="@+id/order_details_title"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_printingskus_common_orderdetails_order_info"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
    <LinearLayout
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/order_thumbnail_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">
                <ImageView
                    android:id="@+id/order_confirmation_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"/>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/order_details_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:id="@+id/order_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:id="@+id/order_details_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:id="@+id/order_details_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textColor="?attr/orderConfirmationTextColor"
                android:id="@+id/order_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textDirection="locale"
                android:textAlignment="gravity"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
