<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/album_cover_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.apps.photos.view.RoundedCornerImageView
            android:id="@+id/album_cover_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/carousel_press"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/album_cover_gradient_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:foreground="@drawable/tile_gradient"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="2dp">
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/story_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:tint="@color/google_white"
                android:importantForAccessibility="no"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/photos_quantum_gm_ic_web_stories_vd_theme_18"/>
            <ImageView
                android:layout_gravity="end"
                android:id="@+id/autobackup_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/quantum_gm_ic_cloud_off_white_18"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_albums_view_text_container_height">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:id="@+id/album_cover_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:layout_weight="1"
                android:lineSpacingExtra="2dp"
                android:textDirection="locale"
                style="@style/Photos.Albums.View.AlbumTitle"/>
            <ImageView
                android:id="@+id/sdcard_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/photos_albums_view_sd_card_horizontal_icon_18"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/album_cover_subtitle"
            android:paddingBottom="@dimen/photos_albums_view_subtitle_bottom_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textDirection="locale"
            style="@style/Photos.Albums.View.AlbumSubtitle"/>
    </LinearLayout>
</LinearLayout>
