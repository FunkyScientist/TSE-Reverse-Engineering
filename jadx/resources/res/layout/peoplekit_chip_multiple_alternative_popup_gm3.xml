<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/peoplekit_ui_popup_width"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/peoplekit_autocomplete_popup_primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/peoplekit_ui_autocomplete_popup_row_height"
        android:layout_marginTop="@dimen/peoplekit_ui_popup_half_padding"
        android:foreground="?attr/selectableItemBackground">
        <RelativeLayout
            android:id="@+id/peoplekit_autocomplete_popup_avatar"
            android:layout_width="@dimen/peoplekit_ui_autocomplete_icon_size"
            android:layout_height="@dimen/peoplekit_ui_autocomplete_icon_size"
            android:layout_marginLeft="@dimen/peoplekit_ui_autocomplete_popup_padding"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/peoplekit_ui_autocomplete_popup_padding"/>
        <TextView
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:id="@+id/peoplekit_autocomplete_popup_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/peoplekit_ui_autocomplete_popup_padding"
            android:layout_marginRight="@dimen/peoplekit_ui_autocomplete_popup_padding"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/peoplekit_ui_autocomplete_popup_padding"
            android:layout_marginEnd="@dimen/peoplekit_ui_autocomplete_popup_padding"
            android:layout_toEndOf="@+id/peoplekit_autocomplete_popup_avatar"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/peoplekit_autocomplete_popup_methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/peoplekit_ui_autocomplete_popup_offset"
        android:layout_below="@+id/peoplekit_autocomplete_popup_primary"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/peoplekit_ui_autocomplete_popup_offset"
        android:layout_below="@+id/peoplekit_autocomplete_popup_methods"
        layout="@layout/peoplekit_chip_popup_options_gm3"/>
</RelativeLayout>
