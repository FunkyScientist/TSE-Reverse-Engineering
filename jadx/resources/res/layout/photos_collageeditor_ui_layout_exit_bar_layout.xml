<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <com.google.android.material.button.MaterialButton
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/photos_collageeditor_ui_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.Photos.Button.Borderless"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photos_collageeditor_ui_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:text="@string/photos_strings_save_action"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.Photos.Button"/>
</RelativeLayout>
