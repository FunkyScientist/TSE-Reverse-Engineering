<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <include layout="@layout/photos_devicesetup_header_view"/>
        <com.google.android.apps.photos.devicesetup.AccountHeaderView
            android:id="@+id/onboarding_account_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showDropdownIcon="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/onboarding_toggle_group"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="24dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/onboarding_toggle_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_devicesetup_backup_automatically"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_gravity="center_vertical"
                android:id="@+id/onboarding_toggle"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboarding_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textColorLink="?android:attr/textColorSecondary"
            android:id="@+id/onboarding_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:breakStrategy="balanced"
            android:layout_marginVertical="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
