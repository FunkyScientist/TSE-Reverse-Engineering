<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/completed_lottie_animation"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/photos_devicemanagement_activity_completed_lottie_animation"
        style="@style/FreeUpSpaceLottieAnimation"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/completed_lottie_animation">
        <TextView
            android:id="@+id/free_up_space_completed_title"
            style="@style/FreeUpSpaceTitle"/>
        <TextView
            android:text="@string/photos_devicemanagement_activity_completed_tip"
            style="@style/FreeUpSpaceText"/>
    </LinearLayout>
    <Button
        android:id="@+id/done_button"
        android:text="@string/photos_devicemanagement_activity_completed_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/FreeUpSpaceBottomButton"/>
</android.support.constraint.ConstraintLayout>
