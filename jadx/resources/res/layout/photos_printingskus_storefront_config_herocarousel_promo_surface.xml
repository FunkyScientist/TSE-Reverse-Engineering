<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/promo_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginHorizontal="8dp"
    support:strokeWidth="0dp"
    style="@style/Widget.Photos.CardView">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/promo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            support:layout_constraintGuide_percent="0.5"/>
        <ImageView
            android:id="@+id/promo_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitStart"
            android:contentDescription="@null"
            support:layout_constraintBottom_toBottomOf="parent"
            support:layout_constraintStart_toEndOf="@+id/guideline"
            support:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textColor="@color/photos_printingskus_storefront_config_herocarousel_promo_text_color"
            android:id="@+id/promo_title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            support:layout_constraintBottom_toTopOf="@+id/promo_text"
            support:layout_constraintEnd_toStartOf="@+id/guideline"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toTopOf="parent"
            support:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/photos_printingskus_storefront_config_herocarousel_promo_text_color"
            android:id="@+id/promo_text"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            support:layout_constraintBottom_toTopOf="@+id/promo_action_button"
            support:layout_constraintEnd_toStartOf="@+id/guideline"
            support:layout_constraintStart_toStartOf="parent"
            support:layout_constraintTop_toBottomOf="@+id/promo_title"
            style="@style/TextAppearance.Photos.Headline6"/>
        <com.google.android.material.button.MaterialButton
            android:textColor="@color/photos_printingskus_storefront_config_herocarousel_promo_text_color"
            android:id="@+id/promo_action_button"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            support:layout_constraintBottom_toBottomOf="parent"
            support:layout_constraintEnd_toStartOf="@+id/guideline"
            support:layout_constraintStart_toStartOf="parent"
            support:rippleColor="@color/photos_printingskus_storefront_config_herocarousel_promo_text_color"
            support:strokeColor="@color/photos_printingskus_storefront_config_herocarousel_promo_text_color"
            style="@style/Widget.Photos.Button.StrokedButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
