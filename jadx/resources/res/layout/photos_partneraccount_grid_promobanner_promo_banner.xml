<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auto_save_promo_banner"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline6"
        android:id="@+id/auto_save_promo_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/photos_partneraccount_grid_promobanner_autosave_promo_banner_facepile_offset"
        android:layout_toStartOf="@+id/auto_save_promo_banner_close_button"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/auto_save_promo_banner_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/auto_save_promo_banner_title"
        android:layout_marginStart="@dimen/photos_partneraccount_grid_promobanner_autosave_promo_banner_facepile_offset"
        android:layout_toStartOf="@+id/auto_save_promo_banner_close_button"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/auto_save_promo_banner_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photos_partneraccount_grid_promobanner_autosave_promo_banner_close_button_content_description"
        android:paddingStart="16dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
    <Button
        android:id="@+id/auto_save_promo_banner_get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_partneraccount_grid_promobanner_autosave_promo_banner_button"
        android:layout_below="@+id/auto_save_promo_banner_description"
        android:layout_alignParentEnd="true"
        style="@style/Widget.Photos.Button"/>
    <include layout="@layout/photos_partneraccount_grid_promobanner_auto_save_promo_banner_facepile"/>
</RelativeLayout>
