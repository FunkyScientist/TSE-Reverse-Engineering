<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/cover_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/spinner"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:indeterminateTint="?attr/photosPrimary"
            style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
        <com.google.android.apps.photos.view.RoundedCornerImageView
            android:id="@+id/left_cover"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:radius="6dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/titles_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:maxLines="1"
            android:textDirection="locale"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:minHeight="20dp"
            android:maxLines="1"
            android:textDirection="locale"/>
    </LinearLayout>
</LinearLayout>
