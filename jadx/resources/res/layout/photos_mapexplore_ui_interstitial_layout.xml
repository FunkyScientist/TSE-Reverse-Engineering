<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Photos_MapExplore_Interstitial_Theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/globeImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/photos_mapexplore_ui_interstitial_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/photos_locationglobe_globe_illustration"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subtitle1"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:id="@+id/title"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/photos_mapexplore_ui_interstitial_title"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/globeImage"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/confirm_button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            style="@style/Widget.Photos.Button.Borderless"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/learn_more_button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_mapexplore_ui_interstitial_learn_more"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/confirm_button"
            app:layout_constraintTop_toTopOf="@+id/confirm_button"
            style="@style/Widget.Photos.Button.Borderless"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
