<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_printingskus_retailprints_ui_section_header_height"
            android:text="@string/photos_printingskus_retailprints_ui_checkout_order_header_title"
            style="@style/photos_printingskus_retailprints_ui_section_header"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/subtotal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photos_printingskus_retailprints_ui_section_header_height"
            android:text="@string/photos_printingskus_retailprints_ui_checkout_pickup_header_title"
            style="@style/photos_printingskus_retailprints_ui_section_header"/>
        <include layout="@layout/photos_printingskus_retailprints_ui_pickup_location"/>
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/photos_printingskus_retailprints_ui_checkout_pay_in_store"
            android:drawablePadding="@dimen/photos_printingskus_retailprints_ui_icon_horizontal_margin"
            android:layout_marginStart="@dimen/photos_printingskus_retailprints_ui_icon_horizontal_margin"
            android:layout_marginEnd="@dimen/photos_printingskus_retailprints_ui_icon_horizontal_margin"
            support:drawableStartCompat="@drawable/quantum_gm_ic_monetization_on_vd_theme_24"/>
        <include layout="@layout/photos_printingskus_retailprints_ui_pickup_contact"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:id="@+id/photos_printingskus_retailprints_ui_checkout_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp"
            android:text="@string/photos_printingskus_retailprints_ui_checkout_button_disclaimer_walmart"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/photos_printingskus_retailprints_ui_horizontal_margin"
            android:layout_marginEnd="@dimen/photos_printingskus_retailprints_ui_horizontal_margin"/>
        <Button
            android:id="@+id/photos_printingskus_retailprints_ui_checkout_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_printingskus_retailprints_ui_checkout_button_text"
            android:layout_marginStart="@dimen/photos_printingskus_retailprints_ui_horizontal_margin"
            android:layout_marginEnd="@dimen/photos_printingskus_retailprints_ui_horizontal_margin"
            style="@style/Widget.Photos.Button"/>
    </LinearLayout>
</ScrollView>
