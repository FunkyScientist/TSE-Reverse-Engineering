<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photobook_cover_view_container"
    android:background="@color/photos_printingskus_photobook_theme_page_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ViewStub
        android:layout_gravity="center_vertical"
        android:id="@+id/photo_above_title_style_cover_view_stub"
        android:layout="@layout/cover_photo_above_title"
        android:inflatedId="@+id/photo_above_title_style_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:layout_gravity="center_vertical"
        android:id="@+id/full_bleed_photo_with_title_style_cover_view_stub"
        android:layout="@layout/cover_full_bleed_photo_with_title"
        android:inflatedId="@+id/full_bleed_photo_with_title_style_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:layout_gravity="center_vertical"
        android:id="@+id/margin_photo_above_title_style_cover_view_stub"
        android:layout="@layout/cover_margin_photo_above_title"
        android:inflatedId="@+id/margin_photo_above_title_style_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
