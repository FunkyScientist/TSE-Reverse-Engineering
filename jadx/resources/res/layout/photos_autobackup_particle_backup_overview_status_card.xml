<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/photos_autobackup_particle_status_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_autobackup_status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/photos_autobackup_particle_card_min_height"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyLarge"
            android:id="@+id/photos_autobackup_particle_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
            android:textColor="?attr/photosTextColorSecondaryVariant"
            android:id="@+id/photos_autobackup_particle_status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_autobackup_particle_generic_button"
        android:padding="0dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:maxWidth="124dp"
        android:layout_marginHorizontal="4dp"
        style="@style/Widget.Photos.Button.Borderless"/>
</LinearLayout>
