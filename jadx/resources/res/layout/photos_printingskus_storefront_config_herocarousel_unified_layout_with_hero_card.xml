<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/hero_carousel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        layout="@layout/photos_printingskus_storefront_config_herocarousel_hero_card"/>
    <include
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        layout="@layout/photos_printingskus_storefront_config_contentrow_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/promo_surface_recycler_view"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_printingskus_storefront_config_herocarousel_slideshow_height_regular"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="8dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline6"
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/all_products_title"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_printingskus_storefront_config_herocarousel_all_products_title"
        android:layout_marginStart="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/info_card_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>
</LinearLayout>
