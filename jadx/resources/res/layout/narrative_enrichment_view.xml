<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.album.enrichment.p004ui.NarrativeEnrichmentLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/photos_album_enrichment_ui_enrichment_content"
        android:background="@drawable/enrichment_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:paddingLeft="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_margin"
            android:paddingTop="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_margin"
            android:paddingRight="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_margin"
            android:paddingBottom="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/photos_album_enrichment_ui_narrative_enrichment_text_view"
                android:paddingLeft="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_padding"
                android:paddingTop="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_padding"
                android:paddingRight="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_padding"
                android:paddingBottom="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:textIsSelectable="false"
                android:textDirection="locale"
                style="@style/Photos.Album.Enrichment.Ui.NarrativeEnrichmentTextView"/>
        </FrameLayout>
        <include layout="@layout/enrichment_adornments_layout"/>
    </FrameLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/photos_album_enrichment_ui_narrative_enrichment_editor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?android:attr/colorBackground"
        app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
        app:cardPreventCornerOverlap="false"
        style="@style/Photos.Album.Enrichment.Ui.NarrativeEnrichmentTextViewEditContainer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.apps.photos.album.enrichment.p004ui.NonScrollEditText
                android:id="@+id/photos_album_enrichment_ui_narrative_enrichment_edit_text"
                android:background="@null"
                android:paddingLeft="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_padding"
                android:paddingTop="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_padding"
                android:paddingRight="@dimen/photos_album_enrichment_ui_text_enrichment_horizontal_padding"
                android:paddingBottom="@dimen/photos_album_enrichment_ui_text_enrichment_vertical_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/photos_album_enrichment_ui_text_hint"
                android:layout_alignParentTop="true"
                android:lineSpacingExtra="8sp"
                android:inputType="textMultiLine"
                android:imeOptions="flagNoExtractUi|actionNone"
                android:textIsSelectable="true"
                android:textDirection="locale"
                style="@style/Photos.Album.Enrichment.Ui.NarrativeEnrichmentTextViewEdit"/>
            <ImageButton
                android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
                android:id="@+id/photos_album_enrichment_ui_narrative_enrichment_done_button"
                android:background="@null"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@+id/photos_album_enrichment_ui_narrative_enrichment_edit_text"
                android:contentDescription="@string/photos_strings_done_button"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/photos_quantum_gm_ic_done_vd_theme_18"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <include layout="@layout/photos_list_remove_button_white"/>
</com.google.android.apps.photos.album.enrichment.p004ui.NarrativeEnrichmentLayout>
