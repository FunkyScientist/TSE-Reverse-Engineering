<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/avatar_or_status_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/spinner"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:indeterminateTint="?attr/photosPrimary"
                style="@style/Widget.Photos.ProgressBar.IndeterminateWhite"/>
            <com.google.android.apps.photos.avatar.collage.CircularCollageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:contentDescription="@null"/>
        </FrameLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textDirection="locale"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/avatar_or_status_container"/>
    </RelativeLayout>
</LinearLayout>
