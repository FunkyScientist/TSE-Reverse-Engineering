<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/show_all_photos_button_top_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow_size"
        android:src="@drawable/photos_theme_fake_shadow_top_edge"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>
    <Button
        android:textColor="?attr/colorAccent"
        android:id="@+id/show_all_photos_button"
        android:background="@color/photos_daynight_white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_picker_impl_subpicker_action_button_text"
        style="?attr/borderlessButtonStyle"/>
</LinearLayout>
