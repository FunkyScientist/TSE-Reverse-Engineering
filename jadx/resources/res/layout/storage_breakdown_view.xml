<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:textColor="?attr/colorOnBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscriptions_storage_used"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="?attr/textAppearanceBody2"/>
        <TextView
            android:textColor="?attr/colorOnBackground"
            android:id="@+id/storage_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            style="?attr/textAppearanceBody2"/>
    </LinearLayout>
    <com.google.android.libraries.subscriptions.management.p044v2.LayeredProgressView
        android:id="@+id/usage_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/g1_progress_bar_height"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rows_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
</merge>
