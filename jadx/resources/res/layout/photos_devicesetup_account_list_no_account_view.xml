<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_gm_ic_no_accounts_gm_grey_24"
        android:layout_alignParentTop="true"
        android:importantForAccessibility="no"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/title"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_devicesetup_use_without_an_account"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photos_devicesetup_most_features_wont_be_available"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"/>
</RelativeLayout>
