<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/remove_button"
        android:layout_alignParentStart="true">
        <ImageView
            android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
            android:layout_gravity="center_vertical"
            android:id="@+id/calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/date_range"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="18dp"
            style="@style/TextAppearance.Photos.Body2"/>
    </LinearLayout>
    <ImageView
        android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
        android:id="@+id/remove_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/photos_memories_settings_remove_button_content_description"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/quantum_gm_ic_clear_vd_theme_24"/>
</RelativeLayout>
