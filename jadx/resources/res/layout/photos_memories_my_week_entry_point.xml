<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginHorizontal="4dp"
    app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/photos_memories_memory_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/photos_memories_memory_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/photos_memories_tallac_cover_margin"
            android:foreground="@drawable/carousel_press"
            android:scaleType="centerCrop"
            android:contentDescription="@string/photos_memories_tallac_placeholder_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/empty_add_to_tallac_layout"
            android:visibility="gone"
            android:layout_width="58dp"
            android:layout_height="62dp"
            android:layout_marginBottom="@dimen/photos_memories_empty_add_to_tallac_bottom_margin"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/empty_photos_memories_tallac_avatar"
                android:background="@drawable/photos_memories_tallac_avatar_add"
                android:padding="2dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/empty_plus"
                android:background="@drawable/photos_memories_tallac_avatar_add"
                android:padding="2dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:tint="@color/google_white"
                android:cropToPadding="true"
                app:srcCompat="@drawable/quantum_gm_ic_add_vd_theme_24"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/add_to_tallac_layout"
            android:visibility="gone"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:contentDescription="@string/photos_memories_myweek_entry_title"
            android:layout_marginStart="6dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/photos_memories_tallac_avatar"
                android:background="@drawable/photos_memories_tallac_avatar_add"
                android:padding="2dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/plus"
                android:background="@drawable/photos_memories_tallac_avatar_add"
                android:padding="2dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:tint="@color/google_white"
                android:cropToPadding="true"
                app:srcCompat="@drawable/quantum_gm_ic_add_vd_theme_24"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/new_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/photos_memories_memory_image"
            app:layout_constraintEnd_toEndOf="@+id/photos_memories_memory_image"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:textColor="@color/photos_daynight_grey700"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/photos_memories_memory_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxLines="4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:firstBaselineToTopHeight="@dimen/photos_memories_memory_title_first_baseline_to_top_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.carousel.MaskableFrameLayout>
