<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginRight="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginHorizontal="@dimen/photos_cloudstorage_focusmode_banner_margin">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FocusModeLoadingShimmer">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorOutlineVariant"
            app:cardCornerRadius="@dimen/photos_cloudstorage_focusmode_text_loading_corner_radius"
            app:strokeWidth="0dp">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_cloudstorage_focusmode_smart_cleanup_header"/>
        </com.google.android.material.card.MaterialCardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>
