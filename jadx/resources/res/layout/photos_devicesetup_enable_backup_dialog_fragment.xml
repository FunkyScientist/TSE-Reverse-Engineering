<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">
        <include layout="@layout/photos_devicesetup_header_view"/>
        <com.google.android.apps.photos.devicesetup.AccountHeaderView
            android:id="@+id/enable_backup_account_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/enable_backup_do_not_backup_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/enable_backup_turn_on_backup_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:textColorLink="?android:attr/textColorSecondary"
            android:id="@+id/enable_backup_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:breakStrategy="balanced"
            android:layout_marginVertical="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
