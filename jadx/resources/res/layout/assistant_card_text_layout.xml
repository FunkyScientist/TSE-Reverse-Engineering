<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start|top"
    android:orientation="vertical"
    android:paddingTop="@dimen/photos_assistant_cardui_text_linear_layout_padding"
    android:paddingBottom="@dimen/photos_assistant_cardui_text_linear_layout_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/photos_assistant_cardui_text_linear_layout_padding"
    android:paddingEnd="@dimen/photos_assistant_cardui_text_end_padding">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="@color/photos_daynight_grey700"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/photos_assistant_cardui_description_top_padding"
        android:textIsSelectable="false"/>
</LinearLayout>
