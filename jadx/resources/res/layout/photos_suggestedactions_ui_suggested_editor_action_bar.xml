<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/suggested_editor_action_bar"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <ViewStub
        android:id="@+id/suggested_editor_document_toolbar_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/suggested_editor_toolbar_slider_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/photos_photoeditor_commonui_action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/photos_photoeditor_preview_toolbar_height"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:id="@+id/cancel_suggested_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_suggestedactions_ui_editor_cancel_button"
                style="@style/Widget.Photos.Button.Borderless.SuggestedActionsEditorCancelButton"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/photos_photoeditor_preview_toolbar_height"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:id="@+id/save_suggested_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_suggestedactions_ui_editor_save_button"
                style="@style/Widget.Photos.SuggestedActionsEditorSaveButton"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
