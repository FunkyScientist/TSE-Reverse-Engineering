<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:id="@+id/envelope_card_row_avatar_2"
    android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_total_image_size"
    android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_total_image_size">
    <ImageView
        android:id="@+id/avatar_1"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_marginStart="2dp"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/avatar_2"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_marginEnd="2dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/avatar_3"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:layout_marginStart="2dp"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/avatar_4"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:layout_marginEnd="2dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textColor="@color/photos_daynight_white"
        android:gravity="center"
        android:id="@+id/overflow_number"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_width="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_height="@dimen/photos_assistant_cardui_envelope_card_row_badge_size"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_alignParentEnd="true"
        style="@style/TextAppearance.AppCompat.Button"/>
</RelativeLayout>
