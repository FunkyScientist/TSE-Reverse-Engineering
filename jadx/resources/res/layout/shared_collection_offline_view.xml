<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.Photos.DayNight.Grey"
    android:gravity="center_horizontal"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/shared_collection_offline_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/quantum_gm_ic_warning_vd_theme_24"/>
    <TextView
        android:textSize="24sp"
        android:textColor="@color/quantum_grey900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/photos_emptystate_shared_collection_offline_title"
        android:textIsSelectable="true"
        style="@style/Base.TextAppearance.AppCompat.Headline"/>
    <Button
        android:id="@+id/photos_emptystate_offline_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/photos_emptystate_shared_collection_offline_refresh_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</LinearLayout>
