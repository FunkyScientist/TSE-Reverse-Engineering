<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/photosTextColorPrimaryVariant"
        android:id="@+id/export_video_progress_text"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Photos.Body1"/>
    <com.google.android.libraries.material.progress.MaterialProgressBar
        android:id="@+id/export_video_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:layout_below="@+id/export_video_progress_text"
        android:layout_alignParentBottom="true"
        style="@style/Widget.GoogleLib.Progress.Linear.Determinate"/>
    <TextView
        android:textColor="?android:attr/colorBackground"
        android:id="@+id/export_complete_message"
        android:background="?attr/photosPrimary"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/TextAppearance.Photos.Body1"/>
</RelativeLayout>
