<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/photos_printingskus_retailprints_ui_horizontal_margin">
    <android.support.v7.widget.AppCompatImageView
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/photos_printingskus_retailprints_ui_icon_horizontal_margin"
        android:paddingEnd="@dimen/photos_printingskus_retailprints_ui_icon_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_location_on_vd_theme_24"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body1"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/photos_printingskus_retailprints_ui_pickup_location_name"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:id="@+id/photos_printingskus_retailprints_ui_pickup_estimated_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_printingskus_retailprints_ui_pickup_location_icon"
        app:layout_constraintTop_toBottomOf="@+id/photos_printingskus_retailprints_ui_pickup_location_address"/>
</android.support.constraint.ConstraintLayout>
