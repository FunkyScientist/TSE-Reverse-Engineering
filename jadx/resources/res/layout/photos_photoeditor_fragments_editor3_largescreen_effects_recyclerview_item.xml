<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="16dp">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_photoeditor_fragments_editor3_tools_icon_layout"
        android:layout_width="@dimen/photos_photoeditor_fragments_editor3_tools_item_icon_background"
        android:layout_height="@dimen/photos_photoeditor_fragments_editor3_tools_item_icon_background">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/photos_photoeditor_fragments_editor3_tools_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <Space
        android:layout_width="20dp"
        android:layout_height="0dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:textColor="@color/google_grey200"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/photos_photoeditor_fragments_editor3_tools_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center_vertical"
        android:id="@+id/photos_photoeditor_fragments_editor3_largescreen_effects_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_photoeditor_ui_done"
        app:rippleColor="?attr/colorPrimary"
        style="@style/photos_photoeditor_fragments_editor3_done_button"/>
    <Space
        android:layout_width="14dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
</LinearLayout>
