<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notif_optin_promo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:strokeColor="?attr/colorSurfaceVariant"
        style="@style/Widget.Photos.CardView">
        <android.support.constraint.ConstraintLayout
            android:paddingTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">
            <ImageView
                android:id="@+id/notif_optinpromo_icon"
                android:background="@drawable/photos_notifications_optinpromo_icon_background"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quantum_gm_ic_notifications_active_vd_theme_24"
                app:tint="?attr/colorPrimary"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:id="@+id/notif_optinpromo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/notif_optinpromo_icon"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                android:textColor="?attr/colorOutline"
                android:id="@+id/notif_optinpromo_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_notifications_optinpromo_subtitle_sharing"
                android:lineSpacingExtra="6sp"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/notif_optinpromo_icon"
                app:layout_constraintTop_toBottomOf="@+id/notif_optinpromo_title"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/promo_dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/photos_notifications_optinpromo_dismiss_button"
                app:layout_constraintEnd_toStartOf="@+id/promo_notif_setting_button"
                app:layout_constraintTop_toBottomOf="@+id/notif_optinpromo_subtitle"
                style="@style/Widget.Photos.Button.Borderless"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/promo_notif_setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/photos_notifications_optinpromo_setting_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notif_optinpromo_subtitle"
                style="@style/Widget.Photos.Button.Borderless"/>
        </android.support.constraint.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
