<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_memories_feedback_promo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/background_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/background_image"
            android:background="@drawable/photos_memories_feedback_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/title"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:focusable="true"
        android:clickable="false"
        android:longClickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/photos_memories_promo_feedback_title"
        android:textAlignment="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="0dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <com.google.android.apps.photos.flyingsky.cloudgrid.p012ui.CloudGridView
            android:id="@+id/cloud_grid_cover_image"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="240dp"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            app:gutterColor="@color/photos_memories_promo_feedback_background_neutral_color"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subtitle2"
            android:textSize="14sp"
            android:textColor="@color/photos_stories_promo_subtitle_color"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:id="@+id/cloud_cover_subtext"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintVertical_chainStyle="packed"/>
    </LinearLayout>
    <com.google.android.apps.photos.view.RoundedCornerImageView
        android:id="@+id/cover_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="24dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintDimensionRatio="W,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintWidth_max="180dp"/>
    <ImageView
        android:id="@+id/cover_text_scrim"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/cover_image"
        app:layout_constraintEnd_toEndOf="@+id/cover_image"
        app:layout_constraintStart_toStartOf="@+id/cover_image"/>
    <View
        android:id="@+id/cover_scrim"
        android:background="@drawable/photos_memories_squircle_label_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_image"
        app:layout_constraintEnd_toEndOf="@+id/cover_image"
        app:layout_constraintStart_toStartOf="@+id/cover_image"
        app:layout_constraintTop_toTopOf="@+id/cover_image"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline5"
        android:textStyle="bold"
        android:textColor="#fff"
        android:ellipsize="end"
        android:id="@+id/cover_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:maxLines="3"
        android:textAlignment="viewStart"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_image"
        app:layout_constraintEnd_toEndOf="@+id/cover_image"
        app:layout_constraintStart_toStartOf="@+id/cover_image"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/positive_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_memories_promo_feedback_positive_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/gs_thumb_up_vd_theme_24"
            style="@style/Promo.Feedback.PrimaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/photos_memories_promo_feedback_neutral_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_memories_promo_feedback_neutral_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/quantum_ic_sentiment_neutral_vd_theme_24"
            style="@style/Promo.Feedback.PrimaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/negative_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_memories_promo_feedback_negative_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/gs_thumb_down_vd_theme_24"
            style="@style/Promo.Feedback.PrimaryButton"/>
    </LinearLayout>
    <Button
        android:textColor="@color/gm3_sys_color_dark_primary"
        android:gravity="center"
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/photos_memories_promo_feedback_decline"
        android:maxLines="1"
        android:fontFamily="@font/google_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_container"
        app:layout_goneMarginBottom="0dp"
        style="@style/Widget.Photos.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>
