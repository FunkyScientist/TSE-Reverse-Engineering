<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/container"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/header"
        android:paddingTop="8dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:textColor="@color/photos_daynight_grey900"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_storefront_unified_title"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead2"
            android:textColor="?attr/photosPrimary"
            android:id="@+id/view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_storefront_librarybanner_view_all"
            android:paddingStart="8dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/photos_printingskus_storefront_librarybanner_carousel_side_padding"
        android:paddingEnd="@dimen/photos_printingskus_storefront_librarybanner_carousel_side_padding"/>
</LinearLayout>
