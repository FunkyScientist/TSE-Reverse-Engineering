<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_printingskus_retailprints_ui_pickup_summary"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:minHeight="114dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginStart="@dimen/photos_printingskus_retailprints_ui_horizontal_margin"
    android:layout_marginEnd="@dimen/photos_printingskus_retailprints_ui_horizontal_margin">
    <android.support.constraint.Guideline
        android:orientation="vertical"
        android:id="@+id/vertical_guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <View
        android:background="?attr/colorOutline"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_center"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/vertical_guideline_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:id="@+id/photos_printingskus_retailprints_ui_pickup_summary_start_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            app:drawableTopCompat="@drawable/quantum_gm_ic_store_mall_directory_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/photos_printingskus_retailprints_ui_pickup_summary_start_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_center"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline6"
            android:id="@+id/photos_printingskus_retailprints_ui_pickup_summary_end_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            app:drawableTopCompat="@drawable/quantum_gm_ic_store_mall_directory_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariantFaded"
            android:id="@+id/photos_printingskus_retailprints_ui_pickup_summary_end_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
