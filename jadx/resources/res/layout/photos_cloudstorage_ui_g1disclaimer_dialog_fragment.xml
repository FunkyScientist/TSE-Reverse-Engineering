<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subtitle1"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/photos_cloudstorage_ui_g1disclaimer_title"
        android:layout_marginHorizontal="24dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:id="@+id/g1disclaimer_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="6dp"
        android:layout_marginHorizontal="24dp"/>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp">
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:minHeight="48dp"
            android:text="@android:string/cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Photos.Button.Borderless"/>
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:id="@+id/agree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:minHeight="48dp"
            android:text="@string/photos_strings_terms_of_service_agree_button"
            style="@style/Widget.Photos.Button"/>
    </LinearLayout>
</LinearLayout>
