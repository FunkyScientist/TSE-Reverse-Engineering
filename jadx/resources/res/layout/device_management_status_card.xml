<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/photos_assistant_cardui_text_linear_layout_height"
    card_view:cardBackgroundColor="@color/photos_daynight_white"
    card_view:cardCornerRadius="@dimen/photos_assistant_cardui_corner_radius"
    style="@style/AssistantCardBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/photos_assistant_cardui_text_linear_layout_padding"
            android:paddingEnd="88dp">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body1"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textIsSelectable="false"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textIsSelectable="false"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/device_mgmt_complete_icon"
            android:padding="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quantum_gm_ic_check_circle_gm_blue_24"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:indeterminate="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@android:style/Widget.DeviceDefault.ProgressBar"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
