<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_search_field"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    support:elevation="0dp">
    <EditText
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/photosOnSurfaceVariantFaded"
        android:layout_gravity="center_vertical"
        android:id="@+id/location_search_edit_text"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="@string/photos_printingskus_retailprints_ui_location_search_location_hint"
        android:inputType="textCapWords"
        android:imeOptions="flagNoExtractUi|actionSearch"
        android:fontFamily="@font/google_sans"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="48dp"/>
    <ImageButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/my_location_button"
        android:background="?attr/actionBarItemBackground"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="?attr/photosOnSurfaceVariant"
        android:contentDescription="@string/photos_printingskus_retailprints_ui_location_my_location_button"
        android:layout_marginEnd="8dp"
        support:srcCompat="@drawable/quantum_gm_ic_my_location_vd_theme_24"/>
    <ImageButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/clear_button"
        android:background="?attr/actionBarItemBackground"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="?attr/photosOnSurfaceVariant"
        android:contentDescription="@string/photos_printingskus_retailprints_ui_location_clear_location_search_button"
        android:layout_marginEnd="8dp"
        support:srcCompat="@drawable/quantum_gm_ic_clear_vd_theme_24"/>
</com.google.android.material.card.MaterialCardView>
