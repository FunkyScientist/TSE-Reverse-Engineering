<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:background="@drawable/photos_backup_selectivebackup_view_banner_background"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/quantum_gm_ic_cloud_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:textColor="?attr/colorOnBackground"
            android:ellipsize="end"
            android:id="@+id/photos_backup_paused_banner_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photos_backup_backup_paused"
            android:maxLines="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:id="@+id/photos_backup_paused_banner_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/photos_backup_selectivebackup_view_backup_paused_banner_description"
            android:maxLines="4"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/photos_backup_paused_banner_title_text"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/photos_backup_paused_banner_manage_storage_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_backup_selectivebackup_view_backup_paused_banner_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/photos_backup_paused_banner_description_text"
            app:layout_constraintTop_toBottomOf="@+id/photos_backup_paused_banner_description_text"
            style="@style/Widget.Photos.Button.Borderless"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
