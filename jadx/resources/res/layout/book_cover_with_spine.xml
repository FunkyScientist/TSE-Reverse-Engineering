<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/cover_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/framed_photobook_cover_layout"/>
    </FrameLayout>
    <Space
        android:id="@+id/padding_removal_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/cover_thumbnail"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:gravity="center"
        android:id="@+id/education_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/photos_printingskus_photobook_viewbinder_content_page_edu_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cover_spine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline
        android:orientation="vertical"
        android:id="@+id/center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cover_spine"
        android:layout_width="20dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/padding_removal_space"
        app:layout_constraintTop_toTopOf="@+id/cover_thumbnail"
        style="@style/photos_printingskus_photobook_theme_preview_page_card_view">
        <com.google.android.apps.photos.printingskus.photobook.title.OrientationFlippedFrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/photos_printingskus_photobook_viewbinder_cover_default_spine_text_font_size"
                android:textColor="@color/photos_printingskus_photobook_theme_page_text"
                android:gravity="center"
                android:id="@+id/spine_vertical_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"/>
        </com.google.android.apps.photos.printingskus.photobook.title.OrientationFlippedFrameLayout>
    </com.google.android.material.card.MaterialCardView>
</android.support.constraint.ConstraintLayout>
