<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/photo_sample_container"
        android:background="@color/photos_daynight_grey100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        support:layout_constraintBottom_toTopOf="@+id/paper_finish_title"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline
        android:orientation="vertical"
        android:id="@+id/vertical_center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        support:layout_constraintGuide_percent="0.5"/>
    <com.google.android.apps.photos.view.BorderedImageView
        android:id="@+id/portrait_photo"
        android:background="@color/photos_daynight_grey100"
        android:layout_width="@dimen/photos_printingskus_printsubscription_ui_sample_photo_short_side"
        android:layout_height="@dimen/photos_printingskus_printsubscription_ui_sample_photo_long_side"
        android:layout_marginBottom="64dp"
        android:contentDescription="@null"
        android:elevation="2dp"
        support:layout_constraintBottom_toBottomOf="@+id/photo_sample_container"
        support:layout_constraintEnd_toStartOf="@+id/vertical_center_guideline"
        support:layout_constraintTop_toTopOf="@+id/photo_sample_container"/>
    <com.google.android.apps.photos.view.BorderedImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/landscape_photo"
        android:background="@color/photos_daynight_grey100"
        android:layout_width="@dimen/photos_printingskus_printsubscription_ui_sample_photo_long_side"
        android:layout_height="@dimen/photos_printingskus_printsubscription_ui_sample_photo_short_side"
        android:layout_marginTop="84dp"
        android:contentDescription="@null"
        android:layout_marginStart="72dp"
        android:elevation="2dp"
        support:layout_constraintStart_toStartOf="@+id/portrait_photo"
        support:layout_constraintTop_toTopOf="@+id/portrait_photo"/>
    <TextView
        android:textColor="?attr/photosOnSurfaceVariantText"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/front_photo_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/photos_printingskus_printsubscription_ui_front_caption"
        support:layout_constraintBottom_toBottomOf="@+id/photo_sample_container"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.Photos.Caption"/>
    <TextView
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:gravity="start"
        android:id="@+id/paper_finish_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/photos_printingskus_printsubscription_ui_paper_finish"
        android:textAllCaps="true"
        support:layout_constraintBottom_toTopOf="@+id/paper_options_container"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.Photos.Overline"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/paper_options_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false"
        support:layout_constraintBottom_toTopOf="@+id/border_title"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent">
        <include
            android:id="@+id/matte_option_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/photos_printingskus_printsubscription_ui_print_options_fragment_horizontal_padding"
            android:layout_marginEnd="4dp"
            layout="@layout/photos_printingskus_printsubscription_ui_option_card"/>
        <include
            android:id="@+id/glossy_option_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/photos_printingskus_printsubscription_ui_print_options_fragment_horizontal_padding"
            layout="@layout/photos_printingskus_printsubscription_ui_option_card"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:gravity="start"
        android:id="@+id/border_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/photos_printingskus_printsubscription_ui_print_border"
        android:textAllCaps="true"
        support:layout_constraintBottom_toTopOf="@+id/border_options_container"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.Photos.Overline"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/border_options_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:baselineAligned="false"
        support:layout_constraintBottom_toTopOf="@+id/done_button"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent">
        <include
            android:id="@+id/enable_border_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/photos_printingskus_printsubscription_ui_print_options_fragment_horizontal_padding"
            android:layout_marginEnd="4dp"
            layout="@layout/photos_printingskus_printsubscription_ui_option_card"/>
        <include
            android:id="@+id/disable_border_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/photos_printingskus_printsubscription_ui_print_options_fragment_horizontal_padding"
            layout="@layout/photos_printingskus_printsubscription_ui_option_card"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:id="@+id/done_button"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingVertical="8dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Photos.Button"/>
</android.support.constraint.ConstraintLayout>
