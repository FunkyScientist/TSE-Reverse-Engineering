<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_settings_hidefaces_promo_face_favoriting_promo"
    android:background="@drawable/photos_settings_hidefaces_promo_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
        android:textColor="@color/google_white"
        android:gravity="center"
        android:id="@+id/title"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:focusable="true"
        android:clickable="false"
        android:longClickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/photos_settings_hidefaces_promo_face_favoriting_title"
        android:textAlignment="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="0dp"/>
    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@null"
        android:layout_marginVertical="24dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintWidth_max="240dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_more_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_settings_hidefaces_promo_face_favoriting_show_more_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/gs_person_add_vd_theme_24"
            style="@style/Hidefaces.Promo.PrimaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/keep_same_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_settings_hidefaces_promo_face_favoriting_keep_same_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/quantum_ic_sentiment_neutral_vd_theme_24"
            style="@style/Hidefaces.Promo.PrimaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/hide_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/photos_settings_hidefaces_promo_face_favoriting_hide_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="6dp"
            app:icon="@drawable/gs_person_remove_vd_theme_24"
            style="@style/Hidefaces.Promo.PrimaryButton"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
