<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/soundtrack_picker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        android:elevation="@dimen/photos_movies_activity_music_picker_toolbar_elevation"
        style="@style/Widget.Photos.ActionBar">
        <Spinner
            android:id="@+id/mode_spinner"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/theme_music_picker_views"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/library_loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/Widget.Photos.ProgressBar.IndeterminateBlue"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/library_load_failure_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_movies_activity_soundtrack_library_failure"
                android:drawablePadding="8dp"
                android:breakStrategy="balanced"
                app:drawableTopCompat="@drawable/quantum_ic_warning_amber_48"/>
            <Button
                android:layout_gravity="center"
                android:id="@+id/library_retry_load_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_movies_activity_soundtrack_library_try_again"
                style="?attr/borderlessButtonStyle"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/theme_music_picker_fragment"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/my_music_picker_views"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/my_music_loading_spinner"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/Widget.Photos.ProgressBar.IndeterminateBlue"/>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/my_music_empty_view"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_movies_activity_no_my_music_available"
            android:drawablePadding="8dp"
            android:breakStrategy="balanced"
            app:drawableTopCompat="@drawable/quantum_gm_ic_music_off_gm_grey_48"/>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/my_music_load_failure_view"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_movies_activity_my_music_load_failure"
            android:drawablePadding="8dp"
            android:breakStrategy="balanced"
            app:drawableTopCompat="@drawable/quantum_ic_warning_amber_48"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/local_audio_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/soundtrack_picker_bottom_toolbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/colorOnBackground"
            android:id="@+id/soundtrack_picker_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"
            style="@style/Widget.Photos.Button.Borderless"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/soundtrack_picker_save_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="@string/photos_photoeditor_commonui_editor_action_save"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            style="@style/Widget.Photos.Button"/>
    </RelativeLayout>
</LinearLayout>
