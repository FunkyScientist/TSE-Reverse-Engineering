<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_gravity="center"
        android:id="@+id/book_product_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_printingskus_storefront_config_contentrow_product_item_height"
        app:cardBackgroundColor="@color/photos_daynight_grey100"
        app:strokeWidth="0dp"
        style="@style/Widget.Photos.CardView">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintGuide_percent="0.5"/>
            <com.google.android.apps.photos.printingskus.storefront.config.contentrow.Content3DShadowView
                android:id="@+id/shadow"
                android:layout_width="@dimen/photos_printingskus_storefront_config_contentrow_product_shadow_width"
                android:layout_height="@dimen/photos_printingskus_storefront_config_contentrow_product_shadow_height"
                android:layout_marginEnd="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/photobook_3d_container"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/photobook_cover_layout"/>
                <ImageView
                    android:id="@+id/book_product_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@null"/>
            </com.google.android.material.card.MaterialCardView>
        </android.support.constraint.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subhead2"
        android:ellipsize="end"
        android:gravity="start"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:ellipsize="end"
        android:gravity="start"
        android:layout_gravity="center"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textDirection="locale"
        android:textAlignment="gravity"/>
</LinearLayout>
