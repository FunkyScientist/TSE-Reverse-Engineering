<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/clifford_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/photos_cloudstorage_clifford_action_bar_bottom_margin"
        android:layout_marginStart="@dimen/photos_cloudstorage_clifford_navigation_bar_side_margin"
        android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_navigation_bar_side_margin">
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:id="@+id/clifford_back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/photos_strings_back_button"
            android:layout_alignParentStart="true"
            app:icon="@drawable/quantum_gm_ic_arrow_back_vd_theme_24"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:iconTint="?attr/colorPrimary"/>
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:id="@+id/clifford_next_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/photos_strings_next_button"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/quantum_gm_ic_arrow_forward_vd_theme_24"
            app:iconGravity="end"
            app:iconSize="24dp"
            app:iconTint="?attr/colorPrimary"/>
    </RelativeLayout>
</FrameLayout>
