<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/get_back_experience_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/clifford_background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:id="@+id/clifford_get_back_experience_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clifford_dismiss_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.HeadlineMedium"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/clifford_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_cloudstorage_get_back_experience_title_top_margin"
                android:text="@string/photos_cloudstorage_get_back_best_experience_title"
                android:layout_marginStart="@dimen/photos_cloudstorage_get_back_experience_title_side_margin"
                android:layout_marginEnd="@dimen/photos_cloudstorage_get_back_experience_title_side_margin"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/get_more_storage_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/get_more_storage_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_top_margin"
                    android:layout_marginStart="@dimen/photos_cloudstorage_clifford_card_side_margin"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_card_side_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                        android:id="@+id/buy_storage_card_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_padding"
                        android:text="@string/photos_cloudstorage_clifford_get_more_storage_title"
                        android:layout_marginStart="@dimen/photos_cloudstorage_clifford_card_padding"
                        app:layout_constraintEnd_toStartOf="@+id/buy_storage_card_icon"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/buy_storage_card_icon"
                        android:layout_width="@dimen/photos_cloudstorage_clifford_icon_size"
                        android:layout_height="@dimen/photos_cloudstorage_clifford_icon_size"
                        android:layout_marginTop="@dimen/photos_cloudstorage_clifford_icon_margin"
                        android:src="@drawable/photos_googleoneassets_logo_ring_36"
                        android:contentDescription="@null"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_icon_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toEndOf="@+id/buy_storage_card_title"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body2"
                        android:textColor="?attr/photosOnSurfaceVariant"
                        android:id="@+id/buy_storage_card_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_text_top_margin"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_card_buy_button"
                        app:layout_constraintEnd_toStartOf="@+id/buy_storage_card_icon"
                        app:layout_constraintStart_toStartOf="@+id/buy_storage_card_title"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_card_title"
                        app:layout_constraintVertical_bias="1"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buy_storage_card_buy_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_edge_margin"
                        android:layout_marginBottom="@dimen/photos_cloudstorage_clifford_card_edge_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/buy_storage_card_tos"
                        app:layout_constraintStart_toStartOf="@+id/buy_storage_card_text"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_card_text"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Photos.Body2"
                        android:textColor="?attr/photosOnSurfaceVariant"
                        android:id="@+id/buy_storage_card_tos"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/photos_cloudstorage_clifford_card_edge_margin"
                        android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_card_edge_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/buy_storage_card_title"
                        app:layout_constraintTop_toBottomOf="@+id/buy_storage_card_buy_button"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.LabelMedium"
                    android:textColor="@color/gm3_ref_palette_tertiary30"
                    android:id="@+id/buy_storage_offer_tag"
                    android:background="@color/gm3_ref_palette_tertiary90"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="-12dp"
                    android:layout_marginEnd="18dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/get_more_storage_card"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/get_more_storage_card"
                    app:layout_constraintTop_toTopOf="@+id/get_more_storage_card"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/manage_storage_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_top_margin"
                android:layout_marginStart="@dimen/photos_cloudstorage_clifford_card_side_margin"
                android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_card_side_margin">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                    android:id="@+id/manage_storage_card_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/photos_cloudstorage_clifford_delete_unwanted_photos_title"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toStartOf="@+id/manage_storage_card_icon"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/manage_storage_card_icon"
                    android:background="@drawable/photos_cloudstorage_clifford_manage_storeage_icon_background"
                    android:padding="@dimen/photos_cloudstorage_clifford_manage_storage_icon_padding"
                    android:layout_width="@dimen/photos_cloudstorage_clifford_icon_size"
                    android:layout_height="@dimen/photos_cloudstorage_clifford_icon_size"
                    android:layout_marginTop="@dimen/photos_cloudstorage_clifford_icon_margin"
                    android:tint="@color/google_grey700"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/photos_cloudstorage_clifford_icon_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/manage_storage_card_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/quantum_gm_ic_delete_vd_theme_24"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="?attr/photosOnSurfaceVariant"
                    android:id="@+id/manage_storage_card_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_text_top_margin"
                    app:layout_constraintEnd_toStartOf="@+id/manage_storage_card_icon"
                    app:layout_constraintStart_toStartOf="@+id/manage_storage_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/manage_storage_card_title"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_storage_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/photos_cloudstorage_clifford_card_edge_margin"
                    android:layout_marginBottom="@dimen/photos_cloudstorage_clifford_card_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/manage_storage_card_text"
                    app:layout_constraintTop_toBottomOf="@+id/manage_storage_card_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="@style/TextAppearance.Photos.Button"
        android:id="@+id/clifford_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_cloudstorage_clifford_continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clifford_get_back_experience_view_container"
        app:layout_constraintVertical_chainStyle="spread_inside"
        style="@style/Widget.Photos.Button.Borderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>
