<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/photos_theme_rounded_corner_radius"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="100dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Overline"
                    android:textColor="?attr/photosPrimary"
                    android:id="@+id/new_badge"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos_printingskus_storefront_config_herocarousel_new_badge"
                    android:textAllCaps="true"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead1"
                    android:textColor="?attr/colorOnSurface"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Caption"
                    android:textColor="?attr/photosOnSurfaceVariant"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
                android:background="@drawable/quantum_gm_ic_arrow_forward_vd_theme_24"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="18dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
