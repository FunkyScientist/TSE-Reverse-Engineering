<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:accessibilityHeading="true"
        style="?attr/textAppearanceOverline"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/UpsellV2.CardView.Next.Elevated">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <Button
                        android:layout_gravity="center_vertical"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>
                    <com.google.android.libraries.cordial.buttonbar.ButtonBar
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonStackOrder="startButtonAbove">
                        <TextView
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="center_vertical"
                            android:id="@+id/plan_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="6dp"
                            app:layout_buttonBarChildPosition="start"
                            style="?attr/textAppearanceHeadline6"/>
                        <TextView
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center_vertical"
                            android:id="@+id/plan_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_buttonBarChildPosition="end"
                            style="?attr/textAppearanceBody2"/>
                    </com.google.android.libraries.cordial.buttonbar.ButtonBar>
                </FrameLayout>
                <TextView
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="start"
                    android:id="@+id/plan_description"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?attr/textAppearanceBody2"/>
            </LinearLayout>
            <View
                android:id="@+id/horizontal_divider"
                android:background="?attr/colorSurfaceVariant"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/addons_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
            <Button
                android:layout_gravity="end|bottom"
                android:id="@+id/manage_addons"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                style="?attr/materialButtonOutlinedStyle"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:textColor="?attr/colorOnSurfaceVariant"
            android:id="@+id/billing_switch_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            style="?attr/textAppearanceBody2"/>
        <Button
            android:id="@+id/billing_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            style="@style/Widget.GoogleMaterial3.Button.TextButton"/>
    </LinearLayout>
</merge>
