<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true">
    <android.support.v7.widget.Toolbar
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/quantum_gm_ic_close_vd_theme_24"
        style="?attr/actionBarStyle"/>
    <ScrollView
        android:layout_gravity="top"
        android:id="@+id/helppage_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center_horizontal"
                android:id="@+id/helppage_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
                android:layout_marginTop="32dp"
                android:layout_marginRight="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
                android:layout_marginBottom="32dp"
                android:src="@drawable/photos_share_partnersuggestion_helppage_mirrored_artwork"
                android:maxHeight="128dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:layout_marginHorizontal="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
                android:layout_marginVertical="32dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center_horizontal"
                android:id="@+id/helppage_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginTop="12dp"
                android:layout_marginRight="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginBottom="12dp"
                android:text="@string/photos_share_partnersuggestion_helppage_title_text"
                android:layout_marginHorizontal="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginVertical="12dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center_horizontal"
                android:id="@+id/helppage_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginTop="12dp"
                android:layout_marginRight="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginBottom="12dp"
                android:text="@string/photos_share_partnersuggestion_helppage_body_text"
                android:layout_marginHorizontal="@dimen/photos_share_partnersuggestion_helppage_text_start_end_margin"
                android:layout_marginVertical="12dp"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/help_page_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
        android:layout_marginBottom="20dp"
        android:text="@string/photos_share_partnersuggestion_helppage_button_text"
        android:layout_marginHorizontal="@dimen/photos_share_partnersuggestion_helppage_button_start_end_margin"
        android:layout_marginVertical="20dp"
        style="@style/Widget.Photos.Button"/>
</LinearLayout>
