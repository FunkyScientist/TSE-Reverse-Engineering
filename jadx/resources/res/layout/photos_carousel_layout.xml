<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photos_carousel_container_height"
    android:layout_marginTop="@dimen/photos_carousel_container_top_margin"
    android:layout_marginBottom="@dimen/photos_carousel_container_bottom_margin">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/carousel_items_container"
        android:paddingLeft="@dimen/photos_carousel_container_padding"
        android:paddingRight="@dimen/photos_carousel_container_padding"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.apps.photos.touchcapture.TouchCaptureView
        android:id="@+id/touch_capture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
