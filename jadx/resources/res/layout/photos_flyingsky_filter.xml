<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/flyingsky_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/photos_flyingsky_fragment_filter_hint"
        app:icon="@drawable/photos_quantum_gm_ic_filter_list_vd_theme_18"
        style="@style/FlyingSkyStickyHeaderViewModeIconButtonsStyle"/>
    <FrameLayout
        android:id="@+id/flyingsky_filter_edittext_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:gravity="start|center_vertical"
            android:id="@+id/flyingsky_filter_edittext"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:hint="@string/photos_flyingsky_fragment_filter_hint"
            android:inputType="text"
            android:layout_marginEnd="0dp"
            android:paddingVertical="10dp"
            android:autofillHints=""
            style="@style/FlyingSkyStickyHeaderViewModeButtonsCommonStyle"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/flyingsky_filter_edittext_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/photos_quantum_gm_ic_close_vd_theme_18"
            style="@style/FlyingSkyStickyHeaderViewModeButtonsCommonStyle"/>
    </FrameLayout>
</FrameLayout>
