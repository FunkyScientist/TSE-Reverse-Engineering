<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/lookbook_card"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleColor="@null">
    <android.support.constraint.ConstraintLayout
        android:gravity="center"
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_close_button"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@string/photos_crowdsource_lookbook_promo_close"
            android:paddingVertical="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/quantum_ic_close_vd_theme_24"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
            android:textColor="?attr/colorOutline"
            android:id="@+id/card_title"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_crowdsource_lookbook_promo_crowdsource"
            android:maxLines="1"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/photos_crowdsource_lookbook_ic_crowdsource_vd_color_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_title"
            app:srcCompat="@drawable/photos_crowdsource_lookbook_ic_promo_card"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
            android:textColor="@color/photos_daynight_grey800"
            android:ellipsize="end"
            android:id="@+id/promo_title"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_crowdsource_lookbook_promo_title"
            android:maxLines="2"
            android:textAlignment="center"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_image"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
            android:textColor="@color/photos_daynight_grey900"
            android:ellipsize="end"
            android:id="@+id/promo_desc"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_crowdsource_lookbook_promo_desc_long"
            android:maxLines="3"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promo_title"/>
        <Button
            android:gravity="center"
            android:id="@+id/confirm_button"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/photos_crowdsource_lookbook_promo_confirm"
            android:maxLines="1"
            android:fontFamily="@font/google_sans_medium"
            android:layout_marginVertical="8dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/promo_desc"
            app:layout_constraintStart_toStartOf="@+id/promo_desc"
            app:layout_constraintTop_toBottomOf="@+id/promo_desc"
            style="@style/Widget.Photos.Button"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
