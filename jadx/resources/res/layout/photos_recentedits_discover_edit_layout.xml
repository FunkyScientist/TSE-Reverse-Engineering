<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="16dp">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:textSize="16sp"
                android:id="@+id/recent_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="@string/photos_recentedits_new_photo_title"
                android:lineSpacingExtra="4sp"
                android:contentDescription="@string/photos_recentedits_new_photo_title"/>
            <TextView
                android:id="@+id/recent_edit_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/media_image"
            android:background="@color/google_grey300"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp">
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/positive_button"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_recentedits_go_to_folder_button_title"
            android:contentDescription="@string/photos_recentedits_go_to_folder_button_title"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_alignParentEnd="true"
            style="@style/Widget.Photos.Button.Borderless"/>
        <Button
            android:textColor="?attr/photosPrimary"
            android:id="@+id/negative_button"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:text="@string/photos_recentedits_got_it_button_title"
            android:contentDescription="@string/photos_recentedits_got_it_button_title"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/positive_button"
            style="@style/Widget.Photos.Button.Borderless"/>
    </RelativeLayout>
</LinearLayout>
