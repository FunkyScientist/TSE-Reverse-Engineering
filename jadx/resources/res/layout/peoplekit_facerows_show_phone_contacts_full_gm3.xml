<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="@dimen/peoplekit_facerows_item_height">
    <RelativeLayout
        android:id="@+id/peoplekit_facerows_show_contacts"
        android:background="@drawable/peoplekit_facerow_primary_circle_gm3"
        android:layout_width="@dimen/peoplekit_facerows_no_contacts_circle"
        android:layout_height="@dimen/peoplekit_facerows_no_contacts_circle">
        <android.support.v7.widget.AppCompatImageView
            android:theme="@style/peoplekit_facerows_primary_tint_gm3"
            android:layout_width="@dimen/peoplekit_facerows_no_contacts_inner_circle"
            android:layout_height="@dimen/peoplekit_facerows_no_contacts_inner_circle"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/quantum_gm_ic_person_add_vd_theme_24"/>
    </RelativeLayout>
    <TextView
        android:textColor="?attr/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/peoplekit_facerows_show_phone_contacts"
        style="@style/peoplekit_facerows_empty_view_text_gm3"/>
</LinearLayout>
