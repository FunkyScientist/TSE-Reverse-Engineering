<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_photoeditor_udon_entry_point_button_frame"
    android:focusable="true"
    android:visibility="invisible"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="36dp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/photos_photoeditor_udon_entry_point_background"
        android:background="@drawable/photos_photoeditor_udon_button_background"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/photos_photoeditor_udon_button_background_animation"/>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/photos_photoeditor_udon_entry_point_button"
        android:clickable="false"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/photos_photoeditor_fragments_editor3_udon_entry_point_tooltip_headline"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/transparent"
        app:icon="@drawable/gs_photo_spark_vd_theme_24"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/photos_photoeditor_udon_entry_point_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/materialIconButtonFilledStyle"/>
    <TextView
        android:id="@+id/photos_photoeditor_udon_entry_point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_photoeditor_fragments_editor3_udon_entry_point_tooltip_headline"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photos_photoeditor_udon_entry_point_button"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
