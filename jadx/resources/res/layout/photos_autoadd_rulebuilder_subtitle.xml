        android:id="@+id/people_picker_subtitle"
        android:paddingTop="@dimen/photos_autoadd_rulebuilder_subtitle_padding"
        android:paddingBottom="@dimen/photos_autoadd_rulebuilder_subtitle_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/photos_autoadd_rulebuilder_header_padding"
        android:paddingEnd="@dimen/photos_autoadd_rulebuilder_header_padding"
