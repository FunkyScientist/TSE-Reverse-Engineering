    <View
        android:id="@+id/people_picker_subtitle_divider"
        android:background="@color/photos_autoadd_rulebuilder_subtitle_divider_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/photos_autoadd_rulebuilder_header_padding"
