<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="?attr/colorSurface"
    android:paddingLeft="@dimen/peoplekit_listview_no_screen_side_padding"
    android:paddingRight="@dimen/peoplekit_listview_no_screen_side_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textSize="@dimen/peoplekit_listview_row_header_letter_text_size"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:id="@+id/no_results_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textSize="@dimen/peoplekit_listview_row_text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:id="@+id/no_results_body"
        android:paddingTop="@dimen/peoplekit_listview_no_screen_top_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_results_header"/>
    <Button
        android:id="@+id/no_results_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/no_results_body"
        android:layout_centerHorizontal="true"
        style="@style/Widget.GoogleMaterial3.Button"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:gravity="center"
        android:id="@+id/no_results_button_subtitle"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_results_button"/>
</RelativeLayout>
