<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/halfsheet_unbackup_promo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewStub
        android:id="@+id/photos_logo_stub"
        android:layout="@layout/photos_autobackuppromos_halfsheet_photos_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"/>
    <ViewStub
        android:id="@+id/unbackup_photos_stub"
        android:layout="@layout/photos_autobackuppromos_halfsheet_photos_group"
        android:inflatedId="@+id/unbackup_photos_inflated_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Headline5"
                android:gravity="center"
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_autobackuppromos_halfsheet_title_margin_top"
                android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_title_margin_side"
                android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_title_margin_side"
                android:breakStrategy="balanced"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:gravity="center"
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/photos_autobackuppromos_halfsheet_body_margin_top"
                android:layout_marginBottom="@dimen/photos_autobackuppromos_halfsheet_body_margin_bottom"
                android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
                android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"/>
            <ViewStub
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/best_by_default_migration_controls_stub"
                android:layout="@layout/photos_autobackuppromos_halfsheet_bbd_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="32dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/photos_autobackuppromos_halfsheet_button_margin_bottom"
                android:paddingHorizontal="38dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/turn_on_backup_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/photos_autobackuppromos_halfsheet_button_half_spacing"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dismiss_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="?attr/photosOnSurfaceVariant"
        android:textColorLink="?attr/photosOnSurfaceVariant"
        android:gravity="center"
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
        android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
        android:breakStrategy="balanced"/>
</LinearLayout>
