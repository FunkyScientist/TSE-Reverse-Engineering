<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.photos.insetview.WindowInsetsView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/invitation_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textAppearance="@style/PartnerSharing.TitleSmall.Active"
                    android:gravity="center"
                    android:id="@+id/invitation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="@string/photos_partneraccount_onboarding_v2_receive_partner_invitation_headline"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/photos_partneraccount_res_partner_sharing_icon_with_background_24"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/partner_avatar"
                    android:layout_width="@dimen/photos_partneraccount_onboarding_v2_receive_avatar_size"
                    android:layout_height="@dimen/photos_partneraccount_onboarding_v2_receive_avatar_size"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@null"/>
                <TextView
                    android:textAppearance="@style/PartnerSharing.TitleMedium.Inactive"
                    android:gravity="center_horizontal"
                    android:id="@+id/receive_invite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:maxWidth="@dimen/photos_partneraccount_onboarding_v2_receive_title_max_width"
                    android:text="@string/photos_partneraccount_onboarding_v2_receive_partner_invitation_title_generic"
                    android:textAlignment="center"/>
                <TextView
                    android:textAppearance="@style/PartnerSharing.BodyMedium.OnSurfaceVariant"
                    android:gravity="center_horizontal"
                    android:id="@+id/receive_invite_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/photos_partneraccount_onboarding_v2_receive_title_max_width"
                    android:text="@string/photos_partneraccount_onboarding_v2_receive_partner_invitation_subtitle"
                    android:textAlignment="center"/>
            </LinearLayout>
        </ScrollView>
        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:background="?android:attr/colorBackground"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">
            <ImageView
                android:id="@+id/account_avatar"
                android:layout_width="@dimen/photos_partneraccount_onboarding_v2_receive_account_avatar_size"
                android:layout_height="@dimen/photos_partneraccount_onboarding_v2_receive_account_avatar_size"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/PartnerSharing.LabelLarge.Inactive"
                android:ellipsize="end"
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="@font/google_sans_medium"
                android:layout_marginStart="12dp"
                android:letterSpacing="0.02"
                app:layout_constraintStart_toEndOf="@+id/account_avatar"
                app:layout_constraintTop_toBottomOf="parent"/>
            <TextView
                android:textAppearance="@style/PartnerSharing.BodySmall.OnSurfaceVariant"
                android:ellipsize="end"
                android:id="@+id/account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintStart_toEndOf="@+id/account_avatar"
                app:layout_constraintTop_toBottomOf="@+id/account_name"/>
            <include layout="@layout/photos_partneraccount_onboarding_v2_receive_invitation_review_response_buttons"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</com.google.android.apps.photos.insetview.WindowInsetsView>
