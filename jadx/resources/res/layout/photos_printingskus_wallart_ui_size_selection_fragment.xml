<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/banner"
        support:layout_constraintTop_toTopOf="parent"
        layout="@layout/photos_printingskus_common_promotion_banner_text"/>
    <com.google.android.apps.photos.printingskus.wallart.p029ui.SizeCanvasPreviewLayout
        android:id="@+id/preview_layout"
        android:background="?attr/wallartBackground"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        support:layout_constraintBottom_toTopOf="@+id/size_selection_header"
        support:layout_constraintTop_toBottomOf="@+id/banner"/>
    <TextView
        android:id="@+id/size_selection_header"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_printingskus_wallart_ui_size_selection_section_header"
        support:layout_constraintBottom_toTopOf="@+id/size_selection_container"
        support:layout_constraintStart_toStartOf="parent"
        style="@style/photos_printingskus_wallart_ui_section_header"/>
    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/size_selection_container"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingStart="@dimen/photos_printingskus_wallart_ui_switching_button_carousel_padding"
        android:paddingEnd="@dimen/photos_printingskus_wallart_ui_switching_button_carousel_padding"
        support:layoutManager="android.support.v7.widget.LinearLayoutManager"
        support:layout_constraintBottom_toTopOf="@+id/next"/>
    <TextView
        android:id="@+id/default_size_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        support:layout_constraintBottom_toBottomOf="@+id/next"
        support:layout_constraintEnd_toStartOf="@+id/next"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="@+id/next"
        style="@style/Widget.Photos.Wallart.TextView.DefaultTextIndicator"/>
    <Button
        android:textColor="?attr/photosPrimary"
        android:id="@+id/next"
        android:text="@string/photos_printingskus_wallart_ui_bottom_buttons_next"
        android:backgroundTint="?attr/photosSurface2"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        style="@style/wall_art_bottom_right_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
