<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <TextView
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="28dp"
            android:text="@string/photos_printingskus_kioskprints_ui_pickup_title"
            android:fontFamily="@font/google_sans"
            android:textAlignment="center"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/photos_printingskus_kioskprints_ui_pickup_refresh_button"
            style="@style/Widget.Photos.Button.StrokedButton"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kiosk_code_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Overline"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/photos_printingskus_kioskprints_ui_pickup_reference_number"
                    android:textAllCaps="true"
                    android:textAlignment="center"/>
                <TextView
                    android:textSize="24sp"
                    android:textColor="?attr/colorOnSurface"
                    android:id="@+id/kiosk_reference_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/google_sans"
                    android:textAlignment="center"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Overline"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/photos_printingskus_kioskprints_ui_pickup_passcode"
                    android:textAllCaps="true"
                    android:textAlignment="center"/>
                <TextView
                    android:textSize="24sp"
                    android:textColor="?attr/colorOnSurface"
                    android:id="@+id/kiosk_passcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/google_sans"
                    android:textAlignment="center"/>
                <View
                    android:background="?attr/colorOutline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"/>
                <com.google.android.material.button.MaterialButton
                    android:textAppearance="@style/TextAppearance.Photos.Body2"
                    android:textColor="?attr/colorOnSurface"
                    android:id="@+id/how_to_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:text="@string/photos_printingskus_kioskprints_ui_how_to_button"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:textAlignment="textStart"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    support:icon="@drawable/quantum_gm_ic_arrow_forward_vd_theme_24"
                    support:iconGravity="end"
                    support:iconTint="?attr/photosPrimary"
                    style="@style/Widget.Photos.Button.Borderless"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body1"
            android:id="@+id/location_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_kioskprints_ui_pickup_print_in_store"
            android:drawablePadding="20dp"
            android:layout_marginStart="4dp"
            support:drawableStartCompat="@drawable/quantum_gm_ic_location_on_vd_theme_24"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="start"
            android:id="@+id/nearby_stores_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_printingskus_kioskprints_ui_pickup_view_nearby_stores"
            android:layout_marginStart="40dp"
            style="@style/Widget.Photos.Button.Borderless"/>
        <include layout="@layout/photos_printingskus_kioskprints_ui_pickup_order_details"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
