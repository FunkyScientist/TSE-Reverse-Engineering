<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/peoplekit_facerows_top_padding"
    android:paddingRight="@dimen/peoplekit_facerows_item_spacing_padding"
    android:paddingBottom="@dimen/peoplekit_facerows_top_padding"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/peoplekit_facerows_item_width"
    android:layout_height="match_parent"
    android:foreground="@drawable/peoplekit_facerow_item_background_ripple_gm3"
    android:paddingEnd="@dimen/peoplekit_facerows_item_spacing_padding">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/peoplekit_facerows_more_button"
        android:background="@drawable/peoplekit_circle_outline"
        android:layout_width="@dimen/peoplekit_avatar_size"
        android:layout_height="@dimen/peoplekit_avatar_size"
        android:scaleType="centerInside"
        android:tint="?attr/colorOutline"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/quantum_ic_more_horiz_vd_theme_24"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/peoplekit_facerows_more_text"
        android:paddingLeft="@dimen/peoplekit_facerows_item_end_padding"
        android:paddingRight="@dimen/peoplekit_facerows_item_end_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/peoplekit_facerows_item_top_padding"
        android:text="@string/peoplekit_show_more"
        android:maxLines="1"
        android:layout_below="@+id/peoplekit_facerows_more_button"
        android:layout_centerInParent="true"
        android:fontFamily="@font/google_sans_medium"
        android:paddingStart="@dimen/peoplekit_facerows_item_end_padding"
        android:paddingEnd="@dimen/peoplekit_facerows_item_end_padding"/>
</RelativeLayout>
