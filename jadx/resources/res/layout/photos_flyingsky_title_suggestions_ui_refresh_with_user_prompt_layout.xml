<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/user_prompt_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/refresh_button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/photos_flyingsky_title_suggestions_ui_user_prompt"/>
    <include
        android:id="@+id/refresh_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_prompt_button_layout"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/photos_flyingsky_title_suggestions_ui_refresh_layout"/>
    <EditText
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:id="@+id/user_prompt_edit_text"
        android:background="@drawable/photos_flyingsky_title_suggestions_ui_user_prompt_background"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="@string/photos_flyingsky_title_suggestions_ui_add_details_to_include"
        android:maxLines="2"
        android:maxLength="50"
        android:inputType="textAutoCorrect"
        android:layout_marginEnd="4dp"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@+id/refresh_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/refresh_button"
        android:background="@drawable/photos_flyingsky_title_suggestions_ui_refresh_button_background"
        android:visibility="gone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_prompt_edit_text">
        <ImageButton
            android:layout_gravity="center"
            android:background="@null"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="@dimen/photos_flyingsky_title_suggestions_ui_edit_button_size"
            android:layout_height="@dimen/photos_flyingsky_title_suggestions_ui_edit_button_size"
            android:contentDescription="@null"
            app:srcCompat="@drawable/gs_refresh_vd_theme_24"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
