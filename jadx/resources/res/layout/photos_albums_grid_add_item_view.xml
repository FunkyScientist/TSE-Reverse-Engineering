<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.photos.theme.SquareImageView
        android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
        android:layout_gravity="center"
        android:id="@+id/photos_albums_grid_add_item_button"
        android:background="@drawable/photos_albums_grid_add_item_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="center"
        android:contentDescription="@null"
        app:srcCompat="@drawable/quantum_gm_ic_add_vd_theme_24"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/album_cover_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="2dp"
        android:text="@string/photos_albums_grid_add_album"
        android:maxLines="2"
        android:lineSpacingExtra="2dp"
        style="@style/Photos.Albums.Grid.AddItemText"/>
</LinearLayout>
