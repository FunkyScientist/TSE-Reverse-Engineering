<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp">
    <android.support.v7.widget.AppCompatTextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:id="@+id/photos_sdcard_ui_tutorial_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:text="@string/photos_sdcard_ui_tutorial_subtitle"/>
    <LinearLayout style="@style/photos_sdcard_ui_tutorial_step_linear_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photos_sdcard_ui_tutorial_step_1"
            style="@style/photos_sdcard_ui_tutorial_step_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/photos_sdcard_ui_tutorial_step_1_description"
            style="@style/photos_sdcard_ui_tutorial_step_text"/>
    </LinearLayout>
    <LinearLayout style="@style/photos_sdcard_ui_tutorial_step_linear_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photos_sdcard_ui_tutorial_step_2"
            style="@style/photos_sdcard_ui_tutorial_step_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/photos_sdcard_ui_tutorial_step_2_description"
            android:drawablePadding="2dp"
            app:drawableEndCompat="@drawable/photos_quantum_gm_ic_more_vert_vd_theme_18"
            style="@style/photos_sdcard_ui_tutorial_step_text"/>
    </LinearLayout>
    <LinearLayout style="@style/photos_sdcard_ui_tutorial_step_linear_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photos_sdcard_ui_tutorial_step_3"
            style="@style/photos_sdcard_ui_tutorial_step_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/photos_sdcard_ui_tutorial_step_3_description"
            style="@style/photos_sdcard_ui_tutorial_step_text"/>
    </LinearLayout>
    <LinearLayout style="@style/photos_sdcard_ui_tutorial_step_linear_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photos_sdcard_ui_tutorial_step_4"
            style="@style/photos_sdcard_ui_tutorial_step_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/photos_sdcard_ui_tutorial_step_4_description"
            style="@style/photos_sdcard_ui_tutorial_step_text"/>
    </LinearLayout>
    <LinearLayout style="@style/photos_sdcard_ui_tutorial_step_linear_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photos_sdcard_ui_tutorial_step_5"
            style="@style/photos_sdcard_ui_tutorial_step_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/photos_sdcard_ui_tutorial_step_5_description"
            style="@style/photos_sdcard_ui_tutorial_step_text"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/photos_sdcard_ui_tutorial_help_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:minHeight="48dp">
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:textColor="?attr/photosOnSurfaceVariant"
            android:linksClickable="?attr/photosSurface2"
            android:id="@+id/photos_sdcard_ui_tutorial_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:theme="@style/ThemeOverlay.Photos.DayNight.Primary"
            android:id="@+id/photos_sdcard_ui_tutorial_clickable_icon"
            android:padding="4dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/quantum_gm_ic_open_in_new_vd_theme_24"/>
    </LinearLayout>
    <Button
        android:gravity="center"
        android:id="@+id/photos_sdcard_ui_tutorial_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/photos_sdcard_ui_tutorial_get_started_button"
        style="@style/Widget.Photos.BoldButton"/>
</LinearLayout>
