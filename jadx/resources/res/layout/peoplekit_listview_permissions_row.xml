<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/peoplekit_listview_permissions_row"
    android:background="@color/quantum_white_100"
    android:layout_width="match_parent"
    android:layout_height="@dimen/peoplekit_listview_row_height">
    <RelativeLayout
        android:id="@+id/peoplekit_listview_show_contacts_icon"
        android:background="@drawable/peoplekit_listview_blue_circle"
        android:layout_width="@dimen/peoplekit_listview_row_avatar_size"
        android:layout_height="@dimen/peoplekit_listview_row_avatar_size"
        android:layout_marginLeft="@dimen/peoplekit_listview_row_padding"
        android:layout_marginTop="@dimen/peoplekit_listview_row_top_padding"
        android:layout_marginBottom="@dimen/peoplekit_listview_row_top_padding"
        android:layout_marginStart="@dimen/peoplekit_listview_row_padding">
        <android.support.v7.widget.AppCompatImageView
            android:theme="@style/peoplekit_listview_blue_tint"
            android:layout_width="@dimen/peoplekit_listview_inner_avatar_size"
            android:layout_height="@dimen/peoplekit_listview_inner_avatar_size"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/quantum_gm_ic_person_add_vd_theme_24"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/peoplekit_listview_row_text_size"
        android:textColor="@color/google_blue600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/peoplekit_listview_row_padding"
        android:layout_marginRight="@dimen/peoplekit_listview_row_padding"
        android:text="@string/peoplekit_listview_show_phone_contacts"
        android:layout_centerVertical="true"
        android:fontFamily="@font/google_sans_medium"
        android:layout_marginStart="@dimen/peoplekit_listview_row_padding"
        android:layout_marginEnd="@dimen/peoplekit_listview_row_padding"
        android:layout_toEndOf="@+id/peoplekit_listview_show_contacts_icon"/>
</RelativeLayout>
