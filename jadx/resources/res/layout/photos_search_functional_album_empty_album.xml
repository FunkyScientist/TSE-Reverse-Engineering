<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="28dp"
    android:paddingTop="12dp"
    android:paddingRight="28dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="28dp"
    android:paddingVertical="12dp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/photos_album_emptystate_220x204dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.HeadlineSmall"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/photos_search_functional_album_empty_title"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
