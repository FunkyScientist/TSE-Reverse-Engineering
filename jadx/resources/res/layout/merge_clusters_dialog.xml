<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp">
        <ImageView
            android:id="@+id/old_cluster_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/new_cluster_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/photos_search_peoplelabeling_merge_dialog_title"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:textColor="?attr/photosOnSurfaceVariantFaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_search_peoplelabeling_merge_dialog_message"/>
</LinearLayout>
