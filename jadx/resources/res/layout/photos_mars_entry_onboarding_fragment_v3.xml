<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">
    <ImageView
        android:id="@+id/exit_mars_onboarding_button"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:contentDescription="@string/photos_strings_dismiss_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="224dp"
        android:layout_height="128dp"
        android:src="@drawable/photos_mars_entry_setup"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit_mars_onboarding_button"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline4"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_vertical"
        android:id="@+id/mars_onboarding_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_image"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/mars_get_started_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mars_onboarding_title_text">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/onboarding_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:gravity="start|center_vertical"
                android:id="@+id/onboarding_information_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_mars_entry_onboarding_items_secure_v3"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/quantum_gm_ic_visibility_off_vd_theme_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:gravity="start|center_vertical"
                android:id="@+id/onboarding_information_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/photos_mars_entry_onboarding_items_locked_v3"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/quantum_gm_ic_screen_lock_portrait_vd_theme_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:gravity="start|center_vertical"
                android:id="@+id/onboarding_information_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/photos_mars_entry_onboarding_items_copies"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/quantum_gm_ic_copy_all_vd_theme_24"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/mars_get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/photos_mars_entry_onboarding_get_started_v3"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/learn_more_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/learn_more_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/photos_strings_learn_more"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Photos.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>
