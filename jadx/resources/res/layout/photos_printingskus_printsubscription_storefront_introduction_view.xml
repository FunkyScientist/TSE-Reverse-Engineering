<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <include
        android:id="@+id/premium_prints_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        layout="@layout/photos_printingskus_printsubscription_storefront_introduction_item"/>
    <include
        android:id="@+id/suggestions_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        layout="@layout/photos_printingskus_printsubscription_storefront_introduction_item"/>
    <include
        android:id="@+id/skip_month_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        layout="@layout/photos_printingskus_printsubscription_storefront_introduction_item"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Headline6"
        android:textColor="?attr/colorOnBackground"
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="16dp"
        android:text="@string/photos_printingskus_printsubscription_storefront_ideas"
        android:layout_marginHorizontal="16dp"/>
    <ImageView
        android:id="@+id/inspiration_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/inspiration_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24dp"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        layout="@layout/photos_printingskus_printsubscription_storefront_product_options"/>
</LinearLayout>
