<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/invite_banner"
    android:paddingLeft="@dimen/photos_album_ui_invitetoalbum_banner_horizontal_margin"
    android:paddingRight="@dimen/photos_album_ui_invitetoalbum_banner_horizontal_margin"
    android:paddingBottom="@dimen/photos_album_ui_invitetoalbum_banner_bottom_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/photos_album_ui_invitetoalbum_banner_horizontal_margin">
    <ImageView
        android:id="@+id/invite_banner_beak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/photos_album_ui_invite_banner_beak_up"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/invite_banner_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/photos_album_ui_invitetoalbum_banner_corner_radius"
        app:strokeWidth="0dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/invite_banner_face_clusters"
                android:padding="1dp"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp">
                <ImageView
                    android:layout_gravity="start|bottom"
                    android:id="@+id/invite_banner_face_one"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>
                <ImageView
                    android:layout_gravity="end|top"
                    android:id="@+id/invite_banner_face_two"
                    android:background="@drawable/photos_album_ui_invite_face_cluster_background"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>
            </FrameLayout>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/invite_banner_single_face_cluster"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="6dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/invite_banner_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_album_ui_invitetoalbum_title"
                android:drawablePadding="16dp"
                android:layout_weight="1"
                android:lineSpacingExtra="6sp"
                android:layout_marginStart="16dp"
                android:drawableTint="?attr/colorPrimary"
                app:drawableStartCompat="@drawable/quantum_gm_ic_lightbulb_outline_vd_theme_24"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/dismiss_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/photos_strings_dismiss_button"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
