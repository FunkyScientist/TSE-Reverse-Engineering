<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/smart_cleanup_view"
    android:background="@drawable/photos_cloudstorage_kirby_smart_cleanup_suggestion_background"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginHorizontal="8dp">
    <ImageView
        android:id="@+id/smart_cleanup_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:tint="@color/photos_cloudstorage_kirby_smart_cleanup_suggestion_icon_color"
        android:contentDescription="@null"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:id="@+id/smart_cleanup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="center"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodySmall"
        android:id="@+id/smart_cleanup_estimate"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="28dp"
        android:textAlignment="center"/>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/estimate_shimmer_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        style="@style/FocusModeLoadingShimmer">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorOutlineVariant"
            app:cardCornerRadius="8dp"
            app:strokeWidth="0dp">
            <TextView
                android:layout_width="48dp"
                android:layout_height="12dp"
                android:textAlignment="center"/>
        </com.google.android.material.card.MaterialCardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>
