<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/pixel_offer_layout"
    android:background="@drawable/photos_cloudstorage_ui_storageprogressbar_pixel_offer_background"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:tint="?attr/photosOnSurfaceVariant"
        android:contentDescription="@null"
        app:srcCompat="@drawable/quantum_gm_ic_phone_android_vd_theme_24"/>
    <TextView
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/pixel_offer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:lineHeight="20dp"/>
</LinearLayout>
