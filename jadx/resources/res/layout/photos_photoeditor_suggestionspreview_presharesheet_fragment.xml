<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/google_black"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/photos_photoeditor_suggestionspreview_presharesheet_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_photoeditor_suggestionspreview_presharesheet_fragment_title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_photoeditor_suggestionspreview_presharesheet_fragment_description"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_gravity="center"
        android:id="@+id/photos_photoeditor_fragments_suggestionspreview_preview"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/photos_photoeditor_suggestionspreview_presharesheet_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photos_photoeditor_suggestionspreview_presharesheet_header"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/photos_photoeditor_suggestionspreview_presharesheet_toolbar"
        android:background="@color/google_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_photoeditor_preview_toolbar_height"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/actionBarStyle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photos_photoeditor_suggestionspreview_cancel"
                android:padding="7dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:backgroundTint="#1b1b1b"
                app:icon="@drawable/gs_close_vd_theme_24"
                app:iconSize="18dp"
                app:iconTint="@color/google_white"
                style="?attr/materialIconButtonFilledStyle"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photos_photoeditor_suggestionspreview_presharesheet_crop_button"
                android:padding="7dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:backgroundTint="#1b1b1b"
                app:icon="@drawable/gs_crop_rotate_vd_theme_24"
                app:iconSize="18dp"
                app:iconTint="@color/google_white"
                style="?attr/materialIconButtonFilledStyle"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/google_grey900"
                android:id="@+id/photos_photoeditor_preview_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_strings_next_button"
                android:layout_alignParentEnd="true"
                android:backgroundTint="?attr/photosPrimary"
                style="@style/Widget.Photos.Button.ElevatedButton"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>
