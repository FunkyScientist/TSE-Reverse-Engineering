<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.photos.avatar.collage.CircularCollageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="@+id/partner_sharing_icon"
        app:layout_constraintTop_toTopOf="@+id/partner_sharing_icon"
        app:layout_goneMarginStart="16dp"
        app:layout_goneMarginTop="4dp"/>
    <ImageView
        android:id="@+id/partner_sharing_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/photos_partneraccount_res_partner_sharing_icon_with_background_24"
        android:contentDescription="@null"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Button"
        android:textColor="?attr/photosPrimary"
        android:gravity="center"
        android:id="@+id/view_button"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="@string/photos_sharingtab_sharehub_partner_view_all"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/title_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/view_button"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subhead1"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawablePadding="4dp"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Body2"
        android:ellipsize="end"
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/photos_sharingtab_sharehub_partner_incoming_invite_badge_diameter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/title_container"
        app:layout_constraintStart_toStartOf="@+id/title_container"
        app:layout_constraintTop_toBottomOf="@+id/title_container"/>
</android.support.constraint.ConstraintLayout>
