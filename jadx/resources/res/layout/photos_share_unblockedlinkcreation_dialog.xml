<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/warning_icon"
            android:padding="2dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:tint="?attr/colorPrimary"
            android:contentDescription="@null"
            app:srcCompat="@drawable/photos_share_unblockedlinkcreation_dialog_uploading_icon"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.TitleLarge"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/photos_share_unblockedlinkcreation_dialog_title"
            android:textAlignment="center"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
            android:id="@+id/description"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/photos_share_unblockedlinkcreation_dialog_description"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="24dp"/>
    </LinearLayout>
</ScrollView>
