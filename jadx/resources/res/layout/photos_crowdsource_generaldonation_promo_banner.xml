<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/generaldonation_banner"
    android:background="@drawable/photos_crowdsource_generaldonation_banner_background"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photos_crowdsource_generaldonation_ic_search_tab_illustration"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:textStyle="bold"
        android:textColor="@color/photos_crowdsource_generaldonation_on_background_color"
        android:gravity="start"
        android:id="@+id/banner_title"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photos_crowdsource_generaldonation_promo_crowdsource"
        android:maxLines="1"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/photos_crowdsource_generaldonation_ic_crowdsource_vd_color_24"
        android:layout_marginStart="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toStartOf="@+id/dismiss_banner_button"
        app:layout_constraintStart_toEndOf="@+id/banner_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
        android:textStyle="bold"
        android:textColor="@color/photos_crowdsource_generaldonation_on_background_color"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/promo_title"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photos_crowdsource_generaldonation_promo_title"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/dismiss_banner_button"
        app:layout_constraintStart_toEndOf="@+id/banner_image"
        app:layout_constraintTop_toBottomOf="@+id/banner_title"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.BodySmall"
        android:textColor="@color/photos_crowdsource_generaldonation_on_background_color"
        android:ellipsize="end"
        android:id="@+id/promo_desc"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photos_crowdsource_generaldonation_promo_desc_long"
        android:maxLines="3"
        android:textAlignment="viewStart"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dismiss_banner_button"
        app:layout_constraintStart_toEndOf="@+id/banner_image"
        app:layout_constraintTop_toBottomOf="@+id/promo_title"/>
    <ImageButton
        android:id="@+id/dismiss_banner_button"
        android:background="@color/google_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:tint="@color/photos_crowdsource_generaldonation_on_background_color"
        android:contentDescription="@string/photos_crowdsource_generaldonation_promo_close"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>
