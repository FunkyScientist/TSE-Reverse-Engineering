<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Photos.Dialog.Progress"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Subtitle2"
            android:layout_gravity="start|top"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Caption"
            android:layout_gravity="start|top"
            android:id="@+id/message"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:indeterminate="false"
            style="@style/Widget.Photos.LinearProgressIndicator"/>
    </LinearLayout>
    <ImageButton
        android:layout_gravity="end|top"
        android:id="@+id/cancel_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:contentDescription="@android:string/cancel"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/quantum_gm_ic_close_vd_theme_24"/>
</FrameLayout>
