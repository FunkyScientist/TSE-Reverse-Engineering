<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="@dimen/photos_printingskus_storefront_librarybanner_carousel_item_width_large"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/photos_printingskus_storefront_librarybanner_carousel_item_margin"
    android:layout_marginEnd="@dimen/photos_printingskus_storefront_librarybanner_carousel_item_margin"
    app:cardBackgroundColor="@color/photos_daynight_grey100"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/photos_printingskus_storefront_librarybanner_height"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="0.5"/>
        <FrameLayout
            android:layout_gravity="start|center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingEnd="16dp"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.Photos.Subhead2"
                    android:textColor="@color/photos_daynight_grey900"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="locale"
                    android:textAlignment="gravity"/>
                <TextView
                    android:id="@+id/description"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="locale"
                    android:textAlignment="gravity"
                    style="@style/TextAppearance.Photos.Caption"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
