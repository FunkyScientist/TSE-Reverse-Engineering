<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Photos_WidgetTheme"
    android:id="@android:id/background"
    android:background="@drawable/photos_widget_background_transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true">
    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/widget_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_widget_gradient_height"
        android:src="@drawable/photos_widget_gradient"
        android:layout_alignBottom="@+id/widget_image"
        android:contentDescription="@null"
        android:layout_alignStart="@+id/widget_image"
        android:layout_alignEnd="@+id/widget_image"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Subtitle2"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/photos_widget_caption_margin_bottom"
        android:maxLines="2"
        android:layout_alignBottom="@+id/widget_image"
        android:layout_marginStart="@dimen/photos_widget_caption_margin"
        android:layout_marginEnd="@dimen/photos_widget_caption_margin"
        android:layout_alignStart="@+id/widget_image"
        android:layout_alignEnd="@+id/widget_image"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Caption"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:id="@+id/widget_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_above="@+id/widget_title"
        android:layout_marginStart="@dimen/photos_widget_caption_margin"
        android:layout_marginEnd="@dimen/photos_widget_caption_margin"
        android:layout_alignStart="@+id/widget_image"
        android:layout_alignEnd="@+id/widget_image"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Photos.Overline"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/widget_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/photos_widget_caption_margin_bottom"
        android:maxLines="1"
        android:layout_alignBottom="@+id/widget_image"
        android:layout_marginStart="@dimen/photos_widget_caption_margin"
        android:layout_marginEnd="@dimen/photos_widget_caption_margin"
        android:layout_alignStart="@+id/widget_image"
        android:layout_alignEnd="@+id/widget_image"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/widget_feedback_layout"
        android:background="@drawable/photos_widget_feedback_background"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/widget_feedback_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            android:contentDescription="@null"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Button"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/widget_feedback_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>
