<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/autobackuppromos_grid_persistent_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/photos_autobackuppromos_grid_persistent_banner_error_background_color"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/photos_autobackuppromos_grid_persistent_banner_error_color"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quantum_ic_error_red_24"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleSmall"
                android:textColor="@color/photos_autobackuppromos_grid_persistent_banner_title_color"
                android:gravity="center_vertical"
                android:id="@+id/autobackuppromos_grid_persistent_banner_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_autobackuppromos_grid_title"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/autobackuppromos_grid_persistent_banner_text"
                app:layout_constraintEnd_toStartOf="@+id/autobackuppromos_grid_persistent_banner_learn_more_button"
                app:layout_constraintStart_toEndOf="@+id/icon"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.BodyMedium"
                android:textColor="@color/photos_autobackuppromos_grid_persistent_banner_text_color"
                android:gravity="center_vertical"
                android:id="@+id/autobackuppromos_grid_persistent_banner_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/photos_autobackuppromos_grid_text"
                app:layout_constraintEnd_toStartOf="@+id/autobackuppromos_grid_persistent_banner_learn_more_button"
                app:layout_constraintStart_toStartOf="@+id/autobackuppromos_grid_persistent_banner_title"
                app:layout_constraintTop_toBottomOf="@+id/autobackuppromos_grid_persistent_banner_title"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/photos_autobackuppromos_grid_persistent_banner_error_color"
                android:id="@+id/autobackuppromos_grid_persistent_banner_learn_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/photos_autobackuppromos_grid_learn_more_button_text"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/autobackuppromos_grid_persistent_banner_action_button"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Photos.Button.Borderless"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/photos_autobackuppromos_grid_persistent_banner_color_white"
                android:id="@+id/autobackuppromos_grid_persistent_banner_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_strings_take_action"
                app:backgroundTint="@color/photos_autobackuppromos_grid_persistent_banner_error_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
