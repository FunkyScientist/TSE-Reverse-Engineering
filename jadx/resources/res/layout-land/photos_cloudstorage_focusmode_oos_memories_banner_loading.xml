<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginRight="@dimen/photos_cloudstorage_focusmode_banner_margin"
    android:layout_marginHorizontal="@dimen/photos_cloudstorage_focusmode_banner_margin"
    style="@style/FocusModeLoadingShimmer">
    <com.google.android.material.card.MaterialCardView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/photos_cloudstorage_focusmode_corner_radius"
        app:strokeWidth="0dp"
        style="@style/Widget.Material3.CardView.Filled">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.TitleSmall"
                android:id="@+id/oos_memories_banner_title_loading"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_cloudstorage_focusmode_oos_memories_banner_title"
                android:textAlignment="textStart"
                android:layout_marginEnd="48dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/oos_memories_banner_buy_storage_button_loading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
                android:id="@+id/oos_memories_banner_buy_storage_button_loading"
                android:paddingLeft="24dp"
                android:paddingTop="10dp"
                android:paddingRight="24dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_cloudstorage_focusmode_smart_cleanup_large_items"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="@style/TextAppearance.Photos.LabelLarge"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/photos_cloudstorage_focusmode_smart_cleanup_blurry"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="@+id/oos_memories_banner_title_loading"
        app:layout_constraintTop_toBottomOf="@+id/oos_memories_banner_title_loading"/>
</com.facebook.shimmer.ShimmerFrameLayout>
