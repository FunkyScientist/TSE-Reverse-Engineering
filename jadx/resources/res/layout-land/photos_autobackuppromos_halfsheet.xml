<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/halfsheet_unbackup_promo"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/start_side"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/end_side"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">
        <ViewStub
            android:id="@+id/unbackup_photos_stub"
            android:layout="@layout/photos_autobackuppromos_halfsheet_photos_group"
            android:inflatedId="@+id/unbackup_photos_inflated_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/end_side"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_side"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Headline5"
                android:gravity="center"
                android:id="@+id/title_text"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="24dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Body2"
                android:gravity="center"
                android:id="@+id/description_text"
                android:paddingLeft="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding"
                android:paddingRight="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/buttons"
                android:paddingLeft="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding"
                android:paddingRight="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/photos_autobackuppromos_halfsheet_land_button_side_padding">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dismiss_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_button_half_spacing"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/turn_on_backup_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_button_half_spacing"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:textColorLink="?attr/photosOnSurfaceVariant"
                android:gravity="center"
                android:id="@+id/disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
                android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
                android:breakStrategy="balanced"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Photos.Caption"
                android:textColor="?attr/photosOnSurfaceVariant"
                android:textColorLink="?attr/photosOnSurfaceVariant"
                android:gravity="center"
                android:id="@+id/learn_more_link"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"
                android:layout_marginEnd="@dimen/photos_autobackuppromos_halfsheet_body_margin_side"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
