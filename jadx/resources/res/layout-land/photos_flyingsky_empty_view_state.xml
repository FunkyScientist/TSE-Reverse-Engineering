<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/photos_flyingsky_emptystate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Headline5"
            android:gravity="center"
            android:id="@+id/photos_flyingsky_emptystate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/photos_flyingsky_fragment_emptyview_welcome_title"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Photos.Body2"
            android:gravity="center"
            android:id="@+id/photos_flyingsky_emptystate_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginHorizontal="40dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photos_flyingsky_emptystate_backup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos_flyingsky_setup_backup_button_text"
                android:textAllCaps="false"
                app:backgroundTint="?attr/photosPrimary"
                style="@style/Widget.Photos.BoldButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photos_flyingsky_emptystate_add_memory_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/photos_flyingsky_create_memory_button_text"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                app:backgroundTint="?attr/colorSecondaryContainer"
                style="@style/Widget.Photos.Button.TonalButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
