<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:support="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hero_carousel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photos_printingskus_storefront_config_herocarousel_slideshow_height_sku_landscape">
    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        support:layout_constraintBottom_toTopOf="@+id/title"
        support:layout_constraintEnd_toStartOf="@+id/info_card_recycler_view"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        layout="@layout/photos_printingskus_storefront_config_herocarousel_hero_card"/>
    <include
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        support:layout_constraintBottom_toTopOf="@+id/promo_surface_recycler_view"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/card"
        layout="@layout/photos_printingskus_storefront_config_contentrow_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/promo_surface_recycler_view"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_printingskus_storefront_config_herocarousel_slideshow_height_regular"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="8dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/info_card_recycler_view"
        android:layout_width="@dimen/photos_printingskus_storefront_config_herocarousel_sku_info_card_landscape_width"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        support:layout_constraintBottom_toBottomOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
